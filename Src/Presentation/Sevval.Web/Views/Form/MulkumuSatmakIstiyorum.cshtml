    <style>
        /* Step göstergeleri - Sevval mavisi uyumlu */
        .step-container { display: flex; justify-content: space-between; margin: 20px 0; padding: 0 10%; }
        .step { flex: 1; text-align: center; position: relative; padding: 10px; }
        .step-number { width: 40px; height: 40px; border-radius: 50%; background: #ffffff; color: #1e88e5; display: inline-block; line-height: 35px; margin-bottom: 5px; transition: all 0.3s; border: 2px solid #1e88e5; font-weight: 700; transform: scale(1);}
        .step.active .step-number { background: #1e88e5; color: #fff; transform: scale(1.08); box-shadow: 0 8px 18px rgba(30,136,229,0.35); }
        .step.completed .step-number { background: #43a047; color: #fff; border-color: #43a047; }
        .step span { color: #1e88e5; font-size: 13px; font-weight: 600; }
        .step:last-child::after { display: none; }
        .step-container:first-child::before { display: none; }
    </style>
    <style>
        .currency-indicator {
            position: absolute;
            right: 15px;
            top: 61%;
            transform: translateY(-50%);
            pointer-events: none;
            color: #6c757d;
        }
    </style>
