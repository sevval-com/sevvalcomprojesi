@{
    ViewData["Title"] = "Ödeme Sayfası";
     Layout = null; // Layout kullanılmıyor
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <div class="container mt-5">
        <h2 class="text-center">Ödeme Sayfası</h2>
        <form action="https://www.paytr.com/odeme" method="POST" id="paytrForm">
            <input type="hidden" name="merchant_id" value="534348" />
            <input type="hidden" name="merchant_key" value="tXxn5WBHB9X3Funt" />
            <input type="hidden" name="merchant_salt" value="wcQ5qi1XayCdK1N4" />
            <input type="hidden" name="amount" value="1000" /> <!-- Ödenecek miktar -->
            <input type="hidden" name="success_url" value="https://www.sevval.com/success" />
            <input type="hidden" name="fail_url" value="https://www.sevval.com/fail" />

            <button type="submit" class="btn btn-primary w-100">Ödemeyi Gerçekleştir</button>
        </form>

        <div class="mt-4">
            <h5>Ödeme Seçenekleri</h5>
            <iframe src="https://www.paytr.com/iframe" width="100%" height="600px" frameborder="0"></iframe>
        </div>
    </div>

</body>
</html>
