@model TumIlanlarDTO
@using Sevval.Domain.Entities

@{
    ViewData["Title"] = "Üyelikler";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <style>
        body {
            background-color: #f0f2f5;
        }

        .sidebar {
            width: 280px;
            min-height: 100vh;
            background-color: #fff;
            box-shadow: 0 0 2rem rgba(0,0,0,0.05);
        }

            .sidebar .nav-link {
                color: #343a40;
                font-size: 0.95rem;
                padding: 0.85rem 1.5rem;
                transition: all 0.2s ease;
                border-left: 4px solid transparent;
                border-radius: 0;
                margin-bottom: 2px;
            }

                .sidebar .nav-link:hover {
                    color: #0d6efd;
                    background-color: #e7f1ff;
                }

                .sidebar .nav-link.active {
                    color: #0d6efd;
                    background-color: #e7f1ff;
                    border-left-color: #0d6efd;
                    font-weight: 500;
                }

                .sidebar .nav-link i {
                    width: 25px;
                    text-align: center;
                    color: #0d6efd;
                }

            .sidebar .site-home-link {
                background-color: #0d6efd;
                color: white;
                font-weight: bold;
                border-radius: .25rem;
            }

                .sidebar .site-home-link:hover {
                    background-color: #0b5ed7;
                }

        .content {
            width: 100%;
            overflow-y: auto;
            height: 100vh;
        }

        .sidebar-wrapper {
            position: sticky;
            top: 0;
            height: 100vh;
        }

        .offcanvas .nav-link {
            color: #343a40;
        }

            .offcanvas .nav-link.active {
                font-weight: bold;
                color: #0d6efd;
            }

        .password-container .eye-toggle {
            position: absolute;
            top: 50%;
            right: 10px;
            transform: translateY(-50%);
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar-wrapper d-none d-lg-block" id="sidebar">
            <nav class="sidebar p-3 h-100 d-flex flex-column">
                <div class="text-center py-3">
                    <img src="~/images/favlogo.webp" alt="Şevval Ofis Logo" class="img-fluid mb-3" style="max-width: 100px;">
                    <h4 class="fw-bold text-primary">Şevval Ofis</h4>
                </div>
                <hr>
                <ul class="nav flex-column mb-auto">
                    <li class="nav-item"><a class="nav-link active" href="@Url.Action("Index", "SevvalOfis")"><i class="bi bi-pie-chart-fill me-2"></i> Özet</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Uyelikler", "SevvalOfis")"><i class="bi bi-people-fill me-2"></i> Üyelikler</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("SehirlereGoreEmlakcilar", "SevvalOfis")"><i class="bi bi-building me-2"></i> Şehirlere Göre Emlakçılar</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("BireyselKullanicilar", "SevvalOfis")"><i class="bi bi-person-fill me-2"></i> Bireysel Kullanıcılar</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "IlanYonetim")"><i class="bi bi-clipboard2-data-fill me-2"></i> İlan Yönetimi</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "IlanTakip")"><i class="bi bi-search me-2"></i> Bireysel İlan Takip</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("IlanTalepTakip", "SevvalOfis")"><i class="bi bi-card-list me-2"></i> İlan Talep Takip</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("GununIlaniTakip", "SevvalOfis")"><i class="bi bi-calendar-event-fill me-2"></i> Günün İlanı Takip</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("AfisTalepler", "SevvalOfis")"><i class="bi bi-card-checklist me-2"></i> Afiş Talepleri</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("MailGonder", "SevvalOfis")"><i class="bi bi-envelope-fill me-2"></i> Mail Gönder</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("SmsMesaj", "SevvalOfis")"><i class="bi bi-chat-dots-fill me-2"></i> SMS Mesaj</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("EidsOnayliKullanicilar", "SevvalOfis")"><i class="bi bi-check-circle me-2"></i> EİDS Onaylı Kullanıcılar</a></li>
                    <li class="nav-item mt-auto p-3"><a class="nav-link site-home-link text-center" href="/"><i class="bi bi-house-door-fill me-2"></i> Siteye Geri Dön</a></li>
                </ul>
                <div class="mt-auto">
                    <a class="nav-link site-home-link text-center" href="/"><i class="bi bi-house-door-fill me-2"></i> Siteye Geri Dön</a>
                </div>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="content p-4">
            <button class="btn btn-primary d-lg-none mb-3" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebarOffcanvas" aria-controls="sidebarOffcanvas">
                <i class="bi bi-list"></i>
            </button>
            <h1 class="display-5 fw-bold mb-4">Üyelikler</h1>

            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body">
                    <!-- Filters -->
                    <div class="d-flex flex-column align-items-center mb-4">
                        <div class="btn-group flex-wrap" role="group">
                            <input type="radio" class="btn-check" name="userType" value="All" id="all" @(ViewBag.Filter == "All" ? "checked" : "") onchange="location.href='?filter=All&page=1&pageSize=@ViewBag.PageSize'">
                            <label class="btn btn-outline-primary" for="all">Tümü</label>

                            <input type="radio" class="btn-check" name="userType" value="Bireysel" id="bireysel" @(ViewBag.Filter == "Bireysel" ? "checked" : "") onchange="location.href='?filter=Bireysel&page=1&pageSize=@ViewBag.PageSize'">
                            <label class="btn btn-outline-primary" for="bireysel">Bireysel</label>

                            <input type="radio" class="btn-check" name="userType" value="Kurumsal" id="kurumsal" @(ViewBag.Filter == "Kurumsal" ? "checked" : "") onchange="location.href='?filter=Kurumsal&page=1&pageSize=@ViewBag.PageSize'">
                            <label class="btn btn-outline-primary" for="kurumsal">Kurumsal</label>

                            <input type="radio" class="btn-check" name="userType" value="ücretsiz" id="ucretsiz" @(ViewBag.Filter == "ücretsiz" ? "checked" : "") onchange="location.href='?filter=ücretsiz&page=1&pageSize=@ViewBag.PageSize'">
                            <label class="btn btn-outline-primary" for="ucretsiz">Ücretsiz</label>

                            <input type="radio" class="btn-check" name="userType" value="ücretli" id="ucretli" @(ViewBag.Filter == "ücretli" ? "checked" : "") onchange="location.href='?filter=ücretli&page=1&pageSize=@ViewBag.PageSize'">
                            <label class="btn btn-outline-primary" for="ucretli">Ücretli</label>
                        </div>
                    </div>

                    <!-- Actions -->
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div>
                            <button type="button" id="bulkDeleteBtn" class="btn btn-outline-primary" disabled onclick="confirmBulkDelete()">
                                <i class="bi bi-trash"></i> Seçilenleri Sil
                            </button>
                            <span id="selectedCount" class="text-muted ms-2 small">0 kayıt seçildi</span>
                        </div>
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addUserModal">
                            <i class="bi bi-plus-circle me-1"></i> Yeni Kullanıcı Ekle
                        </button>
                    </div>

                    <!-- Table -->
                    <form id="bulkDeleteForm" action="@Url.Action("BulkDelete", "SevvalOfis")" method="post">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th><input type="checkbox" id="selectAll" class="form-check-input" onchange="toggleSelectAll()"></th>
                                        <th>#</th>
                                        <th>Kullanıcı Adı</th>
                                        <th>E-Posta</th>
                                        <th>Tipi</th>
                                        <th>Abonelik</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int index = ((ViewBag.CurrentPage - 1) * ViewBag.PageSize) + 1;
                                    }
                                    @foreach (var user in Model.Users)
                                    {
                                        <tr>
                                            <td><input type="checkbox" name="selectedIds" value="@user.Id" class="form-check-input row-checkbox" onchange="updateSelectedCount()"></td>
                                            <td>@index</td>
                                            <td>@user.FirstName @user.LastName</td>
                                            <td>@user.Email</td>
                                            <td><span class="badge bg-primary bg-opacity-10 text-primary">@user.UserTypes</span></td>
                                            <td>
                                                @if (user.IsSubscribed == "ücretli")
                                                {
                                                    <span class="badge bg-primary">Ücretli</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-light text-dark border">Ücretsiz</span>
                                                }
                                            </td>
                                            <td>
                                                <button type="button" class="btn btn-outline-primary btn-sm" onclick="openEditModal('@user.Id', '@user.FirstName', '@user.LastName', '@user.Email', '@user.UserTypes', '@user.CompanyName', '@user.IsSubscribed')">
                                                    <i class="bi bi-pencil"></i>
                                                </button>
                                            </td>
                                        </tr>
                                        index++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit User Modal -->
    <div class="modal fade" id="editUserModal" tabindex="-1">
        <!-- Modal content from previous response, unchanged -->
    </div>

    <!-- Add User Modal -->
    <div class="modal fade" id="addUserModal" tabindex="-1">
        <!-- Modal content from previous response, unchanged -->
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        function toggleSelectAll() {
            document.querySelectorAll('.row-checkbox').forEach(c => c.checked = document.getElementById('selectAll').checked);
            updateSelectedCount();
        }

        function updateSelectedCount() {
            const count = document.querySelectorAll('.row-checkbox:checked').length;
            document.getElementById('selectedCount').textContent = `${count} kayıt seçildi`;
            document.getElementById('bulkDeleteBtn').disabled = count === 0;
            const selectAll = document.getElementById('selectAll');
            const total = document.querySelectorAll('.row-checkbox').length;
            selectAll.checked = count > 0 && count === total;
            selectAll.indeterminate = count > 0 && count < total;
        }

        function confirmBulkDelete() {
            if (confirm(`${document.querySelectorAll('.row-checkbox:checked').length} kullanıcıyı silmek istediğinizden emin misiniz?`)) {
                document.getElementById('bulkDeleteForm').submit();
            }
        }

        function openEditModal(userId, firstName, lastName, email, userTypes, companyName, isSubscribed) {
            $('#editUserId').val(userId);
            $('#editFirstName').val(firstName);
            $('#editLastName').val(lastName);
            $('#editEmail').val(email);
            $('#editUserTypes').val(userTypes);
            $('#editCompanyName').val(companyName);
            $('#editIsSubscribed').val(isSubscribed);
            toggleEditCompanyFields();
            new bootstrap.Modal(document.getElementById('editUserModal')).show();
        }

        function toggleEditCompanyFields() {
            const userType = $('#editUserTypes').val();
            const companySection = $('#editCompanySection');
            if (userType === 'Kurumsal') {
                companySection.show();
                $('#editCompanyName').prop('required', true);
            } else {
                companySection.hide();
                $('#editCompanyName').prop('required', false);
            }
        }
        $('#editUserTypes').on('change', toggleEditCompanyFields);
    </script>
</body>
</html>
