@{
    ViewData["Title"] = "Şevval Ofis";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/sevvalofis.css" rel="stylesheet" />
    <link href="~/css/gununilani.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/echarts@5.3.3/dist/echarts.min.js"></script> <!-- ECharts Kütüphanesi -->
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="sidebar bg-dark text-light">
            <div class="text-center py-4">
                <img src="~/images/favlogo - Copy.png" alt="Şevval Ofis Logo" class="img-fluid rounded-circle mb-3" style="max-width: 120px;">
                <h4>Şevval Ofis</h4>
            </div>

            <!-- Hamburger Button -->
            <button class="hamburger-btn" aria-label="Toggle Navigation">
                <i class="bi bi-list"></i>
            </button>

            <!-- Menü -->
            <ul class="nav flex-column p-3" id="sidebarMenu">
                <li class="nav-item">
                    <a class="nav-link text-light d-flex align-items-center" href="@Url.Action("Index", "SevvalOfis")">
                        <i class="bi bi-people-fill me-2"></i> Özet
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light d-flex align-items-center" href="@Url.Action("Uyelikler", "SevvalOfis")">
                        <i class="bi bi-people-fill me-2"></i> Üyelikler
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light d-flex align-items-center" href="@Url.Action("TumIlanlar", "SevvalOfis")">
                        <i class="bi bi-list-ul me-2"></i> Tüm İlanlar
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light d-flex align-items-center" href="#">
                        <i class="bi bi-diagram-3-fill me-2"></i> Kardeş Firma Takip
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light d-flex align-items-center" href="@Url.Action("GununIlaniTakip", "SevvalOfis")">
                        <i class="bi bi-calendar-event-fill me-2"></i> Günün İlanı Takip
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link text-blue d-flex align-items-center site-home-link" href="/">
                        <i class="bi bi-house-door-fill me-2"></i> Siteye Geri Dön
                    </a>
                </li>
            </ul>

        </nav>



        <!-- Main Content -->
        <div class="flex-grow-1 bg-light p-4">



            <div class="container">
                <h1>Günün İlanı Takip</h1>

                <div class="dropdown-container">
                    <input type="text" id="searchInput" class="form-control" placeholder="İlan ID ile ara..." onkeyup="filterIlanlar()">
                    <select id="ilanDropdown" class="form-select mt-2">
                        <option value="">İlan Seçin</option>
                        @foreach (var ilan in Model.Ilanlar)
                        {
                            <option value="@ilan.Id">@ilan.Id - @ilan.Title</option>
                        }
                    </select>
                </div>
                <button id="siraAlBtn" class="btn btn-primary mt-3">Sıraya Al</button>



                <script>
                    // Arama fonksiyonu
                    function filterIlanlar() {
                        var input, filter, select, options, textValue;
                        input = document.getElementById("searchInput");
                        filter = input.value.toLowerCase();
                        select = document.getElementById("ilanDropdown");
                        options = select.getElementsByTagName("option");

                        for (var i = 0; i < options.length; i++) {
                            textValue = options[i].textContent || options[i].innerText;
                            if (textValue.toLowerCase().indexOf(filter) > -1) {
                                options[i].style.display = "";
                            } else {
                                options[i].style.display = "none";
                            }
                        }
                    }

                    // Sıraya Al butonu tıklama işlemi
                    document.getElementById('siraAlBtn').addEventListener('click', function() {
                        var ilanId = document.getElementById('ilanDropdown').value;
                        if (ilanId) {
                            fetch(`/SevvalOfis/SirayaAl?id=${ilanId}`)
                                .then(response => response.json())
                                .then(data => {
                                    alert('İlan Günün İlanına Eklendi!');
                                    location.reload();  // Sayfayı yenileyerek tabloyu güncelle
                                })
                                .catch(error => {
                                    console.error('Hata:', error);
                                    alert('Bir hata oluştu!');
                                });
                        }
                        else {
                            alert('Lütfen bir ilan seçin!');
                        }
                    });
                </script>



                <!-- İlan Tablosu -->
                <table class="table mt-5">
                    <thead>
                        <tr>
                            <th>Başlık</th>
                            <th>Fiyat</th>
                            <th>Alan (m²)</th>
                            <th>Durum</th>
                            <th>Görüntülenme Durumu</th>
                            <th>Yayınlanma Tarihi</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ilan in ((IEnumerable<GununIlanModel>)Model.GununIlanlari).Where(i => i.YayinlanmaTarihi >= DateTime.Now.Date))
                        {
                            <tr>
                                <td>@ilan.Title</td>
                                <td>@ilan.Price.ToString("#,0") ₺</td>
                                <td>@ilan.Area</td>
                                <td>@ilan.KonutDurumu</td>
                                <td>@ilan.GoruntulenmeSayisi</td>
                                <td>@ilan.YayinlanmaTarihi.ToString("dd MMM yyyy", new System.Globalization.CultureInfo("tr-TR"))</td>
                                <td>
                                    <button class="btn btn-secondary" onclick="openDatePicker(@ilan.Id)">Tarih Değiştir</button>
                                    <button class="btn btn-danger" onclick="removeFromList(@ilan.Id)">Sıradan Kaldır</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <!-- Modal HTML -->
                <div class="modal fade" id="datePickerModal" tabindex="-1" aria-labelledby="datePickerModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="datePickerModalLabel">Tarih Seç</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body text-center">
                                <input type="date" id="datePicker" class="form-control">
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                                <button type="button" class="btn btn-primary" onclick="updateDate()">Kaydet</button>
                            </div>
                        </div>
                    </div>
                </div>

                <script>
                    // Butona tıklandığında modal ve takvimi açacak fonksiyon
                    function openDatePicker(ilanId) {
                        var datePicker = document.getElementById('datePicker');
                        datePicker.value = ""; // Önceki seçimi temizle
                        datePicker.setAttribute('data-ilan-id', ilanId); // İlan ID'yi ata

                        // Modal'ı aç
                        var datePickerModal = new bootstrap.Modal(document.getElementById('datePickerModal'));
                        datePickerModal.show();
                    }

                    // Tarih değiştiğinde yapılacak işlem
                    function updateDate() {
                        var datePicker = document.getElementById('datePicker');
                        var selectedDate = datePicker.value; // Seçilen tarih
                        var ilanId = datePicker.getAttribute('data-ilan-id'); // Hangi ilan için tarih değişti

                        if (selectedDate) {
                            // AJAX ile backend'e yeni tarihi gönderelim
                            fetch(`/SevvalOfis/UpdateYayinlanmaTarihi`, {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json'
                                },
                                body: JSON.stringify({
                                    id: ilanId,
                                    yeniTarih: selectedDate
                                })
                            })
                            .then(response => response.json())
                            .then(data => {
                                if (data.success) {
                                    alert('Yayınlanma Tarihi güncellendi!');
                                    location.reload(); // Sayfayı yenileyerek güncellenmiş tarihi göster
                                } else {
                                    alert('Tarih güncellenirken bir hata oluştu!');
                                }
                            })
                            .catch(error => {
                                console.error('Hata:', error);
                                alert('Bir hata oluştu!');
                            });
                        }

                        // Modal'ı kapat
                        var datePickerModal = bootstrap.Modal.getInstance(document.getElementById('datePickerModal'));
                        datePickerModal.hide();
                    }
                </script>

                <!-- Bootstrap CSS ve JS için bağlantılar -->
                <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

                <!-- Eski İlan Tablosu -->
                <h5 class="mt-5">Eski İlanlar</h5>
                <table class="table mt-3">
                    <thead>
                        <tr>
                            <th>Başlık</th>
                            <th>Fiyat</th>
                            <th>Alan (m²)</th>
                            <th>Durum</th>
                            <th>Yayınlanma Tarihi</th>
                            <th>Alınan GÖrüntülenme</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ilan in ((IEnumerable<GununIlanModel>)Model.GununIlanlari).Where(i => i.YayinlanmaTarihi < DateTime.Now.Date))
                        {
                            <tr style="color: red;">
                                <td>@ilan.Title</td>
                                <td>@ilan.Price.ToString("#,0") ₺</td>
                                <td>@ilan.Area</td>
                                <td>@ilan.KonutDurumu</td>
                                <td>@ilan.YayinlanmaTarihi.ToString("dd MMM yyyy", new System.Globalization.CultureInfo("tr-TR"))</td>
                                <td>@ilan.GoruntulenmeSayisi</td>
                            </tr>
                        }
                    </tbody>
                </table>


               

            </div>

            <script>
                                // Sıradan Kaldır butonuna tıklanınca çalışacak fonksiyon
                function removeFromList(ilanId) {
                    if (confirm("Bu ilan sıradan kaldırılacak. Onaylıyor musunuz?")) {
                        // AJAX ile backend'e istek gönderelim
                        fetch(`/SevvalOfis/RemoveFromList`, {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({
                                id: ilanId
                            })
                        })
                        .then(response => response.json())
                        .then(data => {
                            if (data.success) {
                                alert('İlan sıradan kaldırıldı!');
                                location.reload(); // Sayfayı yenileyerek tablodan kaldırılan ilanı göster
                            } else {
                                alert('İlan sıradan kaldırılırken bir hata oluştu!');
                            }
                        })
                        .catch(error => {
                            console.error('Hata:', error);
                            alert('Bir hata oluştu!');
                        });
                    }
                }

            </script>

     
        </div>





        <!-- Bootstrap JS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
