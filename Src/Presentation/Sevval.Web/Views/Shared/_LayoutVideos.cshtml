@{
    Layout = "_Layout";
}

@section Styles {
    <!-- Google Fonts (Inter) -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    
    <!-- Videos CSS -->
    <link rel="stylesheet" href="~/css/videos.css">
    <link rel="stylesheet" href="~/css/videos-layout.css">

    <!-- Tailwind CSS with Plugins -->
    <script src="https://cdn.tailwindcss.com?plugins=aspect-ratio,line-clamp"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        sans: ['Inter', 'sans-serif'],
                    },
                    aspectRatio: {
                        '16/9': '16 / 9',
                    },
                    screens: {
                        'lg': '900px',
                    },
                },
            },
            plugins: [],
        }
    </script>

    <!-- Plyr.io Video Player -->
    <link rel="stylesheet" href="https://cdn.plyr.io/3.7.8/plyr.css" />
    
    @RenderSection("VideoStyles", required: false)
}

@RenderBody()

<!-- Video Scripts - Doğrudan burada render et -->
<script src="https://cdn.plyr.io/3.7.8/plyr.js"></script>
@RenderSection("VideoScripts", required: false)

@if (IsSectionDefined("Scripts"))
{
    IgnoreSection("Scripts");
}

@section Scripts {
    <!-- Boş bırak, VideoScripts yukarıda render edildi -->
}
