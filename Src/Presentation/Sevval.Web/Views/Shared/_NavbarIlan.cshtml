        <script>
            document.addEventListener("DOMContentLoaded", function () {
                var navLinks = document.getElementById("nav-links");
                var mobileMenuBtn = document.getElementById("mobile-menu-btn");
                
                function isMobileView() {
                    return window.innerWidth <= 991 && window.innerHeight < 1000;
                }
                
                function handleMobileMenu() {
                    if (isMobileView()) {
                        if (mobileMenuBtn) {
                            mobileMenuBtn.style.display = 'flex';
                            mobileMenuBtn.style.flexDirection = 'column';
                        }
                    } else {
                        if (mobileMenuBtn) mobileMenuBtn.style.display = 'none';
                        if (navLinks) navLinks.classList.remove('active');
                    }
                }
                
                if (mobileMenuBtn) {
                    mobileMenuBtn.addEventListener('click', function(e) {
                        e.stopPropagation();
                        if (navLinks) navLinks.classList.toggle('active');
                    });
                }
                
                document.addEventListener('click', function(e) {
                    if (navLinks && mobileMenuBtn && !navLinks.contains(e.target) && !mobileMenuBtn.contains(e.target)) {
                        navLinks.classList.remove('active');
                    }
                });
                
                handleMobileMenu();
                window.addEventListener('resize', handleMobileMenu);
                
                var dropdowns = document.querySelectorAll('.user-dropdown');
                
                dropdowns.forEach(function(dropdown) {
                    var dropdownContent = dropdown.querySelector('.user-dropdown-content');
                    var userName = dropdown.querySelector('.user-name');
                    
                    if (userName && dropdownContent) {
                        userName.addEventListener('click', function(e) {
                            e.preventDefault();
                            e.stopPropagation();
                            
                            document.querySelectorAll('.user-dropdown-content').forEach(function(content) {
                                if (content !== dropdownContent) {
                                    content.classList.remove('show');
                                }
                            });
                            
                            dropdownContent.classList.toggle('show');
                        });
                    }
                });
                
                document.addEventListener('click', function(e) {
                    if (!e.target.closest('.user-dropdown')) {
                        document.querySelectorAll('.user-dropdown-content').forEach(function(content) {
                            content.classList.remove('show');
                        });
                    }
                });
                
                document.querySelectorAll('.user-dropdown-content a').forEach(function(link) {
                    link.addEventListener('click', function() {
                        var dropdownContent = link.closest('.user-dropdown-content');
                        if (dropdownContent) {
                            dropdownContent.classList.remove('show');
                        }
                    });
                });

                // Mesaj badge
                var dropdownRoot = document.querySelector('.user-dropdown[data-userid]');
                var badge = document.getElementById('navbarIlanMessageBadge');
                var badgeItem = document.getElementById('navbarIlanMessageBadgeItem');
                if (dropdownRoot && badge && badgeItem) {
                    var userId = dropdownRoot.getAttribute('data-userid');
                    if (userId) {
                        badge.classList.add('d-none');
                        badgeItem.classList.add('d-none');
                        badge.textContent = '';
                        badgeItem.textContent = '';
                        badge.classList.remove('msg-badge--own', 'msg-badge--other', 'msg-badge--comment', 'msg-badge--notif');
                        badgeItem.classList.remove('msg-badge--own', 'msg-badge--other', 'msg-badge--comment', 'msg-badge--notif');

                        fetch(`/api/v1/messages/unread-counts?CurrentUserId=${encodeURIComponent(userId)}`, { cache: 'no-store' })
                            .then(function(response) { return response.ok ? response.json() : null; })
                            .then(function(data) {
                                if (!data || !data.counts) {
                                    return;
                                }
                                var countsObj = data && data.counts ? data.counts : {};
                                var counts = Object.values(countsObj || {});
                                var total = counts.reduce(function(sum, value) {
                                    var num = parseInt(value, 10);
                                    return sum + (Number.isFinite(num) ? num : 0);
                                }, 0);
                                if (total > 0) {
                                    var colorClass = 'msg-badge--own';
                                    if (parseInt(countsObj.Comment || 0, 10) > 0) {
                                        colorClass = 'msg-badge--comment';
                                    } else if (parseInt(countsObj.Notification || 0, 10) > 0) {
                                        colorClass = 'msg-badge--notif';
                                    } else if (parseInt(countsObj.Other || 0, 10) > 0) {
                                        colorClass = 'msg-badge--other';
                                    }
                                    var text = total > 99 ? '99+' : total.toString();
                                    badge.textContent = text;
                                    badgeItem.textContent = text;
                                    badge.classList.add(colorClass);
                                    badgeItem.classList.add(colorClass);
                                    badge.classList.remove('d-none');
                                    badgeItem.classList.remove('d-none');
                                } else {
                                    badge.textContent = '';
                                    badgeItem.textContent = '';
                                    badge.classList.remove('msg-badge--own', 'msg-badge--other', 'msg-badge--comment', 'msg-badge--notif');
                                    badgeItem.classList.remove('msg-badge--own', 'msg-badge--other', 'msg-badge--comment', 'msg-badge--notif');
                                    badge.classList.add('d-none');
                                    badgeItem.classList.add('d-none');
                                }
                            })
                            .catch(function() {});
                    }
                }
                
                function fixMobileNavbar() {
                    if (isMobileView()) {
                        var authButtons = document.querySelector('.auth-buttoons');
                        if (authButtons) {
                            authButtons.style.display = 'flex';
                            authButtons.style.alignItems = 'center';
                            authButtons.style.gap = '20px';
                            authButtons.style.marginRight = '10px';
                        }
                    }
                }
                
                fixMobileNavbar();
                window.addEventListener('resize', fixMobileNavbar);
            });
        </script>
