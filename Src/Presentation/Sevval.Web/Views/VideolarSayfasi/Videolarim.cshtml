@model List<Sevval.Web.Models.VideolarSayfasi>
@using Sevval.Domain.Enums
@{
    ViewData["Title"] = "Videolarım";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .videolarim-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem 1rem;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .page-title {
        font-size: 1.75rem;
        font-weight: 700;
        color: #1a1a2e;
        margin: 0;
    }

    .page-title i {
        color: #3b82f6;
        margin-right: 0.5rem;
    }

    .upload-btn {
        background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 12px;
        text-decoration: none;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(59, 130, 246, 0.3);
    }

    .upload-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(59, 130, 246, 0.4);
        color: white;
    }

    .video-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1.5rem;
    }

    .video-card {
        background: white;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        position: relative;
    }

    .video-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
    }

    .video-thumbnail {
        position: relative;
        width: 100%;
        padding-top: 56.25%;
        background: #f1f5f9;
        overflow: hidden;
    }

    .video-thumbnail img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .video-thumbnail .placeholder-icon {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        font-size: 3rem;
        color: #cbd5e1;
    }

    .status-badge {
        position: absolute;
        top: 12px;
        left: 12px;
        padding: 0.35rem 0.75rem;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .status-pending {
        background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
        color: white;
    }

    .status-approved {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        color: white;
    }

    .status-rejected {
        background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        color: white;
    }

    .video-info {
        padding: 1.25rem;
    }

    .video-title {
        font-size: 1rem;
        font-weight: 600;
        color: #1e293b;
        margin-bottom: 0.5rem;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .video-meta {
        display: flex;
        align-items: center;
        gap: 1rem;
        font-size: 0.85rem;
        color: #64748b;
        margin-bottom: 1rem;
    }

    .video-meta span {
        display: flex;
        align-items: center;
        gap: 0.25rem;
    }

    .video-category {
        display: inline-block;
        background: #f1f5f9;
        color: #475569;
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 500;
        margin-bottom: 1rem;
    }

    .rejection-reason {
        background: #fef2f2;
        border: 1px solid #fecaca;
        border-radius: 8px;
        padding: 0.75rem;
        margin-bottom: 1rem;
        font-size: 0.85rem;
        color: #991b1b;
    }

    .rejection-reason i {
        margin-right: 0.5rem;
    }

    .video-actions {
        display: flex;
        gap: 0.75rem;
        padding-top: 1rem;
        border-top: 1px solid #f1f5f9;
    }

    .btn-view {
        flex: 1;
        background: #f1f5f9;
        color: #475569;
        padding: 0.6rem 1rem;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        text-align: center;
        transition: all 0.2s ease;
        border: none;
        cursor: pointer;
    }

    .btn-view:hover {
        background: #e2e8f0;
        color: #334155;
    }

    .btn-delete {
        background: #fef2f2;
        color: #dc2626;
        padding: 0.6rem 1rem;
        border-radius: 8px;
        font-weight: 500;
        text-align: center;
        transition: all 0.2s ease;
        border: none;
        cursor: pointer;
    }

    .btn-delete:hover {
        background: #fee2e2;
        color: #b91c1c;
    }

    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    }

    .empty-state i {
        font-size: 4rem;
        color: #cbd5e1;
        margin-bottom: 1.5rem;
    }

    .empty-state h3 {
        font-size: 1.25rem;
        color: #475569;
        margin-bottom: 0.5rem;
    }

    .empty-state p {
        color: #94a3b8;
        margin-bottom: 1.5rem;
    }

    /* Delete Confirmation Modal */
    .delete-modal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        z-index: 1000;
        justify-content: center;
        align-items: center;
    }

    .delete-modal.show {
        display: flex;
    }

    .delete-modal-content {
        background: white;
        border-radius: 16px;
        padding: 2rem;
        max-width: 400px;
        width: 90%;
        text-align: center;
    }

    .delete-modal-content i {
        font-size: 3rem;
        color: #ef4444;
        margin-bottom: 1rem;
    }

    .delete-modal-content h4 {
        font-size: 1.25rem;
        color: #1e293b;
        margin-bottom: 0.5rem;
    }

    .delete-modal-content p {
        color: #64748b;
        margin-bottom: 1.5rem;
    }

    .delete-modal-actions {
        display: flex;
        gap: 1rem;
        justify-content: center;
    }

    .btn-cancel {
        background: #f1f5f9;
        color: #475569;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: 500;
        border: none;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .btn-cancel:hover {
        background: #e2e8f0;
    }

    .btn-confirm-delete {
        background: #ef4444;
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: 500;
        border: none;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .btn-confirm-delete:hover {
        background: #dc2626;
    }

    @@media (max-width: 768px) {
        .video-grid {
            grid-template-columns: 1fr;
        }

        .page-header {
            flex-direction: column;
            align-items: flex-start;
        }
    }
</style>

<div class="videolarim-container">
    <div class="page-header">
        <h1 class="page-title">
            <i class="fas fa-video"></i>Videolarım
        </h1>
        <a href="@Url.Action("Upload", "VideolarSayfasi")" class="upload-btn">
            <i class="fas fa-plus"></i>
            Yeni Video Yükle
        </a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="empty-state">
            <i class="fas fa-film"></i>
            <h3>Henüz video yüklemediniz</h3>
            <p>İlk videonuzu yükleyerek başlayın!</p>
            <a href="@Url.Action("Upload", "VideolarSayfasi")" class="upload-btn">
                <i class="fas fa-upload"></i>
                Video Yükle
            </a>
        </div>
    }
    else
    {
        <div class="video-grid">
            @foreach (var video in Model)
            {
                <div class="video-card" data-video-id="@video.Id">
                    <div class="video-thumbnail">
                        @if (!string.IsNullOrEmpty(video.KapakFotografiYolu))
                        {
                            <img src="@video.KapakFotografiYolu" alt="@video.VideoAdi" loading="lazy">
                        }
                        else
                        {
                            <i class="fas fa-video placeholder-icon"></i>
                        }
                        
                        @switch (video.ApprovalStatus)
                        {
                            case VideoApprovalStatus.Pending:
                                <span class="status-badge status-pending">
                                    <i class="fas fa-clock"></i> Beklemede
                                </span>
                                break;
                            case VideoApprovalStatus.Approved:
                                <span class="status-badge status-approved">
                                    <i class="fas fa-check"></i> Onaylandı
                                </span>
                                break;
                            case VideoApprovalStatus.Rejected:
                                <span class="status-badge status-rejected">
                                    <i class="fas fa-times"></i> Reddedildi
                                </span>
                                break;
                        }
                    </div>
                    
                    <div class="video-info">
                        <h3 class="video-title" title="@video.VideoAdi">@video.VideoAdi</h3>
                        
                        <div class="video-meta">
                            <span><i class="fas fa-calendar"></i> @video.YuklenmeTarihi.ToString("dd MMM yyyy")</span>
                            <span><i class="fas fa-eye"></i> @video.GoruntulenmeSayisi</span>
                        </div>
                        
                        @if (!string.IsNullOrEmpty(video.Kategori))
                        {
                            <span class="video-category">@video.Kategori</span>
                        }
                        
                        @if (video.ApprovalStatus == VideoApprovalStatus.Rejected && !string.IsNullOrEmpty(video.RejectionReason))
                        {
                            <div class="rejection-reason">
                                <i class="fas fa-info-circle"></i>
                                <strong>Red Nedeni:</strong> @video.RejectionReason
                            </div>
                        }
                        
                        <div class="video-actions">
                            @if (video.ApprovalStatus == VideoApprovalStatus.Approved)
                            {
                                <a href="@Url.Action("Play", "VideolarSayfasi", new { id = video.Id })" class="btn-view">
                                    <i class="fas fa-play"></i> İzle
                                </a>
                            }
                            else
                            {
                                <span class="btn-view" style="opacity: 0.5; cursor: not-allowed;">
                                    <i class="fas fa-play"></i> İzle
                                </span>
                            }
                            <button type="button" class="btn-delete" onclick="showDeleteModal(@video.Id, '@Html.Raw(video.VideoAdi.Replace("'", "\\'"))')">
                                <i class="fas fa-trash"></i> Sil
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<!-- Delete Confirmation Modal -->
<div id="deleteModal" class="delete-modal">
    <div class="delete-modal-content">
        <i class="fas fa-exclamation-triangle"></i>
        <h4>Videoyu Sil</h4>
        <p id="deleteModalText">Bu videoyu silmek istediğinizden emin misiniz?</p>
        <div class="delete-modal-actions">
            <button type="button" class="btn-cancel" onclick="hideDeleteModal()">İptal</button>
            <button type="button" class="btn-confirm-delete" id="confirmDeleteBtn">Sil</button>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let videoIdToDelete = null;

        function showDeleteModal(videoId, videoTitle) {
            videoIdToDelete = videoId;
            document.getElementById('deleteModalText').textContent = `"${videoTitle}" videosunu silmek istediğinizden emin misiniz?`;
            document.getElementById('deleteModal').classList.add('show');
        }

        function hideDeleteModal() {
            videoIdToDelete = null;
            document.getElementById('deleteModal').classList.remove('show');
        }

        document.getElementById('confirmDeleteBtn').addEventListener('click', async function() {
            if (!videoIdToDelete) return;

            const btn = this;
            btn.disabled = true;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Siliniyor...';

            try {
                const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
                const response = await fetch('@Url.Action("DeleteUserVideo", "VideolarSayfasi")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                        'RequestVerificationToken': token
                    },
                    body: `id=${videoIdToDelete}`
                });

                const result = await response.json();

                if (result.success) {
                    // Remove the card from DOM
                    const card = document.querySelector(`[data-video-id="${videoIdToDelete}"]`);
                    if (card) {
                        card.style.transition = 'all 0.3s ease';
                        card.style.opacity = '0';
                        card.style.transform = 'scale(0.9)';
                        setTimeout(() => card.remove(), 300);
                    }
                    hideDeleteModal();

                    // Check if no videos left
                    setTimeout(() => {
                        const remainingCards = document.querySelectorAll('.video-card');
                        if (remainingCards.length === 0) {
                            location.reload();
                        }
                    }, 350);
                } else {
                    alert(result.message || 'Video silinemedi.');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Bir hata oluştu. Lütfen tekrar deneyin.');
            } finally {
                btn.disabled = false;
                btn.innerHTML = 'Sil';
            }
        });

        // Close modal on outside click
        document.getElementById('deleteModal').addEventListener('click', function(e) {
            if (e.target === this) {
                hideDeleteModal();
            }
        });

        // Close modal on Escape key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                hideDeleteModal();
            }
        });
    </script>
}

