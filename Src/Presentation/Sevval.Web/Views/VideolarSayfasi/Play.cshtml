                    if (plyrContainer && window.innerWidth <= 768) {
                        // MutationObserver ile .plyr container'daki class değişikliklerini izle
                        const observer = new MutationObserver(syncProgressBarWithControls);
                        observer.observe(plyrContainer, { 
                            attributes: true, 
                            attributeFilter: ['class'] 
                        });
                        
                        // İlk durumu ayarla
                        syncProgressBarWithControls();
