@{
    ViewData["Title"] = "Drone Video Oluştur";
}

@section style {
    <style>
        :root {
            --ink: #0f172a;
            --muted: #6b7280;
            --brand: #0ea5e9;
            --brand-2: #2563eb;
            --border: #e2e8f0;
            --surface: #ffffff;
            --bg: linear-gradient(135deg, #0c4da2, #0ea5e9);
            --shell: #f8fafc;
            --ring: rgba(14, 165, 233, 0.18);
            --shadow: 0 18px 45px rgba(0, 9, 45, 0.16);
            --font: "Inter", "Plus Jakarta Sans", system-ui, -apple-system, sans-serif;
        }

        .drone-page {
            background: var(--shell);
            padding: 32px 0 48px;
            position: relative;
            overflow: hidden;
        }

        .drone-grid {
            display: grid;
            gap: 20px;
            grid-template-columns: 1fr;
            padding-left: 20px;
            padding-right: 20px;
        }

        @@media (min-width: 768px) {
            .drone-grid { grid-template-columns: repeat(2, minmax(320px, 1fr)); }
        }

        @@media (min-width: 1200px) {
            .drone-grid {
                grid-template-columns: repeat(3, minmax(320px, 1fr));
                padding-left: 40px;
                padding-right: 40px;
            }
        }

        .drone-card {
            background: var(--surface);
            border: 1px solid var(--border);
            border-radius: 18px;
            box-shadow: var(--shadow);
            padding: 20px;
            height: 100%;
        }

        .drone-summary {
            background: #e0f2fe;
            border: 1px solid #bae6fd;
            border-radius: 16px;
            padding: 14px;
            margin-bottom: 16px;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
            gap: 10px;
        }

        .drone-summary .item {
            color: var(--ink);
            font-weight: 700;
        }

        .drone-summary .label {
            display: block;
            font-size: 12px;
            color: var(--muted);
            margin-bottom: 4px;
        }

        .drone-card h5 {
            font-weight: 800;
            color: var(--ink);
            margin-bottom: 8px;
        }

        .drone-card p {
            color: var(--muted);
            margin-bottom: 12px;
        }

        .form-label {
            font-weight: 700;
            color: var(--ink);
            margin-bottom: 6px;
        }

        .form-control, .form-select, textarea {
            border-radius: 14px;
            border: 1px solid var(--border);
            min-height: 44px;
        }

        .form-control:focus, .form-select:focus, textarea:focus {
            border-color: var(--brand);
            box-shadow: 0 0 0 3px var(--ring);
            outline: none;
        }

        .chip-group {
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
        }

        .chip {
            padding: 10px 14px;
            border-radius: 10px;
            background: #f8fafc;
            border: 1px solid var(--border);
            color: var(--ink);
            cursor: pointer;
            transition: all 0.15s ease;
            font-weight: 700;
        }

        .chip.active {
            background: rgba(14, 165, 233, 0.15);
            border-color: var(--brand);
            color: var(--brand-2);
            box-shadow: 0 8px 20px rgba(14, 165, 233, 0.18);
        }

        .upload-box {
            border: 1px dashed var(--border);
            border-radius: 12px;
            padding: 14px;
            display: grid;
            gap: 6px;
            background: #f8fafc;
        }

        .upload-box input { display: none; }

        .upload-label {
            display: inline-flex;
            gap: 8px;
            align-items: center;
            padding: 10px 12px;
            border-radius: 10px;
            background: #e0f2fe;
            color: #075985;
            font-weight: 700;
            cursor: pointer;
        }

        .btn-primary-drone {
            background: linear-gradient(90deg, var(--brand), var(--brand-2));
            color: #fff;
            border: none;
            padding: 12px 18px;
            border-radius: 14px;
            font-weight: 800;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            width: 100%;
            justify-content: center;
            box-shadow: 0 10px 24px rgba(37, 99, 235, 0.26);
            transition: transform 0.12s ease, box-shadow 0.12s ease;
        }

        .btn-primary-drone:hover { transform: translateY(-1px); }
        .btn-primary-drone:disabled { opacity: 0.7; cursor: not-allowed; }

        .btn-ghost {
            border: 1px solid var(--border);
            background: #fff;
            color: var(--ink);
            padding: 10px 12px;
            border-radius: 10px;
            font-weight: 700;
        }

        .char-count {
            font-size: 12px;
            color: var(--muted);
            text-align: right;
        }

        .description-readonly {
            background: #f8fafc;
            cursor: not-allowed;
            resize: none;
        }

        .description {
            width: 100%;
        }

        .hint {
            font-size: 12px;
            color: var(--muted);
        }

        .drone-splash {
            position: fixed;
            inset: 0;
            background: radial-gradient(120% 120% at 10% 10%, rgba(14, 165, 233, 0.28), transparent 45%), radial-gradient(110% 120% at 90% 20%, rgba(37, 99, 235, 0.25), transparent 55%), var(--bg);
            display: grid;
            place-items: center;
            z-index: 9999;
            overflow: hidden;
            opacity: 1;
            visibility: visible;
            transition: opacity 0.6s ease, visibility 0.6s ease;
            font-family: var(--font);
        }

        .drone-splash.is-hidden {
            opacity: 0;
            visibility: hidden;
        }

        .splash-logo {
            position: absolute;
            top: 98px;
            left: 50%;
            transform: translateX(-50%);
            width: min(320px, 70vw);
            height: auto;
            padding: 0;
            background: transparent;
            border: none;
            box-shadow: none;
        }

        .drone-splash .drone {
            position: absolute;
            width: var(--size, 42px);
            height: var(--size, 42px);
            left: var(--x, 50%);
            bottom: -24%;
            animation: splash-rise var(--dur, 3.2s) ease-in-out infinite;
            animation-delay: var(--delay, 0s);
            filter: brightness(0) invert(1) drop-shadow(0 8px 14px rgba(8, 47, 73, 0.35));
        }

        @@keyframes splash-rise {
            0% { transform: translateY(0) scale(0.92); opacity: 0; }
            15% { opacity: 0.9; }
            50% { transform: translateY(-55vh) scale(1); opacity: 1; }
            100% { transform: translateY(-135vh) scale(1.02); opacity: 0; }
        }

        @@media (prefers-reduced-motion: reduce) {
            .drone-splash .drone { animation: none; }
            .drone-splash { transition: none; }
        }

        @@media (max-width: 576px) {
            .drone-card { padding: 16px; }
        }
    </style>
}

