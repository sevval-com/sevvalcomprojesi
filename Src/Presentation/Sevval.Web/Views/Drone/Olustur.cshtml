@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const isAuthenticated = @User.Identity?.IsAuthenticated.ToString().ToLower();
            const splash = document.getElementById('drone-splash');
            if (splash) {
                setTimeout(() => {
                    splash.classList.add('is-hidden');
                }, 1600);
                splash.addEventListener('transitionend', () => {
                    splash.remove();
                });
            }
            const MAX_UPLOAD_BYTES = 5 * 1024 * 1024;
            const TARGET_UPLOAD_BYTES = 250 * 1024;
            const MAX_IMAGE_DIMENSION = 1600;
            const MAX_CHARS = 700;
            const params = new URLSearchParams(window.location.search);
            const meta = {
                il: params.get('il') || '',
                ilce: params.get('ilce') || '',
                mahalle: params.get('mahalle') || '',
                ada: params.get('ada') || '',
                parsel: params.get('parsel') || ''
            };
            const state = {
                lang: 'tr',
                tapu: 'Tek Tapu',
                logoReady: false,
                avatarReady: false,
                logoFile: null,
                avatarFile: null
            };

            const els = {
                langChips: document.querySelectorAll('#lang-group .chip'),
                tapuChips: document.querySelectorAll('#tapu-group .chip'),
                logoInput: document.getElementById('logo-input'),
                avatarInput: document.getElementById('avatar-input'),
                logoLabel: document.getElementById('logo-upload-label'),
                avatarLabel: document.getElementById('avatar-upload-label'),
                logoPreview: document.getElementById('logo-preview'),
                avatarPreview: document.getElementById('avatar-preview'),
                descInput: document.getElementById('description-input'),
                descCount: document.getElementById('desc-count'),
                generateBtn: document.getElementById('generate-btn'),
                generateStatus: document.getElementById('generate-status'),
                metaLoc: document.getElementById('meta-loc'),
                metaMahalle: document.getElementById('meta-mahalle'),
                metaAp: document.getElementById('meta-ap')
            };

            const updateChips = (chips, value) => {
                chips.forEach((chip) => chip.classList.toggle('active', chip.dataset.value === value));
            };

            const updateDescCount = () => {
                const len = els.descInput.value.length;
                els.descCount.textContent = `${len}/${MAX_CHARS}`;
            };

            const formatFileSize = (bytes) => `${Math.round(bytes / 1024)} KB`;

            const compressImage = (file) => new Promise((resolve, reject) => {
                const reader = new FileReader();
                reader.onload = () => {
                    const img = new Image();
                    img.onload = () => {
                        const maxDim = MAX_IMAGE_DIMENSION;
                        const scale = Math.min(1, maxDim / Math.max(img.width, img.height));
                        const targetWidth = Math.max(1, Math.round(img.width * scale));
                        const targetHeight = Math.max(1, Math.round(img.height * scale));
                        const canvas = document.createElement('canvas');
                        canvas.width = targetWidth;
                        canvas.height = targetHeight;
                        const ctx = canvas.getContext('2d');
                        if (!ctx) {
                            reject(new Error('canvas context missing'));
                            return;
                        }
                        ctx.drawImage(img, 0, 0, targetWidth, targetHeight);
                        let quality = 0.9;
                        const encode = () => {
                            canvas.toBlob((blob) => {
                                if (!blob) {
                                    reject(new Error('compression failed'));
                                    return;
                                }
                                if (blob.size <= TARGET_UPLOAD_BYTES || quality <= 0.6) {
                                    const baseName = file.name.includes('.') ? file.name.replace(/\.[^/.]+$/, '') : file.name;
                                    const compressedFile = new File([blob], `${baseName}.jpg`, { type: 'image/jpeg' });
                                    resolve(compressedFile);
                                    return;
                                }
                                quality -= 0.07;
                                encode();
                            }, 'image/jpeg', quality);
                        };
                        encode();
                    };
                    img.onerror = () => reject(new Error('image load failed'));
                    img.src = reader.result;
                };
                reader.onerror = () => reject(new Error('file read failed'));
                reader.readAsDataURL(file);
            });

            const compressImageIfNeeded = async (file) => {
                if (!file.type.startsWith('image/')) return { file, wasCompressed: false };
                if (file.size <= TARGET_UPLOAD_BYTES) return { file, wasCompressed: false };
                const compressed = await compressImage(file);
                return { file: compressed, wasCompressed: true };
            };

            const fetchImageAsFile = async (url, nameHint) => {
                const response = await fetch(url, { credentials: 'include' });
                if (!response.ok) throw new Error('image fetch failed');
                const blob = await response.blob();
                const extension = blob.type === 'image/png' ? 'png' : 'jpg';
                const fileName = `${nameHint}.${extension}`;
                return new File([blob], fileName, { type: blob.type || 'image/jpeg' });
            };

            const updateButtonState = () => {
                const hasMeta = Boolean(meta.il && meta.ilce && meta.mahalle && meta.ada && meta.parsel);
                const ready = hasMeta && state.logoReady && state.avatarReady && els.descInput.value.trim().length > 0;
                els.generateBtn.disabled = !ready;
            };

            const updateMetaView = () => {
                if (els.metaLoc) els.metaLoc.textContent = meta.il && meta.ilce ? `${meta.il} / ${meta.ilce}` : '—';
                if (els.metaMahalle) els.metaMahalle.textContent = meta.mahalle || '—';
                if (els.metaAp) els.metaAp.textContent = (meta.ada && meta.parsel) ? `${meta.ada} / ${meta.parsel}` : '—';
            };

            const showExistingMedia = (previewEl, url, label) => {
                if (!previewEl || !url) return;
                previewEl.textContent = '';
                const wrapper = document.createElement('div');
                wrapper.className = 'upload-preview';
                const img = document.createElement('img');
                img.src = url;
                img.alt = label;
                const text = document.createElement('span');
                text.textContent = label;
                wrapper.append(img, text);
                previewEl.appendChild(wrapper);
            };

            const updateUploadLabel = (labelEl, hasExisting) => {
                if (!labelEl) return;
                const textEl = labelEl.querySelector('.upload-label-text');
                if (textEl) textEl.textContent = hasExisting ? 'Değiştir' : 'Yükle';
            };

            const loadUserMedia = async () => {
                if (!isAuthenticated) return;
                try {
                    const response = await fetch('/api/drone/user-media', { credentials: 'include' });
                    if (!response.ok) return;
                    const payload = await response.json();
                    if (payload?.logoUrl) {
                        showExistingMedia(els.logoPreview, payload.logoUrl, 'Firma logosu yüklendi');
                        updateUploadLabel(els.logoLabel, true);
                        try {
                            const file = await fetchImageAsFile(payload.logoUrl, 'firma-logosu');
                            const { file: processed, wasCompressed } = await compressImageIfNeeded(file);
                            if (processed.size > TARGET_UPLOAD_BYTES) {
                                state.logoReady = false;
                                state.logoFile = null;
                                els.logoPreview.textContent = 'Firma logosu 250KB altına indirilemedi. Lütfen değiştirin.';
                            } else {
                                state.logoFile = processed;
                                state.logoReady = true;
                                els.logoPreview.textContent = `${processed.name} (${formatFileSize(processed.size)}${wasCompressed ? ', küçültüldü' : ''})`;
                            }
                        } catch (error) {
                            state.logoReady = false;
                            state.logoFile = null;
                            els.logoPreview.textContent = 'Firma logosu alınamadı. Lütfen değiştirin.';
                        }
                    }
                    if (payload?.avatarUrl) {
                        showExistingMedia(els.avatarPreview, payload.avatarUrl, 'Danışman fotoğrafı yüklendi');
                        updateUploadLabel(els.avatarLabel, true);
                        try {
                            const file = await fetchImageAsFile(payload.avatarUrl, 'danisman-fotografi');
                            const { file: processed, wasCompressed } = await compressImageIfNeeded(file);
                            if (processed.size > TARGET_UPLOAD_BYTES) {
                                state.avatarReady = false;
                                state.avatarFile = null;
                                els.avatarPreview.textContent = 'Danışman fotoğrafı 250KB altına indirilemedi. Lütfen değiştirin.';
                            } else {
                                state.avatarFile = processed;
                                state.avatarReady = true;
                                els.avatarPreview.textContent = `${processed.name} (${formatFileSize(processed.size)}${wasCompressed ? ', küçültüldü' : ''})`;
                            }
                        } catch (error) {
                            state.avatarReady = false;
                            state.avatarFile = null;
                            els.avatarPreview.textContent = 'Danışman fotoğrafı alınamadı. Lütfen değiştirin.';
                        }
                    }
                    updateButtonState();
                } catch (error) {
                    console.warn('Drone medya bilgisi alınamadı.', error);
                }
            };

            const showLoadingModal = (title, subtitle) => {
                const existing = document.querySelector('.generate-modal');
                if (existing) existing.remove();
                const modal = document.createElement('div');
                modal.className = 'generate-modal';
                modal.innerHTML = `
                    <div class="generate-modal-card">
                        <div class="generate-modal-title">${title}</div>
                        <div class="generate-modal-subtitle">${subtitle}</div>
                    </div>
                `;
                document.body.appendChild(modal);
                requestAnimationFrame(() => modal.classList.add('is-visible'));
                return modal;
            };

            const areRequiredElsReady = () => {
                return Boolean(
                    els.langChips.length &&
                    els.tapuChips.length &&
                    els.logoInput &&
                    els.avatarInput &&
                    els.descInput &&
                    els.generateBtn
                );
            };

            if (!areRequiredElsReady()) {
                console.warn('Drone form elemanlari eksik. Sayfa tam yuklenmedi.');
                return;
            }

            els.langChips.forEach((chip) => {
                chip.addEventListener('click', () => {
                    state.lang = chip.dataset.value || 'tr';
                    updateChips(els.langChips, state.lang);
                    updateDescCount();
                    updateButtonState();
                });
            });

            els.tapuChips.forEach((chip) => {
                chip.addEventListener('click', () => {
                    state.tapu = chip.dataset.value || 'Tek Tapu';
                    updateChips(els.tapuChips, state.tapu);
                    updateDescCount();
                    updateButtonState();
                });
            });

            const handleFile = (inputEl, previewEl, key) => {
                if (!inputEl || !previewEl) return;
                inputEl.addEventListener('change', async () => {
                    const file = inputEl.files?.[0];
                    if (!file) {
                        state[key] = false;
                        if (inputEl === els.logoInput) state.logoFile = null;
                        if (inputEl === els.avatarInput) state.avatarFile = null;
                        updateButtonState();
                        return;
                    }
                    if (!file.type.startsWith('image/')) {
                        previewEl.textContent = 'Sadece görsel dosyası seçin.';
                        state[key] = false;
                        if (inputEl === els.logoInput) state.logoFile = null;
                        if (inputEl === els.avatarInput) state.avatarFile = null;
                        updateButtonState();
                        return;
                    }
                    try {
                        const { file: processed, wasCompressed } = await compressImageIfNeeded(file);
                        if (processed.size > TARGET_UPLOAD_BYTES) {
                            previewEl.textContent = 'Görsel 250KB altına indirilemedi. Lütfen daha küçük bir görsel seçin.';
                            state[key] = false;
                            if (inputEl === els.logoInput) state.logoFile = null;
                            if (inputEl === els.avatarInput) state.avatarFile = null;
                            updateButtonState();
                            return;
                        }
                        previewEl.textContent = `${processed.name} (${formatFileSize(processed.size)}${wasCompressed ? ', küçültüldü' : ''})`;
                        state[key] = true;
                        if (inputEl === els.logoInput) state.logoFile = processed;
                        if (inputEl === els.avatarInput) state.avatarFile = processed;
                        if (inputEl === els.logoInput) updateUploadLabel(els.logoLabel, true);
                        if (inputEl === els.avatarInput) updateUploadLabel(els.avatarLabel, true);
                        updateButtonState();
                    } catch (error) {
                        previewEl.textContent = 'Görsel işlenemedi. Lütfen farklı bir dosya seçin.';
                        state[key] = false;
                        if (inputEl === els.logoInput) state.logoFile = null;
                        if (inputEl === els.avatarInput) state.avatarFile = null;
                        updateButtonState();
                    }
                });
            };

            handleFile(els.logoInput, els.logoPreview, 'logoReady');
            handleFile(els.avatarInput, els.avatarPreview, 'avatarReady');

            els.descInput.addEventListener('input', () => {
                if (els.descInput.value.length > MAX_CHARS) {
                    els.descInput.value = els.descInput.value.slice(0, MAX_CHARS);
                }
                updateDescCount();
                updateButtonState();
            });

            els.generateBtn.addEventListener('click', () => {
                if (els.generateBtn.disabled) return;
                if (!meta.il || !meta.ilce || !meta.mahalle || !meta.ada || !meta.parsel) {
                    if (els.generateStatus) {
                        els.generateStatus.textContent = 'Parsel bilgileri eksik. Parsel sorgu veya kayıtlı parsellerden gelmelisiniz.';
                    }
                    return;
                }
                if (!isAuthenticated) {
                    if (els.generateStatus) {
                        els.generateStatus.textContent = 'Devam etmek için giriş yapmalısınız. Yönlendiriliyorsunuz...';
                    }
                    const currentPath = window.location.pathname + window.location.search;
                    const returnUrl = encodeURIComponent(currentPath);
                    window.location.href = `/Account/Login?returnUrl=${returnUrl}`;
                    return;
                }
                const formData = new FormData();
                formData.append('il', meta.il || '');
                formData.append('ilce', meta.ilce || '');
                formData.append('mahalle', meta.mahalle || '');
                formData.append('ada', meta.ada || '');
                formData.append('parsel', meta.parsel || '');
                formData.append('lang', state.lang);
                formData.append('tapu', state.tapu);
                formData.append('description', els.descInput.value.trim());

                const logoFile = state.logoFile || els.logoInput.files?.[0];
                const avatarFile = state.avatarFile || els.avatarInput.files?.[0];
                if (logoFile) formData.append('logo', logoFile);
                if (avatarFile) formData.append('avatar', avatarFile);

                els.generateBtn.disabled = true;
                if (els.generateStatus) els.generateStatus.textContent = 'Video isteği gönderiliyor...';
                const loadingModal = showLoadingModal('Video oluşturuluyor', 'Lütfen bekleyin...');

                fetch('/api/drone/create', {
                    method: 'POST',
                    body: formData,
                    credentials: 'include'
                })
                    .then(async (res) => {
                        if (!res.ok) {
                            const errorPayload = await res.json().catch(() => null);
                            throw new Error(errorPayload?.message || 'İstek başarısız.');
                        }
                        return res.json().catch(() => ({}));
                    })
                    .then((payload) => {
                        if (els.generateStatus) els.generateStatus.textContent = 'İstek alındı. Video oluşturma başlatıldı.';
                        if (loadingModal) loadingModal.remove();
                        const videoId = payload?.videoId;
                        const redirectUrl = videoId
                            ? `/Drone/ArsaVideolarim?videoId=${encodeURIComponent(videoId)}`
                            : '/Drone/ArsaVideolarim';
                        window.location.href = redirectUrl;
                    })
                    .catch((err) => {
                        console.error('Drone video isteği başarısız', err);
                        if (els.generateStatus) els.generateStatus.textContent = err?.message || 'İstek gönderilemedi. Lütfen tekrar deneyin.';
                        if (loadingModal) loadingModal.remove();
                    })
                    .finally(() => {
                        updateButtonState();
                    });
            });

            updateMetaView();
            updateDescCount();
            loadUserMedia();
            updateButtonState();
            if (!meta.il || !meta.ilce || !meta.mahalle || !meta.ada || !meta.parsel) {
                if (els.generateStatus) {
                    els.generateStatus.textContent = 'Parsel bilgisi bulunamadı. Parsel sorgu veya kayıtlı parsellerden gelmelisiniz.';
                }
            }
        });
    </script>
}
