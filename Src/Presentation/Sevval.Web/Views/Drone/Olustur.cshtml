<section class="drone-page">
    <div class="container">
        <div class="drone-summary">
            <div class="item">
                <span class="label">İl / İlçe</span>
                <span id="meta-loc">—</span>
            </div>
            <div class="item">
                <span class="label">Mahalle</span>
                <span id="meta-mahalle">—</span>
            </div>
            <div class="item">
                <span class="label">Ada / Parsel</span>
                <span id="meta-ap">—</span>
            </div>
        </div>

        <div class="drone-grid">
            <div class="drone-card">
                <h5>1) Dil ve Tapu durumu</h5>
                <p>Seslendirme dilini ve tapu tipini seç.</p>
                <div class="mb-3">
                    <label class="form-label">Video Dili</label>
                    <div class="chip-group" id="lang-group">
                        <button type="button" class="chip active" data-value="tr">Türkçe</button>
                        <button type="button" class="chip" data-value="ru">Русский</button>
                        <button type="button" class="chip" data-value="ar">العربية</button>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Tapu Durumu</label>
                    <div class="chip-group" id="tapu-group">
                        <button type="button" class="chip active" data-value="Tek Tapu">Tek Tapu</button>
                        <button type="button" class="chip" data-value="Kooperatif">Kooperatif</button>
                        <button type="button" class="chip" data-value="Hisseli">Hisseli</button>
                        <button type="button" class="chip" data-value="Hobi Bahçesi">Hobi Bahçesi</button>
                    </div>
                </div>
            </div>

            <div class="drone-card">
                <h5>2) Logo & Avatar</h5>
                <p>Marka kimliğini ekle, ön izlemeyi gör.</p>
                <div class="upload-box mb-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="form-label mb-1">Firma Logosu</div>
                            <div class="hint">PNG/JPG, 2MB altı</div>
                        </div>
                        <label class="upload-label">
                            <i class="fa-solid fa-cloud-arrow-up"></i> Yükle
                            <input type="file" id="logo-input" accept="image/*">
                        </label>
                    </div>
                    <div id="logo-preview" class="hint">Henüz dosya seçilmedi.</div>
                </div>
                <div class="upload-box">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="form-label mb-1">Danışman Fotoğrafı</div>
                            <div class="hint">PNG/JPG, 2MB altı</div>
                        </div>
                        <label class="upload-label">
                            <i class="fa-solid fa-user"></i> Yükle
                            <input type="file" id="avatar-input" accept="image/*">
                        </label>
                    </div>
                    <div id="avatar-preview" class="hint">Henüz dosya seçilmedi.</div>
                </div>
            </div>

            <div class="drone-card">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <div>
                        <h5 class="mb-1">3) Seslendirme Metni</h5>
                        <p class="mb-0">Metni düzenleyebilir veya varsayılanı kullanabilirsin.</p>
                    </div>
                </div>
                <div class="mb-2">
                    <textarea class="form-control w-100 description" id="description-input" rows="6" placeholder="Arsanın özelliklerini ve çevresini anlat..." ></textarea>
                    <div class="d-flex justify-content-between align-items-center mt-1">
                        <span class="hint">Maks 700 karakter</span>
                        <span class="char-count" id="desc-count">0/700</span>
                    </div>
                </div>
                <div class="d-flex flex-column flex-md-row align-items-start gap-2 mt-3">
                    <button type="button" class="btn-primary-drone" id="generate-btn" disabled>
                        <i class="fa-solid fa-video"></i> Video Oluştur
                    </button>
                    <div>
                        <div class="hint">Logo, avatar ve açıklama dolu olmalı.</div>
                        <div class="hint" id="generate-status"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const isAuthenticated = @User.Identity?.IsAuthenticated.ToString().ToLower();
            const splash = document.getElementById('drone-splash');
            if (splash) {
                setTimeout(() => {
                    splash.classList.add('is-hidden');
                }, 1800);
                splash.addEventListener('transitionend', () => {
                    splash.remove();
                });
            }

            const MAX_CHARS = 700;
            const params = new URLSearchParams(window.location.search);
            const meta = {
                il: params.get('il') || '',
                ilce: params.get('ilce') || '',
                mahalle: params.get('mahalle') || '',
                ada: params.get('ada') || '',
                parsel: params.get('parsel') || ''
            };
            const state = {
                lang: 'tr',
                tapu: 'Tek Tapu',
                logoReady: false,
                avatarReady: false
            };

            const els = {
                langChips: document.querySelectorAll('#lang-group .chip'),
                tapuChips: document.querySelectorAll('#tapu-group .chip'),
                logoInput: document.getElementById('logo-input'),
                avatarInput: document.getElementById('avatar-input'),
                logoPreview: document.getElementById('logo-preview'),
                avatarPreview: document.getElementById('avatar-preview'),
                descInput: document.getElementById('description-input'),
                descCount: document.getElementById('desc-count'),
                generateBtn: document.getElementById('generate-btn'),
                generateStatus: document.getElementById('generate-status'),
                metaLoc: document.getElementById('meta-loc'),
                metaMahalle: document.getElementById('meta-mahalle'),
                metaAp: document.getElementById('meta-ap')
            };

            const defaultDesc = () => {
                return '';
            };

            const updateChips = (chips, value) => {
                chips.forEach((chip) => chip.classList.toggle('active', chip.dataset.value === value));
            };

            const updateDescCount = () => {
                const len = els.descInput.value.length;
                els.descCount.textContent = `${len}/${MAX_CHARS}`;
            };

            const updateButtonState = () => {
                const ready = state.logoReady && state.avatarReady && els.descInput.value.trim().length > 0;
                els.generateBtn.disabled = !ready;
            };

            const updateMetaView = () => {
                if (els.metaLoc) els.metaLoc.textContent = meta.il && meta.ilce ? `${meta.il} / ${meta.ilce}` : '—';
                if (els.metaMahalle) els.metaMahalle.textContent = meta.mahalle || '—';
                if (els.metaAp) els.metaAp.textContent = (meta.ada && meta.parsel) ? `${meta.ada} / ${meta.parsel}` : '—';
            };

            const areRequiredElsReady = () => {
                return Boolean(
                    els.langChips.length &&
                    els.tapuChips.length &&
                    els.logoInput &&
                    els.avatarInput &&
                    els.descInput &&
                    els.generateBtn
                );
            };

            if (!areRequiredElsReady()) {
                console.warn('Drone form elemanlari eksik. Sayfa tam yuklenmedi.');
                return;
            }

            els.langChips.forEach((chip) => {
                chip.addEventListener('click', () => {
                    state.lang = chip.dataset.value || 'tr';
                    updateChips(els.langChips, state.lang);
                    updateDescCount();
                    updateButtonState();
                });
            });

            els.tapuChips.forEach((chip) => {
                chip.addEventListener('click', () => {
                    state.tapu = chip.dataset.value || 'Tek Tapu';
                    updateChips(els.tapuChips, state.tapu);
                    updateDescCount();
                    updateButtonState();
                });
            });

            const handleFile = (inputEl, previewEl, key) => {
                if (!inputEl || !previewEl) return;
                inputEl.addEventListener('change', () => {
                    const file = inputEl.files?.[0];
                    if (!file) return;
                    previewEl.textContent = `${file.name} (${Math.round(file.size / 1024)} KB)`;
                    state[key] = true;
                    updateButtonState();
                });
            };

            handleFile(els.logoInput, els.logoPreview, 'logoReady');
            handleFile(els.avatarInput, els.avatarPreview, 'avatarReady');

            els.descInput.addEventListener('input', () => {
                if (els.descInput.value.length > MAX_CHARS) {
                    els.descInput.value = els.descInput.value.slice(0, MAX_CHARS);
                }
                updateDescCount();
                updateButtonState();
            });

            els.generateBtn.addEventListener('click', () => {
                if (els.generateBtn.disabled) return;
                if (!isAuthenticated) {
                    if (els.generateStatus) {
                        els.generateStatus.textContent = 'Devam etmek icin giris yapmalisiniz. Yonlendiriliyorsunuz...';
                    }
                    const currentPath = window.location.pathname + window.location.search;
                    const returnUrl = encodeURIComponent(currentPath);
                    window.location.href = `/Account/Login?returnUrl=${returnUrl}`;
                    return;
                }
                const formData = new FormData();
                formData.append('il', meta.il || '');
                formData.append('ilce', meta.ilce || '');
                formData.append('mahalle', meta.mahalle || '');
                formData.append('ada', meta.ada || '');
                formData.append('parsel', meta.parsel || '');
                formData.append('lang', state.lang);
                formData.append('tapu', state.tapu);
                formData.append('description', els.descInput.value.trim());

                const logoFile = els.logoInput.files?.[0];
                const avatarFile = els.avatarInput.files?.[0];
                if (logoFile) formData.append('logo', logoFile);
                if (avatarFile) formData.append('avatar', avatarFile);

                els.generateBtn.disabled = true;
                if (els.generateStatus) els.generateStatus.textContent = 'Video isteği gönderiliyor...';

                fetch('/api/drone/create', {
                    method: 'POST',
                    body: formData
                })
                    .then((res) => {
                        if (!res.ok) throw new Error('İstek başarısız.');
                        return res.json().catch(() => ({}));
                    })
                    .then(() => {
                        if (els.generateStatus) els.generateStatus.textContent = 'İstek alındı. Video oluşturma başlatıldı.';
                    })
                    .catch((err) => {
                        console.error('Drone video isteği başarısız', err);
                        if (els.generateStatus) els.generateStatus.textContent = 'İstek gönderilemedi. Lütfen tekrar deneyin.';
                    })
                    .finally(() => {
                        updateButtonState();
                    });
            });

            // init
            updateMetaView();
            updateDescCount();
            updateButtonState();
        });
    </script>
}
