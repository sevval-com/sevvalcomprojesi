@{
    ViewData["Title"] = "Drone Video Oluştur";
}

@section style {
    <style>
        :root {
            --ink: #0f172a;
            --muted: #6b7280;
            --brand: #0ea5e9;
            --brand-2: #1d4ed8;
            --line: #e5e7eb;
            --surface: #ffffff;
            --wash: #f5f7fb;
            --wash-2: #eef2f7;
            --font: "Manrope", "Inter", system-ui, -apple-system, sans-serif;
        }

        .drone-create {
            background: var(--wash);
            padding: 56px 0 80px;
            position: relative;
            overflow: hidden;
            min-height: calc(100vh - 220px);
            font-family: var(--font);
        }

        .drone-shell {
            max-width: 1120px;
            margin: 0 auto;
            display: flex;
            flex-direction: column;
            gap: 22px;
        }

        .drone-create .container {
            padding-left: 20px;
            padding-right: 20px;
        }

        .drone-create::before,
        .drone-create::after {
            content: "";
            position: absolute;
            width: 420px;
            height: 420px;
            border-radius: 50%;
            background: radial-gradient(circle at 30% 30%, rgba(14, 165, 233, 0.18), transparent 60%);
            filter: blur(2px);
            opacity: 0.7;
            pointer-events: none;
        }

        .drone-create::before { top: -180px; left: -120px; }
        .drone-create::after { bottom: -220px; right: -160px; }

        .drone-hero {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .hero-copy .eyebrow {
            text-transform: uppercase;
            letter-spacing: 0.18em;
            font-size: 11px;
            color: var(--brand-2);
            font-weight: 700;
        }

        .hero-copy h1 {
            font-size: 30px;
            font-weight: 800;
            color: var(--ink);
            margin-bottom: 8px;
            letter-spacing: -0.02em;
        }

        .hero-copy p {
            color: var(--muted);
            font-size: 15px;
            margin: 0;
        }

        .meta-grid {
            display: grid;
            gap: 10px;
            grid-template-columns: repeat(2, minmax(0, 1fr));
        }

        .meta-card {
            background: var(--surface);
            border: 1px solid var(--line);
            border-radius: 16px;
            padding: 12px 14px;
            box-shadow: 0 12px 24px -18px rgba(15, 23, 42, 0.35);
        }

        .meta-title {
            font-size: 11px;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            color: var(--muted);
            font-weight: 700;
            margin-bottom: 6px;
        }

        .meta-value {
            font-size: 16px;
            font-weight: 700;
            color: var(--ink);
        }

        .meta-note {
            margin-top: 8px;
            font-size: 12px;
            color: var(--muted);
        }

        .drone-content {
            display: grid;
            gap: 18px;
            grid-template-columns: 1fr;
        }

        @@media (min-width: 768px) {
            .drone-shell { gap: 28px; }
            .drone-content { gap: 24px; }
            .meta-grid { gap: 12px; }
        }

        @@media (min-width: 992px) {
            .meta-grid { grid-template-columns: repeat(3, minmax(0, 1fr)); }
            .drone-hero {
                flex-direction: row;
                align-items: center;
                justify-content: space-between;
                gap: 32px;
            }

            .drone-content {
                grid-template-columns: repeat(2, minmax(0, 1fr));
            }
        }

        .drone-panel {
            background: var(--surface);
            border: 1px solid var(--line);
            border-radius: 20px;
            padding: 24px;
            display: flex;
            flex-direction: column;
            gap: 14px;
            box-shadow: 0 16px 32px -24px rgba(15, 23, 42, 0.4);
        }

        .drone-panel.panel-wide {
            grid-column: 1 / -1;
        }

        .panel-title {
            font-size: 18px;
            font-weight: 800;
            color: var(--ink);
            margin-bottom: 4px;
        }

        .panel-subtitle {
            font-size: 14px;
            color: var(--muted);
            margin: 0;
        }

        .form-label {
            font-weight: 700;
            color: var(--ink);
            margin-bottom: 6px;
        }

        .form-control, .form-select, textarea {
            border-radius: 14px;
            border: 1px solid var(--line);
            min-height: 46px;
            padding: 10px 12px;
        }

        .description-input {
            width: 100%;
            resize: none;
        }

        .form-control:focus, .form-select:focus, textarea:focus {
            border-color: var(--brand);
            box-shadow: none;
            outline: none;
        }

        .chip-group {
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
        }

        .chip {
            padding: 12px 18px;
            border-radius: 999px;
            background: #ffffff;
            border: 1px solid #e2e8f0;
            color: var(--ink);
            cursor: pointer;
            transition: border-color 0.15s ease, color 0.15s ease, background 0.15s ease;
            font-weight: 700;
            min-height: 48px;
            box-shadow: 0 10px 18px -16px rgba(15, 23, 42, 0.45);
        }

        .chip.active {
            background: rgba(14, 165, 233, 0.12);
            border-color: rgba(14, 165, 233, 0.7);
            color: #0b5e9b;
        }

        .upload-box {
            border: 1px dashed rgba(15, 23, 42, 0.16);
            border-radius: 16px;
            padding: 14px 16px;
            display: grid;
            gap: 8px;
            background: #f9fafb;
        }

        .upload-box input { display: none; }

        .upload-label {
            display: inline-flex;
            gap: 8px;
            align-items: center;
            padding: 8px 14px;
            border-radius: 999px;
            background: #e0f2fe;
            color: #075985;
            font-weight: 700;
            cursor: pointer;
        }

        .upload-preview {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .upload-preview img {
            width: 48px;
            height: 48px;
            border-radius: 12px;
            object-fit: cover;
            border: 1px solid var(--line);
            background: #fff;
        }

        .upload-preview span {
            font-size: 13px;
            color: var(--ink);
            font-weight: 600;
        }

        .btn-primary-drone {
            background: linear-gradient(90deg, var(--brand), var(--brand-2));
            color: #fff;
            border: none;
            padding: 14px 18px;
            border-radius: 16px;
            font-weight: 800;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            width: 100%;
            justify-content: center;
            transition: transform 0.12s ease;
        }

        .btn-primary-drone:hover { transform: translateY(-1px); }
        .btn-primary-drone:disabled { opacity: 0.7; cursor: not-allowed; }

        .btn-primary-drone.is-loading {
            pointer-events: none;
            opacity: 0.85;
        }

        .btn-primary-drone.is-loading::after {
            content: "";
            width: 16px;
            height: 16px;
            border: 2px solid rgba(255, 255, 255, 0.35);
            border-top-color: #ffffff;
            border-radius: 50%;
            animation: spin 0.8s linear infinite;
            margin-left: 8px;
            display: inline-block;
        }

        .hint {
            font-size: 12px;
            color: var(--muted);
        }

        .char-count {
            font-size: 12px;
            color: var(--muted);
            text-align: right;
        }

        .generate-modal {
            position: fixed;
            inset: 0;
            background: rgba(15, 23, 42, 0.45);
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            pointer-events: none;
            transition: opacity 0.2s ease;
            z-index: 9999;
        }

        .generate-modal.is-visible {
            opacity: 1;
            pointer-events: auto;
        }

        .generate-modal-card {
            background: #fff;
            border-radius: 16px;
            padding: 22px 24px;
            min-width: 280px;
            text-align: center;
            border: 1px solid var(--line);
        }

        .generate-modal-title {
            font-weight: 700;
            color: #0f172a;
            margin-bottom: 6px;
        }

        .generate-modal-subtitle {
            font-size: 13px;
            color: #64748b;
        }

        .drone-splash {
            position: fixed;
            inset: 0;
            background: radial-gradient(120% 120% at 10% 10%, rgba(14, 165, 233, 0.22), transparent 45%), radial-gradient(110% 120% at 90% 20%, rgba(37, 99, 235, 0.2), transparent 55%), linear-gradient(135deg, #0c4da2, #0ea5e9);
            display: grid;
            place-items: center;
            z-index: 9999;
            overflow: hidden;
            opacity: 1;
            visibility: visible;
            transition: opacity 0.6s ease, visibility 0.6s ease;
            font-family: var(--font);
        }

        .drone-splash.is-hidden {
            opacity: 0;
            visibility: hidden;
        }

        .splash-logo {
            position: absolute;
            top: 96px;
            left: 50%;
            transform: translateX(-50%);
            width: min(320px, 70vw);
            height: auto;
            padding: 0;
            background: transparent;
            border: none;
        }

        .drone-splash .drone {
            position: absolute;
            width: var(--size, 42px);
            height: var(--size, 42px);
            left: var(--x, 50%);
            bottom: -24%;
            animation: splash-rise var(--dur, 3.2s) ease-in-out infinite;
            animation-delay: var(--delay, 0s);
            filter: brightness(0) invert(1) drop-shadow(0 8px 14px rgba(8, 47, 73, 0.35));
        }

        @@keyframes splash-rise {
            0% { transform: translateY(0) scale(0.92); opacity: 0; }
            15% { opacity: 0.9; }
            50% { transform: translateY(-55vh) scale(1); opacity: 1; }
            100% { transform: translateY(-135vh) scale(1.02); opacity: 0; }
        }


        @@keyframes spin {
            to { transform: rotate(360deg); }
        }

        @@media (prefers-reduced-motion: reduce) {
            .drone-splash .drone { animation: none; }
            .drone-splash { transition: none; }
        }

        @@media (max-width: 576px) {
            .hero-copy h1 { font-size: 23px; }
            .hero-copy p { font-size: 14px; }
            .drone-hero { gap: 12px; }
            .meta-grid { grid-template-columns: 1fr; gap: 8px; }
            .meta-card { padding: 10px 12px; border-radius: 14px; }
            .meta-note { margin-top: 6px; }
            .drone-panel { padding: 12px 14px; gap: 10px; border-radius: 18px; }
            .panel-title { font-size: 16px; margin-bottom: 2px; }
            .panel-subtitle { font-size: 13px; }
            .form-label { margin-bottom: 4px; }
            .upload-box { padding: 12px; }
            .chip-group { flex-direction: column; gap: 8px; }
            .chip { width: 100%; justify-content: center; min-height: 42px; padding: 10px 14px; }
            .btn-primary-drone { min-height: 46px; padding: 12px 16px; }
            .drone-content { gap: 12px; }
            .drone-shell { gap: 14px; }
            .drone-create { padding: 24px 0 40px; }
            .drone-create .container { padding-left: 16px; padding-right: 16px; }
        }

        @@media (max-width: 420px) {
            .meta-grid { grid-template-columns: 1fr; }
        }
    </style>
}

