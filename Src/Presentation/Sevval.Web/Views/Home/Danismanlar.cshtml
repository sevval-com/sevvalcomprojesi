@{
    Layout = "_Layout";
    ViewData["Title"] = "Kardeş Firmalar";
    ViewData["HideFooter"] = true;
}

@section Styles {
    <link rel="stylesheet" href="~/css/Anasayfa.css">
    <link rel="stylesheet" href="~/css/kardesfirmalar.css">
    <style>
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
            background-image: url('~/images/arka-plan-resmi.webp');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
        }

        .centered-text {
            text-align: center;
            margin-top: 50px;
            flex-grow: 1;
        }

        .large-title {
            font-size: 2.5em;
            font-weight: bold;
        }

        .small-text {
            font-size: 1.2em;
            color: #555;
        }
    </style>
}

<!-- Pop-up Penceresi -->
<div id="login-popup" class="popup">
    <div class="popup-content">
        <button class="close-button" id="close-popup">&times;</button>
        <div class="left-section">
            <h2>Bireysel Kullanıcı</h2>
            <a href="@Url.Action("Login", "Account")" class="button">Giriş Yap</a>
            <a href="@Url.Action("Register", "Account")" class="button">Üye Ol</a>
        </div>
        <div class="right-section">
            <h2>Emlakçı Girişi</h2>
            <a href="#" class="button">Giriş Yap</a>
            <a href="#" class="button">Üye Ol</a>
        </div>
    </div>
</div>

<div class="consultants-popup">
    <h2 class="consultants-title">Danışmanlarımız</h2>
    <p class="consultants-description">
        Müşteri memnuniyetini ön planda tutan, güler yüzlü ve profesyonel ekibimizle, emlak sürecinde her adımda size destek oluyoruz. <br />Uzman danışmanlarımız sayesinde, doğru yatırımı yaparak karlı çıkabilirsiniz.
    </p>
    <div class="consultants-container">
        <div class="consultant-item" onclick="showEmirhanPopup()">
            <img src="~/sablon/img/EA.webp" alt="Danışman Emirhan" class="consultant-image">
            <h3>Emirhan ACAR</h3>
            <p>Kocaeli Körfez Şubesi</p>
            <div class="whatsapp-container whatsapp-position-1">
                <a href="https://wa.me/905070775666?text=Merhaba,%20Şevval%20Emlak%20Sitenizden%20Size%20Ulaşıyorum" target="_blank">
                    <img src="~/sablon/img/WhatsApp_icon.webp" alt="WhatsApp" class="whatsapp-icon" />
                </a>
            </div>
        </div>

        <div class="consultant-item" onclick="showIlkayPopup()">
            <img src="~/sablon/img/İK.webp" alt="Danışman İlkay" class="consultant-image">
            <h3>İlkay KOYUN</h3>
            <p>Zonguldak Kdz.Ereğli Şubesi</p>
            <div class="whatsapp-container whatsapp-position-2">
                <a href="https://wa.me/05333034167?text=Merhaba,%20Şevval%20Emlak%20Sitenizden%20Size%20Ulaşıyorum" target="_blank">
                    <img src="~/sablon/img/WhatsApp_icon.webp" alt="WhatsApp" class="whatsapp-icon" />
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Giriş Yap butonuna tıklandığında pop-up penceresini aç
        document.getElementById('login-button').addEventListener('click', function (event) {
            event.preventDefault();
            document.getElementById('login-popup').style.display = 'flex';
        });

        // Pop-up penceresinin dışında bir yere tıklandığında kapat
        document.getElementById('login-popup').addEventListener('click', function (event) {
            if (event.target === this) {
                this.style.display = 'none';
            }
        });
    </script>
}
