@{
    ViewData["Title"] = "Fotoğraf Yükleme";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h2>Fotoğraf Yükleme</h2>

    <form asp-action="Yukle" method="post" enctype="multipart/form-data">
        <div class="form-group mb-3">
            <label for="fromFiles">Fotoğrafları Seçin:</label>
            <input type="file" id="fromFiles" name="fromFiles" multiple class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Yükle</button>
    </form>
</div>
