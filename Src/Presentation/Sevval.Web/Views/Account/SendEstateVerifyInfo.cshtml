@{
    Layout = null; // Layout kullanılmıyor
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Şevval Emlak</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f5f5f5;
        }
        .confirmation-container {
            text-align: center;
            background: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 30px;
            width: 80%;
            max-width: 400px;
        }
        .confirmation-container h1 {
            font-size: 24px;
            color: #333333;
        }
        .confirmation-container p {
            font-size: 16px;
            color: #555555;
            margin: 15px 0;
        }
        .confirmation-container a {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 20px;
            font-size: 14px;
            color: #ffffff;
            background-color: #007bff;
            border-radius: 4px;
            text-decoration: none;
        }
        .confirmation-container a:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="confirmation-container">
        <h1>İşlem Başarıyla Tamamlandı</h1>
        <p>48 Saat İçerisinde Üyeliğiniz Kontrol Edilecek, Ardından Sorun Olmadığı Takdirde Onaylanacaktır.</p>
        <a href="/">Ana Sayfaya Dön</a>
    </div>
</body>
</html>
