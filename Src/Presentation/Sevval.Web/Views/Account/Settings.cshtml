@model sevvalemlak.Models.SettingsViewModel
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery

@{
    ViewData["Title"] = "Ayarlar";
    Layout = null;
    var activeTab = ViewData["ActiveTab"] as string ?? "profile";
    var talepCount = ViewBag.TalepCount ?? 0;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Şevval Emlak</title>

    <!-- CSS Libraries -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <!-- Navbar için gerekli olan özel CSS -->
    <link rel="stylesheet" href="~/css/Anasayfa.css" />
    <link rel="icon" type="image/png" href="~/images/favlogo.webp">

</head>
<body>
    <!-- Navbar -->
    <nav class="navbaar">
        <div class="navbaar-container">
            <div class="logo">
                <a href="/">
                    <img src="~/images/LOGO mavi.webp" alt="Firma Logosu">
                </a>
                <span>Şevval Emlak</span>
            </div>
            <div class="hamburger" id="hamburger-menu">
                <div class="line"></div>
                <div class="line"></div>
                <div class="line"></div>
            </div>
            <ul class="naav-linkss" id="nav-links">
                <li><a href="@Url.Action("Index", "Home")">Ana Sayfa</a></li>
                <li><a href="@Url.Action("Firmalar", "Home")">Firmalar</a></li>
                <li class="dropdoawn">
                    <a href="@Url.Action("About", "Home")">Hakkımızda</a>
                </li>
                <li><a href="@Url.Action("Index", "VideolarSayfasi")">Videolar</a></li>
               
                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <li>
                        <a href="@Url.Action("Panel", "Ilan")">Mağazam</a>
                    </li>
                }
            </ul>
            <div class="auth-buttoons">
                @if (User.Identity.IsAuthenticated)
                {
                    var currentUser = await UserManager.GetUserAsync(User);
                    if (currentUser != null)
                    {
                        <div class="dropdown">
                            <a href="#" class="user-name">@currentUser.FirstName @currentUser.LastName</a>
                            <ul class="dropdown-content">
                                <li><a href="@Url.Action("RedirectToStore", "Ilan", new { email = User.Identity.Name })">Mağazam</a></li>
                                <li><a href="@Url.Action("Panel", "Ilan")">Raporlar</a></li>
                                <li><a href="@Url.Action("Ilanlar", "Ilan")">İlanlar</a></li>
                                <li><a href="@Url.Action("Danismanlar", "Ilan")">Danışmanlar</a></li>
                                <li><a href="@Url.Action("Sozlesmeler", "Ilan")">Sözleşmeler</a></li>
                                
                                <li><a href="@Url.Action("Index", "Satinal")">Satın Al</a></li>
                                <li><a href="@Url.Action("Settings", "Account")">Ayarlar</a></li>
                                @if (User.Identity.IsAuthenticated && (User.Identity.Name == "sftumen41@gmail.com" || User.Identity.Name == "exdel.txt@gmail.com"))
                                {
                                    <li><a href="@Url.Action("Index", "SevvalOfis")">Şevval Ofis</a></li>
                                }
                                <li><a href="@Url.Action("KategoriSecim", "Ilan")">İlan Ver</a></li>
                                <li>
                                    <form asp-action="Logout" asp-controller="Account" method="post">
                                        <button type="submit" class="logout-btn">Çıkış Yap</button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    }
                }
                else
                {
                    <a href="#" class="login" id="giris-buton">Giriş Yap</a>
                }
                <div class="post-ad-container">
                    <span class="free-tag">Ücretsiz</span>
                    <a href="@(!User.Identity.IsAuthenticated ? @Url.Action("Login", "Account", new { Type = "GENEL" }) : Url.Action("KategoriSecim", "Ilan"))" class="post-ad" id="post-ad-button">+ İlan Ver</a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Giriş Yap Pop-up -->
    <div id="popup-giris" class="pencere" style="display:none;">
        <div class="pencere-icerik">
            <button class="kapat-buton" id="pencere-kapat">&times;</button>
            <div class="sol-bolum">
                <h2>Bireysel</h2>
                <a href="@Url.Action("Login", "Account")" class="baglanti">Giriş Yap</a>
                <a href="@Url.Action("Register", "Account")" class="baglanti">Üye Ol</a>
            </div>
            <div class="sag-bolum">
                <h2>Kurumsal</h2>
                <a href="@Url.Action("Login", "Account")" class="baglanti">Giriş Yap</a>
                <a href="@Url.Action("EstateRegister", "Account")" class="baglanti">Üye Ol</a>
            </div>
        </div>
    </div>

    <!-- Genel Stil Tanımlamaları -->
    <style>
        body {
            background-color: #f0f2f5;
        }

        .post-ad-container {
            position: relative;
            display: inline-block
        }

        .free-tag {
            position: absolute;
            top: -10px;
            left: -10px;
            background-color: #007bff;
            color: #fff;
            font-size: 10px;
            font-weight: 700;
            padding: 3px 8px;
            border-radius: 4px;
            transform: rotate(-10deg);
            z-index: 1;
            box-shadow: 0 2px 4px rgba(0,0,0,.2)
        }

        .post-ad {
            display: inline-block;
            background-color: #fff;
            color: #007bff;
            padding: 10px 15px;
            text-decoration: none;
            border-radius: 5px;
            font-weight: 700;
            border: 1px solid #007bff;
            transition: .3s ease
        }

            .post-ad:hover {
                background-color: #007bff;
                color: #fff
            }

        .coming-soon-tag {
            position: absolute;
            top: 20px;
            left: 55px;
            background-color: #007bff;
            color: #fff;
            font-size: 10px;
            font-weight: 700;
            padding: 3px 8px;
            border-radius: 4px;
            transform: none;
            z-index: 1;
            box-shadow: 0 2px 4px rgba(0,0,0,.2)
        }

        .pencere {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,.8);
            justify-content: center;
            align-items: center;
            z-index: 1100
        }

        .pencere-icerik {
            background: linear-gradient(90deg,#1e88e5,#2196f3);
            width: 460px;
            height: 490px;
            display: flex;
            border-radius: 15px;
            box-shadow: 0 8px 30px rgba(0,0,0,.3);
            overflow: hidden;
            position: relative;
            padding: 20px;
            box-sizing: border-box;
            margin: auto
        }

        .sol-bolum, .sag-bolum {
            flex: 1;
            padding: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center
        }

        .sag-bolum {
            border-left: 2px solid #fff
        }

        .pencere-icerik h2 {
            margin-bottom: 20px;
            font-size: 28px;
            color: #fff;
            font-weight: 700
        }

        .baglanti {
            margin: 15px 0;
            padding: 15px 25px;
            background: #fff;
            color: #1e88e5;
            text-decoration: none;
            border-radius: 10px;
            border: none;
            cursor: pointer;
            transition: background .3s,transform .2s;
            box-shadow: 0 4px 12px rgba(0,0,0,.2);
            font-size: 18px;
            width: 80%
        }

            .baglanti:hover {
                background: #f1f1f1;
                transform: translateY(-2px)
            }

            .baglanti:focus {
                outline: none
            }

        .kapat-buton {
            position: absolute;
            top: 10px;
            right: 10px;
            width: 40px;
            height: 40px;
            font-size: 30px;
            color: #fff;
            background: 0 0;
            border: 2px solid #fff;
            text-align: center;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center
        }

            .kapat-buton:hover {
                color: #d32f2f;
                border-color: #d32f2f
            }

        .profile-image-container {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            overflow: hidden;
            margin: 0 auto;
            border: 3px solid #0d6efd;
        }

            .profile-image-container img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }
    </style>

    <main class="container-fluid my-4">
        <div class="row g-lg-4 g-3">
            <!-- MOBİL KONTROL PANELİ BUTONU -->
            <div class="d-lg-none mb-3 px-3">
                <button class="btn btn-primary w-100 p-3" type="button" data-bs-toggle="collapse" data-bs-target="#controlPanel" aria-expanded="false" aria-controls="controlPanel">
                    <i class="fas fa-bars me-2"></i> Menü
                </button>
            </div>

            <!-- SOL PANEL (Masaüstü) / AÇILIR PANEL (Mobil) -->
            <aside class="col-lg-2">
                <div class="collapse d-lg-block" id="controlPanel">
                    <div class="sticky-top" style="top: 20px;">
                        <div class="card shadow-sm mb-4">
                            <div class="card-header bg-primary text-white">
                                <h5 class="mb-0"><i class="fas fa-compass me-2"></i> Menü</h5>
                            </div>
                            <div class="list-group list-group-flush">
                                <a href="@Url.Action("Panel", "Ilan")" class="list-group-item list-group-item-action">Raporlar</a>
                                <a href="@Url.Action("Ilanlar", "Ilan")" class="list-group-item list-group-item-action">İlanlar</a>
                                <a href="@Url.Action("Danismanlar", "Ilan")" class="list-group-item list-group-item-action">Danışmanlar</a>
                                <a href="@Url.Action("Sozlesmeler", "Ilan")" class="list-group-item list-group-item-action">Sözleşmeler</a>
                                
                                <a href="@Url.Action("Settings", "Account")" class="list-group-item list-group-item-action active" aria-current="true">Ayarlar</a>
                                <a href="@Url.Action("Index", "Satinal")" class="list-group-item list-group-item-action">Satın Al</a>
                                
                               
                                @if (User.Identity.IsAuthenticated && (new List<string> { "sftumen41@gmail.com", "exdel.txt@gmail.com" }).Contains(User.Identity.Name, StringComparer.OrdinalIgnoreCase))
                                {
                                    <a href="@Url.Action("Index", "SevvalOfis")" class="list-group-item list-group-item-action">Şevval Ofis</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </aside>

            <section class="col-lg-10">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white py-3">
                        <h5 class="mb-0"><i class="bi bi-gear-fill me-2"></i>Ayarlar</h5>
                    </div>
                    <div class="card-body">
                        <ul class="nav nav-tabs" id="myTab" role="tablist">
                            <li class="nav-item" role="presentation">
                                <button class="nav-link @(activeTab == "profile" ? "active" : "")" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="true">Profil Bilgileri</button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link @(activeTab == "membership" ? "active" : "")" id="membership-tab" data-bs-toggle="tab" data-bs-target="#membership" type="button" role="tab" aria-controls="membership" aria-selected="false">Üyelik İşlemleri</button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link @(activeTab == "security" ? "active" : "")" id="security-tab" data-bs-toggle="tab" data-bs-target="#security" type="button" role="tab" aria-controls="security" aria-selected="false">
                                    <i class="bi bi-shield-lock me-2"></i>Hesap Güvenliği
                                </button>
                            </li>
                        </ul>
                        <div class="tab-content p-3 border border-top-0" id="myTabContent">
                            <!-- Profil Tab -->
                            <div class="tab-pane fade @(activeTab == "profile" ? "show active" : "")" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                                <form asp-action="ChangeCredentials" asp-controller="Account" method="post" enctype="multipart/form-data">
                                    <div class="row">
                                        <div class="col-md-3 text-center mb-4">
                                            <div class="profile-image-container mb-3">
                                                <img src="@(string.IsNullOrEmpty(Model.ProfilePicturePath) ? "/images/default-profile.webp" : Model.ProfilePicturePath)" alt="Profil Resmi" id="profilePicturePreview" />
                                            </div>
                                            <label for="profilePictureInput" class="btn btn-outline-primary">
                                                <i class="fas fa-upload me-2"></i>Resim Seç
                                            </label>
                                            <input type="file" name="ProfilePicture" id="profilePictureInput" style="display: none;" onchange="previewImage(this)" accept="image/*" />
                                        </div>
                                        <div class="col-md-9">
                                            <div class="row">
                                                <div class="col-md-6 mb-3">
                                                    <label asp-for="Email" class="form-label">E-posta</label>
                                                    <input asp-for="Email" class="form-control" readonly />
                                                </div>
                                                <div class="col-md-6 mb-3">
                                                    <label asp-for="PhoneNumber" class="form-label">Telefon Numarası</label>
                                                    <input asp-for="PhoneNumber" class="form-control" />
                                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-6 mb-3">
                                                    <label asp-for="FirstName" class="form-label">Ad</label>
                                                    <input asp-for="FirstName" class="form-control" />
                                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                                </div>
                                                <div class="col-md-6 mb-3">
                                                    <label asp-for="LastName" class="form-label">Soyad</label>
                                                    <input asp-for="LastName" class="form-control" />
                                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12 mb-4">
                                                    <label class="form-label d-block">Banner Fotoğrafı</label>
                                                    <div class="mb-2">
                                                        @if (!string.IsNullOrEmpty(Model.BannerPicturePath))
                                                        {
                                                            <img id="bannerPreview" src="@Model.BannerPicturePath" alt="Mevcut Banner" style="max-width:100%; height:auto; border:1px solid #e9ecef; border-radius:8px;" />
                                                        }
                                                        else
                                                        {
                                                            <img id="bannerPreview" src="" alt="Banner Önizleme" style="display:none; max-width:100%; height:auto; border:1px solid #e9ecef; border-radius:8px;" />
                                                            <div class="text-muted" style="font-size: 0.9rem;">Henüz bir banner fotoğrafı yüklenmemiş.</div>
                                                        }
                                                    </div>
                                                    <label for="bannerPictureInput" class="btn btn-outline-primary banner-action-btn d-inline-flex align-items-center gap-2">
                                                        <i class="fas fa-upload"></i><span>Banner Seç</span>
                                                    </label>
                                                    <input type="file" name="BannerPicture" id="bannerPictureInput" style="display: none;" accept="image/*" />
                                                    @if (!string.IsNullOrEmpty(Model.BannerPicturePath))
                                                    {
                                                        <button type="submit" formaction="@Url.Action("DeleteBanner", "Account")" formmethod="post" class="btn btn-outline-danger banner-action-btn d-inline-flex align-items-center gap-2 ms-2" onclick="return confirm('Bannerı silmek istediğinize emin misiniz?');">
                                                            <i class="fas fa-trash"></i><span>Sil</span>
                                                        </button>
                                                    }
                                                    <div class="form-text mt-2">Önerilen boyut: 1220 x 240 piksel</div>
                                                </div>
                                            </div>
                                            @if (Model.UserTypes == "KURUMSAL GIRIŞ")
                                            {
                                                <div class="mb-3" style="display: none;">
                                                    <label asp-for="CompanyName" class="form-label">Firma Adı</label>
                                                    <input asp-for="CompanyName" class="form-control" />
                                                    <span asp-validation-for="CompanyName" class="text-danger"></span>
                                                </div>
                                            }
                                            <div class="mb-3">
                                                <label for="Password" class="form-label">Yeni Şifre</label>
                                                <div class="input-group">
                                                    <input type="password" id="Password" name="Password" class="form-control" minlength="4" placeholder="Yeni şifrenizi girin">
                                                    <button class="btn btn-outline-secondary" type="button" onclick="togglePasswordVisibility('Password')"><i class="fas fa-eye"></i></button>
                                                </div>
                                                <small class="text-muted">Şifrenizi değiştirmek istemiyorsanız boş bırakın.</small>
                                            </div>
                                            <button type="submit" class="btn btn-primary"><i class="fas fa-save me-2"></i>Değişiklikleri Kaydet</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <!-- Üyelik Tab -->
                            <div class="tab-pane fade @(activeTab == "membership" ? "show active" : "")" id="membership" role="tabpanel" aria-labelledby="membership-tab">
                                <div id="membershipRequestStatus" class="mb-3"></div>
                                @if (Model.UserTypes == "BİREYSEL GİRİŞ")
                                {
                                    <div id="membershipChangeForm">
                                        <div class="alert alert-info">Kurumsal üyeliğe geçiş yapmak için aşağıdaki bilgileri doldurun.</div>
                                        <form id="changeRoleForm" method="post" asp-action="RequestMembershipChange" enctype="multipart/form-data">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="requestedType" value="KURUMSAL GIRIŞ" />
                                            <div class="row">
                                                <div class="col-md-6 mb-3"><input type="text" class="form-control" name="companyName" placeholder="Şirket Adı" required></div>
                                                <div class="col-md-6 mb-3"><input type="text" class="form-control" name="taxNumber" placeholder="Vergi Numarası" required></div>
                                                <div class="col-md-12 mb-3"><input type="text" class="form-control" name="companyAddress" placeholder="Şirket Adresi" required></div>
                                                <div class="col-md-6 mb-3">
                                                    <label class="form-label">5. Seviye Belgesi</label>
                                                    <input type="file" class="form-control" name="level5Certificate" accept=".pdf,.webp,.webp,.webp" required>
                                                </div>
                                                <div class="col-md-6 mb-3">
                                                    <label class="form-label">Vergi Levhası</label>
                                                    <input type="file" class="form-control" name="taxDocument" accept=".pdf,.webp,.webp,.webp" required>
                                                </div>
                                                <div class="col-12"><button type="submit" class="btn btn-primary">Kurumsal Üyelik Talebi Oluştur</button></div>
                                            </div>
                                        </form>
                                    </div>
                                }
                                else if (Model.UserTypes == "KURUMSAL GIRIŞ")
                                {
                                    <div id="membershipChangeForm">
                                        <div class="alert alert-info">Kurumsal üyelikten bireysel üyeliğe geçiş yapmak istediğinizi onaylayın.</div>
                                        <form id="changeRoleForm" method="post" asp-action="RequestMembershipChange">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="requestedType" value="BİREYSEL GİRİŞ" />
                                            <div class="alert alert-warning"><b>Uyarı:</b> Bireysel üyeliğe geçtiğinizde kurumsal özelliklerinizi kaybedeceksiniz.</div>
                                            <button type="submit" class="btn btn-primary">Bireysel Üyelik Talebi Oluştur</button>
                                        </form>
                                    </div>
                                }
                            </div>

                            <!-- Hesap Güvenliği Tab -->
                            <div class="tab-pane fade @(activeTab == "security" ? "show active" : "")" id="security" role="tabpanel" aria-labelledby="security-tab">
                                <div class="row">
                                    <!-- ŞİFRE DEĞİŞTİRME BÖLÜMÜ -->
                                    <div class="col-md-6 mb-4">
                                        <div class="card border-primary h-100">
                                            <div class="card-header bg-primary text-white">
                                                <h5 class="mb-0">
                                                    <i class="bi bi-key me-2"></i>Şifre Değiştir
                                                </h5>
                                            </div>
                                            <div class="card-body">
                                                <p class="text-muted">Hesap güvenliğiniz için şifrenizi düzenli olarak değiştirmenizi öneririz.</p>
                                                <a href="@Url.Action("ChangePassword", "Account")" class="btn btn-primary">
                                                    <i class="bi bi-pencil-square me-2"></i>Şifremi Değiştir
                                                </a>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- HESAP SİLME BÖLÜMÜ -->
                                    <div class="col-md-12 mb-4">
                                        <div class="card border-danger">
                                            <div class="card-header bg-danger text-white">
                                                <h5 class="mb-0">
                                                    <i class="bi bi-exclamation-triangle me-2"></i>Tehlikeli Bölge - Hesabı Sil
                                                </h5>
                                            </div>
                                            <div class="card-body">
                                                <div class="alert alert-warning">
                                                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                                    <strong>Dikkat!</strong> Bu işlem geri alınamaz. Hesabınızı silmeden önce aşağıdaki bilgileri dikkatlice okuyun:
                                                </div>

                                                <h6 class="text-danger mb-3">Hesap Silindiğinde:</h6>
                                                <ul class="list-unstyled mb-4">
                                                    <li class="mb-2">
                                                        <i class="bi bi-x-circle text-danger me-2"></i>
                                                        Tüm ilanlarınız devre dışı bırakılacak
                                                    </li>
                                                    <li class="mb-2">
                                                        <i class="bi bi-x-circle text-danger me-2"></i>
                                                        Mesaj geçmişiniz silinecek
                                                    </li>
                                                    <li class="mb-2">
                                                        <i class="bi bi-x-circle text-danger me-2"></i>
                                                        Favorileriniz ve kayıtlı aramalarınız silinecek
                                                    </li>
                                                    <li class="mb-2">
                                                        <i class="bi bi-x-circle text-danger me-2"></i>
                                                        Yorumlarınız ve değerlendirmeleriniz anonimleştirilecek
                                                    </li>
                                                    <li class="mb-2">
                                                        <i class="bi bi-check-circle text-success me-2"></i>
                                                        <strong>30 gün içinde</strong> destek ekibimize başvurarak hesabınızı kurtarabilirsiniz
                                                    </li>
                                                </ul>

                                                <button type="button" class="btn btn-danger" 
                                                        data-bs-toggle="modal" 
                                                        data-bs-target="#deleteAccountModal">
                                                    <i class="bi bi-trash me-2"></i>Hesabımı Kalıcı Olarak Sil
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </section>
        </div>
    </main>

    <!-- HESAP SİLME MODAL -->
    <div class="modal fade" id="deleteAccountModal" tabindex="-1" 
         aria-labelledby="deleteAccountModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content border-danger">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="deleteAccountModalLabel">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        Hesabı Silmeyi Onayla
                    </h5>
                    <button type="button" class="btn-close btn-close-white" 
                            data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form asp-action="DeleteAccount" asp-controller="Account" method="post">
                    @Html.AntiForgeryToken()
                    
                    <div class="modal-body">
                        <div class="alert alert-danger">
                            <strong>Son Uyarı:</strong> Bu işlem geri alınamaz!
                        </div>

                        <p class="mb-3">
                            Hesabınızı silmek istediğinizden emin misiniz? 
                            Bu işlemi onaylamak için:
                        </p>

                        <ol class="mb-4">
                            <li>Mevcut şifrenizi girin</li>
                            <li>Onay metnini yazın: <strong>"HESABIMI SIL"</strong></li>
                        </ol>

                        <!-- Şifre -->
                        <div class="mb-3">
                            <label class="form-label">
                                <i class="bi bi-key me-2"></i>Şifreniz
                            </label>
                            <input type="password" 
                                   class="form-control" 
                                   name="Password" 
                                   placeholder="Mevcut şifrenizi girin"
                                   required>
                            <small class="text-muted">
                                Güvenlik için şifrenizi doğrulamanız gerekiyor
                            </small>
                        </div>

                        <!-- Onay Metni -->
                        <div class="mb-3">
                            <label class="form-label">
                                <i class="bi bi-check2-square me-2"></i>Onay Metni
                            </label>
                            <input type="text" 
                                   class="form-control" 
                                   name="ConfirmationText" 
                                   id="confirmationTextInput"
                                   placeholder="HESABIMI SIL yazın"
                                   required>
                            <small class="text-danger">
                                Tam olarak "HESABIMI SIL" yazmalısınız (büyük harfle)
                            </small>
                        </div>

                        <!-- Neden -->
                        <div class="mb-3">
                            <label class="form-label">
                                Neden hesabınızı siliyorsunuz? (İsteğe bağlı)
                            </label>
                            <select class="form-select" name="DeletionReason">
                                <option value="">Seçiniz...</option>
                                <option value="privacy">Gizlilik endişeleri</option>
                                <option value="not-using">Artık kullanmıyorum</option>
                                <option value="found-alternative">Alternatif buldum</option>
                                <option value="poor-experience">Kötü deneyim</option>
                                <option value="too-expensive">Çok pahalı</option>
                                <option value="technical-issues">Teknik sorunlar</option>
                                <option value="other">Diğer</option>
                            </select>
                        </div>

                        <!-- Geri Alma Bilgisi -->
                        <div class="alert alert-info mb-0">
                            <i class="bi bi-info-circle me-2"></i>
                            <strong>Bilgi:</strong> Hesabınızı 30 gün içinde 
                            <a href="mailto:destek@sevval.com">destek@sevval.com</a> 
                            adresine e-posta göndererek kurtarabilirsiniz.
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" 
                                data-bs-dismiss="modal">
                            <i class="bi bi-x-circle me-2"></i>İptal
                        </button>
                        <button type="submit" class="btn btn-danger" id="confirmDeleteBtn" disabled>
                            <i class="bi bi-trash me-2"></i>Evet, Hesabımı Sil
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Onay metni kontrolü - Submit butonunu aktifleştir
            $('#confirmationTextInput').on('input', function() {
                const confirmBtn = $('#confirmDeleteBtn');
                const inputValue = $(this).val().trim();
                
                if (inputValue === 'HESABIMI SIL') {
                    confirmBtn.prop('disabled', false);
                    confirmBtn.removeClass('btn-danger').addClass('btn-danger');
                    $(this).removeClass('is-invalid').addClass('is-valid');
                } else {
                    confirmBtn.prop('disabled', true);
                    if (inputValue.length > 0) {
                        $(this).removeClass('is-valid').addClass('is-invalid');
                    } else {
                        $(this).removeClass('is-valid is-invalid');
                    }
                }
            });

            // Form submit öncesi son onay
            $('form[action*="DeleteAccount"]').on('submit', function(e) {
                const confirmed = confirm(
                    '⚠️ SON ONAY\n\n' +
                    'Hesabınızı silmek istediğinizden kesinlikle emin misiniz?\n\n' +
                    '✓ Bu işlem 30 gün içinde destek ekibi aracılığıyla geri alınabilir.\n' +
                    '✗ Tüm ilanlarınız, mesajlarınız ve favorileriniz silinecek.\n\n' +
                    'Devam etmek istiyor musunuz?'
                );
                
                if (!confirmed) {
                    e.preventDefault();
                    return false;
                }
            });

            // Modal kapatıldığında formu temizle
            $('#deleteAccountModal').on('hidden.bs.modal', function () {
                $(this).find('form')[0].reset();
                $('#confirmationTextInput').removeClass('is-valid is-invalid');
                $('#confirmDeleteBtn').prop('disabled', true);
            });

            // Tab değiştiğinde URL'i güncelle
            $('button[data-bs-toggle="tab"]').on('shown.bs.tab', function (e) {
                const targetTab = $(e.target).attr('data-bs-target');
                if (targetTab) {
                    const tabName = targetTab.substring(1);
                    const url = new URL(window.location);
                    url.searchParams.set('tab', tabName);
                    window.history.pushState({}, '', url);
                }
            });

            // Banner client-side boyut kontrolü
            const bannerInput = document.getElementById('bannerPictureInput');
            if (bannerInput) {
                bannerInput.addEventListener('change', function (e) {
                    const file = e.target.files && e.target.files[0];
                    if (!file) return;
                    const url = URL.createObjectURL(file);
                    const img = new Image();
                    img.onload = function(){
                        if (img.width !== 1220 || img.height !== 240) {
                            alert('Banner boyutu 1220 x 240 olmalıdır.');
                            bannerInput.value = '';
                        }
                        URL.revokeObjectURL(url);
                    };
                    img.onerror = function(){ URL.revokeObjectURL(url); };
                    img.src = url;
                });
            }
            // Navbar scriptleri
            var hamburgerMenu = document.getElementById("hamburger-menu");
            var navLinks = document.getElementById("nav-links");
            if (hamburgerMenu) {
                hamburgerMenu.addEventListener("click", function (event) {
                    navLinks.classList.toggle("active");
                    event.stopPropagation();
                });
            }
            document.addEventListener("click", function (event) {
                if (navLinks && !navLinks.contains(event.target) && !hamburgerMenu.contains(event.target)) {
                    navLinks.classList.remove("active");
                }
            });

            // Giriş pop-up scripti
            const girisButon = document.getElementById('giris-buton');
            const popupGiris = document.getElementById('popup-giris');
            const pencereKapat = document.getElementById('pencere-kapat');

            if (girisButon) {
                girisButon.addEventListener('click', function (event) {
                    event.preventDefault();
                    popupGiris.style.display = 'flex';
                });
            }
            if (popupGiris) {
                popupGiris.addEventListener('click', function (event) {
                    if (event.target === this) this.style.display = 'none';
                });
            }
            if (pencereKapat) {
                pencereKapat.addEventListener('click', function () {
                    popupGiris.style.display = 'none';
                });
            }

            // Üyelik durumu kontrolü
             checkMembershipRequestStatus();
        });

        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById('profilePicturePreview').src = e.target.result;
                };
                reader.readAsDataURL(input.files[0]);
            }
        }
            // Banner preview
            const bannerInput = document.getElementById('bannerPictureInput');
            const bannerPreview = document.getElementById('bannerPreview');
            if (bannerInput && bannerPreview) {
                bannerInput.addEventListener('change', function (e) {
                    const file = e.target.files && e.target.files[0];
                    if (!file) return;
                    const url = URL.createObjectURL(file);
                    const img = new Image();
                    img.onload = function(){
                        // mevcut boyut kontrolü scripti altta da var; burada sadece preview güncelliyoruz
                        bannerPreview.src = url;
                        bannerPreview.style.display = 'block';
                    };
                    img.onerror = function(){ URL.revokeObjectURL(url); };
                    img.src = url;
                });
            }

        function togglePasswordVisibility(id) {
            const input = document.getElementById(id);
            const icon = input.nextElementSibling.querySelector('i');
            if (input.type === "password") {
                input.type = "text";
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                input.type = "password";
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        }

        function checkMembershipRequestStatus() {
            $.get('@Url.Action("GetMembershipRequestStatus", "Account")', function(response) {
                if (response.success && response.hasPendingRequest) {
                    $('#membershipChangeForm').hide();
                    $('#membershipRequestStatus').html(`
                        <div class="alert alert-warning">
                            <strong>Bekleyen Üyelik Değişim Talebiniz Var</strong><br>
                            Mevcut Üyelik: ${response.currentType}<br>
                            İstenen Üyelik: ${response.requestedType}<br>
                            Talep Tarihi: ${new Date(response.requestDate).toLocaleString()}
                             <button class="btn btn-sm btn-danger mt-2" onclick="cancelMembershipRequest()">Talebi İptal Et</button>
                        </div>
                    `);
                } else {
                     $('#membershipChangeForm').show();
                     $('#membershipRequestStatus').empty();
                }
            });
        }

        function cancelMembershipRequest() {
            if(confirm("Talebinizi iptal etmek istediğinizden emin misiniz?")) {
                 $.post('@Url.Action("CancelMembershipRequest", "Account")', { '__RequestVerificationToken': '@Antiforgery.GetAndStoreTokens(Context).RequestToken' }, function(response) {
                     if(response.success){
                         alert("Talebiniz başarıyla iptal edildi.");
                         checkMembershipRequestStatus();
                     } else {
                         alert("Hata: " + response.message);
                     }
                 });
            }
        }

        $('#changeRoleForm').on('submit', function(e) {
            e.preventDefault();
            var formData = new FormData(this);

            // Dosya kontrolleri
            var level5Certificate = formData.get("level5Certificate");
            if(level5Certificate && level5Certificate.size > 5 * 1024 * 1024) {
                alert("Seviye 5 belgesi 5MB'dan büyük olamaz.");
                return;
            }

            var taxDocument = formData.get("taxDocument");
            if(taxDocument && taxDocument.size > 5 * 1024 * 1024) {
                 alert("Vergi levhası 5MB'dan büyük olamaz.");
                return;
            }

            $.ajax({
                url: $(this).attr('action'),
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function(response) {
                    if (response.success) {
                        alert('Üyelik değişim talebiniz başarıyla alındı.');
                        checkMembershipRequestStatus();
                    } else {
                        alert('Hata: ' + response.message);
                    }
                },
                error: function() {
                    alert('Bir hata oluştu.');
                }
            });
        });
    </script>
