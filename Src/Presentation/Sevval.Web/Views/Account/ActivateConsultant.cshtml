@{
    ViewData["Title"] = "Danışman Hesabı Aktivasyonu";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/Anasayfa.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="icon" type="image/png" href="~/images/favlogo.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .activation-form {
            max-width: 400px;
            margin: 50px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0,0,0,0.1);
        }
        .form-control {
            border: 1px solid #e9ecef;
            padding: 0.75rem;
            font-size: 0.95rem;
        }
        .btn-primary {
            width: 100%;
            padding: 0.75rem;
            font-weight: 500;
        }
    </style>
</head>
<body class="bg-light">
    <div class="container">
        <div class="activation-form">
            <div class="text-center mb-4">
                <img src="~/images/favlogo.png" alt="Logo" style="width: 100px;">
                <h2 class="mt-3">Danışman Hesabı Aktivasyonu</h2>
            </div>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["Error"]
                </div>
            }

            <form asp-action="ActivateConsultant" asp-controller="Account" method="post">
                <div class="mb-3">
                    <label class="form-label">Aktivasyon Kodu</label>
                    <input type="text" name="code" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Yeni Şifre</label>
                    <input type="password" name="password" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Telefon Numarası</label>
                    <input type="tel" name="phone" class="form-control" pattern="[0-9]{3}[0-9]{3}[0-9]{4}" placeholder="XXX-XXX-XXXX" required>
                </div>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-check-circle me-2"></i>Hesabı Aktifleştir
                </button>
            </form>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
