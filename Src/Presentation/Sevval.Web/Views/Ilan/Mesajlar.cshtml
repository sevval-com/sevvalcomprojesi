@using Microsoft.AspNetCore.Identity
@using Sevval.Domain.Entities
@inject UserManager<ApplicationUser> UserManager

@{
    Layout = null;
    var userEmail = User.Identity.Name;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mesajlar</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            margin: 0;
            font-family: 'Inter', sans-serif;
            height: 100vh;
            display: flex;
            background-color: #f0f0f0;
        }

        .chat-list {
            width: 27%;
            border-right: 1px solid #ddd;
            overflow-y: auto;
            background-color: #fff;
            display: flex;
            flex-direction: column;
            position: relative;
            z-index: 1000;
        }

        .chat-list-header {
            padding: 20px;
            background-color: #f0f0f0;
            border-bottom: 1px solid #ddd;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .chat-list-header h2 {
                margin: 0 0 10px 0;
                font-size: 1.4rem;
                color: #2c6fb8;
                font-weight: 600;
            }

        #markAllReadButton {
            padding: 8px 12px;
            background-color: #2c6fb8;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 0.9rem;
            transition: background-color 0.3s ease;
        }

            #markAllReadButton:hover {
                background-color: #2c6fb8;
            }

        .search-container {
            display: flex;
            align-items: center;
            background-color: #fff;
            border-radius: 25px;
            padding: 8px 12px;
            border: 1px solid #ddd;
            margin-top: 10px;
        }

            .search-container input[type="text"] {
                flex: 1;
                padding: 8px;
                border: none;
                border-radius: 20px;
                margin-left: 8px;
                font-size: 0.9rem;
                outline: none;
            }

                .search-container input[type="text"]:focus {
                    box-shadow: 0 0 0 2px rgba(0, 128, 128, 0.2);
                }

        .chat-area {
            width: 73%;
            background-color: #dfe5ff;
            display: flex;
            flex-direction: column;
        }

        .chat-header {
            padding: 15px 20px;
            background: #2c6fb8;
            color: white;
            display: flex;
            align-items: center;
            gap: 15px;
            border-bottom: 1px solid #2c6fb8;
        }

            .chat-header h2 {
                margin: 0;
                font-size: 1.2rem;
                font-weight: 600;
            }

            .chat-header span {
                font-size: 0.8rem;
                font-weight: normal;
                margin-left: 5px;
            }

            .chat-header a {
                color: white;
                text-decoration: underline;
                cursor: pointer;
                margin-left: 5px;
            }

                .chat-header a:hover {
                    text-decoration: none;
                }

        .messages-container {
            flex: 1;
            padding: 20px;
            overflow-y: auto;
            background: #dfe5ff;
            display: flex;
            flex-direction: column;
        }

        .message-input {
            padding: 15px 20px;
            background: #f0f0f0;
            display: flex;
            gap: 10px;
            align-items: center;
            border-top: 1px solid #ddd;
        }

            .message-input input[type="text"] {
                flex: 1;
                padding: 10px;
                border: none;
                border-radius: 25px;
                font-size: 0.95rem;
                background-color: #fff;
                outline: none;
            }

                .message-input input[type="text"]:focus {
                    box-shadow: 0 0 0 2px rgba(0, 128, 128, 0.2);
                }

            .message-input button {
                padding: 10px 20px;
                background: #2c6fb8;
                color: white;
                border: none;
                border-radius: 25px;
                cursor: pointer;
                font-size: 0.95rem;
                transition: background-color 0.3s ease;
            }

                .message-input button:hover {
                    background-color: #054d44;
                }

        .chat-item {
            padding: 15px 20px;
            border-bottom: 1px solid #ddd;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 15px;
            transition: background-color 0.2s ease;
        }

            .chat-item:hover {
                background: #f0f0f0;
            }

            .chat-item.active {
                background-color: #e0e0e0;
            }

            .chat-item img {
                width: 50px;
                height: 50px;
                border-radius: 50%;
                object-fit: cover;
            }

        .chat-item-content {
            flex: 1;
        }

            .chat-item-content h4 {
                margin: 0 0 5px 0;
                font-size: 1rem;
                color: #111;
                font-weight: 500;
            }

            .chat-item-content p {
                margin: 0;
                font-size: 0.9rem;
                color: #666;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
            }

        .chat-item-time {
            font-size: 0.75em;
            color: #666;
            margin-top: 5px;
            text-align: right;
        }

        .message {
            margin-bottom: 15px;
            padding: 10px 15px;
            border-radius: 20px;
            position: relative;
            font-size: 1.2rem;
            box-shadow: 0 1px 1px rgba(0, 0, 0, 0.05);
            display: inline-block;
            max-width: 80%;
            word-wrap: break-word;
            clear: both;
        }

            .message.sent {
                background: #dcf8c6;
                color: #111;
                float: right;
                margin-left: auto;
            }

            .message.received {
                background: #fff;
                color: #111;
                float: left;
            }

        .message-time {
            font-size: 0.7em;
            color: #888;
            margin-top: 5px;
            text-align: right;
            display: block;
        }

        .info-message {
            text-align: center;
            color: #666;
            margin-top: 50%;
            padding: 20px;
            font-size: 1rem;
        }

        .message-status {
            display: inline-block;
            margin-left: 5px;
            font-size: 0.8em;
        }

        .typing-indicator {
            display: inline-block;
            margin-left: 5px;
            font-size: 0.8em;
            color: #666;
        }

        .sender-name {
            font-size: 0.7em;
            color: #2c6fb8;
            font-weight: bold;
            margin-bottom: 3px;
            display: block;
        }

        .unread-chat {
            background-color: #f5f5dc;
        }

        /* Modal Styles */
        .modal {
            display: none;
            position: fixed;
            z-index: 10000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0,0,0,0.5);
        }

        .modal-content {
            background-color: #fefefe;
            margin: 10% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 50%;
            border-radius: 8px;
            position: relative;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

        .modal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
            border-bottom: 1px solid #ddd;
            padding-bottom: 10px;
        }

            .modal-header h2 {
                margin: 0;
                font-size: 1.4rem;
            }

        .close-button {
            position: absolute;
            top: 10px;
            right: 10px;
            color: #aaa;
            font-size: 28px;
            font-weight: bold;
            cursor: pointer;
        }

            .close-button:hover,
            .close-button:focus {
                color: #000;
                text-decoration: none;
            }

        .modal-body {
            padding: 10px;
        }

            .modal-body p {
                margin-bottom: 10px;
                font-size: 0.95rem;
                line-height: 1.5;
            }

        .highlight {
            background-color: #FFFF00;
            color: #000000;
            padding: 0;
            border-radius: 3px;
        }

    </style>
</head>
<body>
    <div class="chat-list">
        <div class="chat-list-header">
            <h2>Mesajlar</h2>
            <button id="markAllReadButton">Tümünü Okundu Yap</button>
        </div>
        <div class="search-container">
            <input type="text" id="chatSearch" placeholder="Sohbetlerde ara...">
        </div>
        <div id="chatList">
            @foreach (var chat in ViewBag.Chats)
            {
                string chatItemClass = chat.HasUnread ? "chat-item unread-chat" : "chat-item";
                <div class="@chatItemClass" data-chatid="@chat.ChatId" data-receiveremail="@(chat.SenderEmail == userEmail ? chat.ReceiverEmail : chat.SenderEmail)" data-ilanid="@chat.IlanId" data-lastmessage="@chat.LastMessage">
                    <div class="chat-item-content">
                        <h4>@(chat.SenderEmail == userEmail ? chat.ReceiverFullName : chat.SenderFullName)</h4>
                        <p>@chat.LastMessage</p>
                    </div>
                    <div class="chat-item-time">
                        @(chat.LastMessageTime is DateTime time
                            ? time.ToString("HH:mm")
                            : "")
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="chat-area">
        <div class="chat-header" id="selectedChatHeader" style="display: none;">
            <h2></h2>
            <a href="#" id="ilanLink" data-ilanid="">İlgili İlan: İlanı Gör</a>
        </div>
        <div class="info-message" id="infoMessage">Lütfen bir sohbet seçin</div>
        <div class="messages-container" id="messagesContainer" style="display:none;">
            <div id="messagesList"></div>
        </div>
        <div class="message-input" style="display:none;" id="messageInput">
            <input type="text" id="messageContent" placeholder="Mesaj yaz...">
            <button id="sendMessageButton">Gönder</button>
        </div>
    </div>

    <div id="ilanModal" class="modal">
        <div class="modal-content">
            <span class="close-button">&times;</span>
            <div class="modal-header">
                <h2>İlan Detayları</h2>
            </div>
            <div class="modal-body" id="ilanModalBody">
                <p>İlan bilgileri burada görüntülenecek...</p>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            let selectedChatId = null;
            let receiverEmail = null;
            let userEmail = '@userEmail';
            let selectedIlanId = null;
            let chatMessages = {}; // Store messages for each chat
            let searchText = '';

            function attachChatItemClickEvent() {
                $('.chat-item').click(function () {
                    $('.chat-item').removeClass('active');
                    $(this).addClass('active');
                    selectedChatId = $(this).data('chatid');
                    receiverEmail = $(this).data('receiveremail');
                    selectedIlanId = $(this).data('ilanid');
                    $('#infoMessage').hide();
                    $('#messagesContainer').show();
                    $('#messageInput').show();
                    const chatHeader = $(this).find('h4').text();
                    $('#selectedChatHeader h2').text(chatHeader);
                    $('#selectedChatHeader').show();
                    $('#ilanLink').data('ilanid', selectedIlanId);
                    if (selectedIlanId > 0) {
                        $('#ilanLink').show();
                    }
                    else {
                        $('#ilanLink').hide();
                    }
                    markChatAsRead(selectedChatId);
                    loadMessages(selectedChatId);
                });
            }
            attachChatItemClickEvent();

            $('#chatSearch').on('input', function () {
                searchText = $(this).val().toLowerCase();
                $('.chat-item').filter(function () {
                    let chatItem = $(this);
                    let match = false;

                    // Check for match in chat title/name
                    if (chatItem.find('h4').text().toLowerCase().indexOf(searchText) > -1) {
                        match = true;
                    }
                    // Check for match in last message
                    if (chatItem.find('p').text().toLowerCase().indexOf(searchText) > -1) {
                        match = true;
                    }

                    $(this).toggle(match);
                });
            });

            function loadMessages(chatId) {
                if (chatMessages[chatId]) {
                    displayMessages(chatId);
                    return;
                }
                $.get('/Ilan/GetMessages?chatId=' + chatId, function (data) {
                    chatMessages[chatId] = data;
                    displayMessages(chatId);
                });
            }

            function displayMessages(chatId) {
                $('#messagesList').empty();
                if (!chatMessages[chatId]) return;
                chatMessages[chatId].forEach(function (msg) {
                    let messageClass = msg.senderEmail === userEmail ? 'sent' : 'received';
                    let senderName = messageClass === 'sent' ? "Siz" : msg.senderFullName;
                    if (senderName === undefined || senderName === null || senderName === "") {
                        senderName = "Gönderen";
                    }
                    let readStatus = "";
                    if (messageClass === 'sent') {
                        readStatus = `<span class="message-status">${msg.isRead ? '<span style="color: #0000FF;">✔✔</span>' : '✔✔'}</span>`;
                    }
                    let formattedTime = new Date(msg.sentDate).toLocaleString('tr-TR', {
                        hour: '2-digit',
                        minute: '2-digit',
                        day: '2-digit',
                        month: 'numeric',
                        year: 'numeric'
                    });

                    let messageContent = msg.content;
                    if (searchText) {
                        const regex = new RegExp(searchText, 'gi');
                        messageContent = messageContent.replace(regex, (match) => `<span class="highlight">${match}</span>`);
                    }

                    let html = `
                            <div class="message ${messageClass}">
                                <span class="sender-name">${senderName}</span>
                                <div>${messageContent}</div>
                                <div class="message-time">${formattedTime} ${readStatus}</div>
                            </div>
                        `;
                    $('#messagesList').append(html);
                    $('#messagesContainer').scrollTop($('#messagesContainer')[0].scrollHeight);
                });
            }


            $('#sendMessageButton').click(function () {
                sendMessage();
            });

            $('#messageContent').keypress(function (e) {
                if (e.which === 13) {
                    sendMessage();
                    e.preventDefault();
                }
            });

            function sendMessage() {
                var content = $('#messageContent').val();
                if (content.trim() === "") {
                    return;
                }
                $.post('/Ilan/SendMessage', {
                    chatId: selectedChatId,
                    content: content,
                    receiverEmail: receiverEmail
                }, function (response) {
                    if (response.success) {
                        $('#messageContent').val('');
                        loadMessages(selectedChatId);
                        updateChatList();
                    } else {
                        alert("Mesaj gönderme başarısız.");
                    }
                });
            }

            function markChatAsRead(chatId) {
                $.post('/Ilan/MarkChatAsRead', { chatId: chatId }, function (response) {
                    if (response.success) {
                        updateChatList();
                    } else {
                        console.error("Okundu olarak işaretleme başarısız.");
                    }
                });
            }

            function updateChatList() {
                $.get('/Ilan/GetChatList', function (data) {
                    $('#chatList').empty();
                    // Yeni: Chat listesini en son mesaja göre sırala
                    data.sort(function(a, b) {
                        let dateA = a.lastMessageTime ? new Date(a.lastMessageTime) : new Date(0);
                        let dateB = b.lastMessageTime ? new Date(b.lastMessageTime) : new Date(0);
                        return dateB - dateA; // Son mesaja göre azalan sırada sırala
                    });
                    data.forEach(function (chat) {
                        let chatItemClass = chat.hasUnread ? "chat-item unread-chat" : "chat-item";
                         if (chat.chatId == selectedChatId) {
                            chatItemClass += ' active';
                        }
                        let formattedTime = '';
                        if (chat.lastMessageTime) {
                            let dateObj = new Date(chat.lastMessageTime);
                             if (!isNaN(dateObj)) {
                                formattedTime = dateObj.toLocaleTimeString('tr-TR', { hour: '2-digit', minute: '2-digit' });
                            }
                        }
                        let lastMessage = chat.lastMessage;
                        if (searchText) {
                            const regex = new RegExp(searchText, 'gi');
                            lastMessage = lastMessage.replace(regex, (match) => `<span class="highlight">${match}</span>`);
                        }
                        var chatHtml = `
                            <div class="${chatItemClass}" data-chatid="${chat.chatId}" data-receiveremail="${chat.senderEmail === userEmail ? chat.receiverEmail : chat.senderEmail}" data-ilanid="${chat.ilanId}" data-lastmessage="${chat.lastMessage}">
                                <div class="chat-item-content">
                                    <h4>${chat.senderEmail === userEmail ? chat.receiverFullName : chat.senderFullName}</h4>
                                    <p>${lastMessage}</p>
                                </div>
                                 <div class="chat-item-time">${formattedTime}</div>
                            </div>
                        `;
                        $('#chatList').append(chatHtml);
                        attachChatItemClickEvent();
                    });
                });
            }

            $('#markAllReadButton').click(function () {
                $.post('/Ilan/MarkAllChatsAsRead', function (response) {
                    if (response.success) {
                        updateChatList();
                        $('#messagesContainer').empty();
                        $('#infoMessage').show();
                        $('#selectedChatHeader').hide();
                        $('#messageInput').hide();
                        selectedChatId = null;
                        $('.chat-item').removeClass('active');
                        chatMessages = {};
                    } else {
                        alert('Tümünü okundu olarak işaretleme başarısız.');
                    }
                });
            });

            var modal = document.getElementById("ilanModal");
            var ilanLink = document.getElementById("ilanLink");
            var closeBtn = document.getElementsByClassName("close-button")[0];

            ilanLink.onclick = function (event) {
                event.preventDefault();
                var ilanId = $(this).data('ilanid');
                if (ilanId) {
                    $.get('/Ilan/GetIlanDetails?ilanId=' + ilanId, function (data) {
                        if (data) {
                            var ilanDetailsHtml = `
                                <p><strong>İlan Başlığı:</strong> ${data.baslik}</p>
                                <p><strong>İlan Açıklaması:</strong> ${data.aciklama}</p>
                                <p><strong>Fiyat:</strong> ${data.fiyat}</p>
                                <p><strong>Tarih:</strong> ${data.tarih}</p>
                            `;
                            $('#ilanModalBody').html(ilanDetailsHtml);
                            modal.style.display = "block";
                        } else {
                            $('#ilanModalBody').html("<p>İlan bulunamadı.</p>");
                            modal.style.display = "block";
                        }
                    });
                }
            };

            closeBtn.onclick = function () {
                modal.style.display = "none";
            };

            window.onclick = function (event) {
                if (event.target == modal) {
                    modal.style.display = "none";
                }
            };
        });
    </script>
</body>
</html>
