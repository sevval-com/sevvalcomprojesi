    .company-name {
        font-size: 32px;
        font-weight: 700;
        color: #2c3e50;
        margin: 0 0 8px 0;
        text-align: center;
    }

    .company-location {
        font-size: 17px;
        color: #7f8c8d;
        margin: 0 0 20px 0;
        text-align: center;
        font-weight: 500;
    }

        .company-location i {
            margin-right: 5px;
            color: #007bff;
        }

    .company-stats {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .stat-item {
        display: flex;
        align-items: center;
        gap: 10px;
        background: linear-gradient(135deg, #007bff, #0056b3);
        color: white;
        padding: 12px 25px;
        border-radius: 50px;
        font-weight: 600;
        box-shadow: 0 4px 15px rgba(0, 123, 255, 0.3);
