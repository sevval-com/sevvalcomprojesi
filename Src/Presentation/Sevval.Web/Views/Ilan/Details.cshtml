<!-- STİLLER BİTİŞ -->


<section class="container-section">
    <div class="container pt-4">
        <!-- Banner Resmi -->
        <div class="image-container">
            @if (!string.IsNullOrEmpty(Model.About?.BannerPicturePath))
            {
                <img src="@Model.About.BannerPicturePath" alt="Banner Resmi" class="image">
            }
            else
            {
                var cityName = Model.About?.City?.ToUpper();
                var cityImagePath = $"/sehirler/{cityName}.webp";
                <img src="@cityImagePath" alt="@Model.About?.City Banner Resmi" class="image"
                     onerror="this.onerror=null; this.src='https://placehold.co/1200x300/007bff/FFFFFF?text=Sevval+Emlak';">
            }
        </div>

        <!-- Profil ve Firma Bilgileri -->
        <div class="profile-section">
            <div class="profile-picture">
                @{
                    var profilePicPath = Model.About?.ProfilePicturePath ?? "";
                    var lowerProfilePath = profilePicPath.ToLower();
                    var hasValidProfilePic = !string.IsNullOrEmpty(profilePicPath) 
                        && (lowerProfilePath.EndsWith(".webp") || lowerProfilePath.EndsWith(".jpg") || lowerProfilePath.EndsWith(".jpeg") || lowerProfilePath.EndsWith(".png") || lowerProfilePath.EndsWith(".gif"))
                        && !lowerProfilePath.Contains("flaticon")
                        && !lowerProfilePath.Contains("cdn-icons")
                        && !lowerProfilePath.Contains("placeholder")
                        && !lowerProfilePath.Contains("default");
                }
                @if (!hasValidProfilePic)
                {
                    <!-- Default: Kamera SVG ikonu -->
                    <div class="default-profile-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="camera-svg">
                            <path d="M12 9a3.75 3.75 0 100 7.5A3.75 3.75 0 0012 9z"/>
                            <path fill-rule="evenodd" d="M9.344 3.071a49.52 49.52 0 015.312 0c.967.052 1.83.585 2.332 1.39l.821 1.317c.24.383.645.643 1.11.71.386.054.77.113 1.152.177 1.432.239 2.429 1.493 2.429 2.909V18a3 3 0 01-3 3H4.5a3 3 0 01-3-3V9.574c0-1.416.997-2.67 2.429-2.909.382-.064.766-.123 1.151-.178a1.56 1.56 0 001.11-.71l.822-1.315a2.942 2.942 0 012.332-1.39zM6.75 12.75a5.25 5.25 0 1110.5 0 5.25 5.25 0 01-10.5 0zm12-1.5a.75.75 0 100-1.5.75.75 0 000 1.5z" clip-rule="evenodd"/>
                        </svg>
                    </div>
                }
                else
                {
                    <img src="@Model.About.ProfilePicturePath"
                         alt="Profil Fotoğrafı" class="profile-img" 
                         onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                    <div class="default-profile-icon" style="display: none;">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="camera-svg">
                            <path d="M12 9a3.75 3.75 0 100 7.5A3.75 3.75 0 0012 9z"/>
                            <path fill-rule="evenodd" d="M9.344 3.071a49.52 49.52 0 015.312 0c.967.052 1.83.585 2.332 1.39l.821 1.317c.24.383.645.643 1.11.71.386.054.77.113 1.152.177 1.432.239 2.429 1.493 2.429 2.909V18a3 3 0 01-3 3H4.5a3 3 0 01-3-3V9.574c0-1.416.997-2.67 2.429-2.909.382-.064.766-.123 1.151-.178a1.56 1.56 0 001.11-.71l.822-1.315a2.942 2.942 0 012.332-1.39zM6.75 12.75a5.25 5.25 0 1110.5 0 5.25 5.25 0 01-10.5 0zm12-1.5a.75.75 0 100-1.5.75.75 0 000 1.5z" clip-rule="evenodd"/>
                        </svg>
                    </div>
                }
            </div>

            <div class="company-info">
                <h2 class="company-name">@Model.About?.CompanyName</h2>
                <p class="company-location">
                    <i class="fas fa-map-marker-alt"></i>
                    @Model.About?.City / @Model.About?.District
                </p>
                <div class="company-stats">
                    <div class="stat-item">
                        <i class="fas fa-home"></i>
                        <span class="stat-label">Toplam İlan:</span>
                        <span class="stat-value">@Model.TotalCount Adet</span>
                    </div>
                </div>

                <!-- Çalıştığımız Şehirler -->
                <div class="working-cities-integrated">
                    <h4 class="cities-title">
                        <i class="fas fa-building-flag"></i>
                        Çalıştığımız Bölgeler
                    </h4>
                    <div class="cities-container" id="cityFilter">
                        <button class="city-button active" onclick="filterListingsByCity('all', this);">
                            <i class="fas fa-globe"></i>
                            Tüm Şehirler
                        </button>
                        <!-- Component'ten gelen şehirler buraya basılacak -->
                        @await Component.InvokeAsync("WorkingCities", Model.UserId)
                    </div>
                    <!-- Daha Fazlası Butonu (JS ile yönetilecek) -->
                    <div class="text-center mt-3">
                        <button id="toggleCitiesBtn" class="btn btn-outline-primary" style="display: none;">
                            Daha Fazlası <i class="fas fa-chevron-down ms-1"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>


        <!-- Tab Seçenekleri -->
        <div class="options-container">
            <button class="option-box active" onclick="showContent('allListings')">
                <i class="fas fa-th-large"></i>
                Tüm İlanlar
            </button>
            <button class="option-box" onclick="showContent('consultants')">
                <i class="fas fa-users"></i>
                Danışmanlar
            </button>
            <button class="option-box" onclick="showContent('aboutUs')">
                <i class="fas fa-info-circle"></i>
                Hakkımızda
            </button>
        </div>

        <!-- ======================= -->
        <!-- İÇERİK ALANLARI         -->
        <!-- ======================= -->
        <!-- 1. Tüm İlanlar -->
        <div id="allListings" class="content-container" style="display:block;">
            <h4 class="section-title">Firmanın Tüm İlanları</h4>

            @if (Model.Announcements != null && Model.Announcements.Any())
            {
                <div class="ilanlar-container" id="ilanContainer">
                    @foreach (var ilan in Model.Announcements)
                    {
                        var p = ilan.Images;
                        var isNew = (DateTime.Now - ilan.GirisTarihi).TotalDays <= 3;

                        <div class="ilan-card @(ilan.Status != "active" ? "inactive-ilan" : "")" data-city="@ilan.sehir">
                            @if (ilan.Status == "active")
                            {
                                <a href="@Url.Action("ilansayfasi", "Ilan", new { id = ilan.Id })" style="text-decoration: none;">
                                    <div class="ilan-image">
                                        @if (p != null && p.Count > 0)
                                        {
                                            <img src="https://www.sevval.com/@p[0]" alt="İlan Fotoğrafı" class="panel-image">
                                        }
                                        else
                                        {
                                            <div class="no-image">
                                                <i class="fas fa-camera fa-5x text-muted"></i>
                                            </div>
                                        }
                                        <span class="ilan-price">@ilan.Price.ToString("N0") TL</span>
                                        @if (isNew)
                                        {
                                            <span class="new-badge">Yeni</span>
                                        }
                                    </div>
                                </a>
                            }
                            else
                            {
                                <div class="ilan-image inactive-image">
                                    @if (p != null && p.Count > 0)
                                    {
                                        <img src="https://www.sevval.com/@p[0]" alt="İlan Fotoğrafı" class="panel-image">
                                    }
                                    else
                                    {
                                        <div class="no-image">
                                            <i class="fas fa-camera fa-5x text-muted"></i>
                                        </div>
                                    }
                                    <span class="ilan-price">@ilan.Price.ToString("N0") TL</span>
                                    <span class="inactive-badge">Pasif</span>
                                </div>
                            }

                            <div class="ilan-info">
                                <h4>@ilan.Title</h4>
                                @{
                                    var details = new List<string>();
                                }
                                @if (!string.IsNullOrEmpty(ilan.Area)) { details.Add($"M²: <strong>{ilan.Area}</strong>"); }
                                @if (!string.IsNullOrEmpty(ilan.AdaNo)) { details.Add($"Ada: <strong>{ilan.AdaNo}</strong>"); }
                                @if (!string.IsNullOrEmpty(ilan.ParselNo)) { details.Add($"Parsel: <strong>{ilan.ParselNo}</strong>"); }
                                @if (!string.IsNullOrEmpty(ilan.OdaSayisi)) { details.Add($"Oda Sayısı: <strong>{ilan.OdaSayisi}</strong>"); }
                                @if (!string.IsNullOrEmpty(ilan.BinaYasi)) { details.Add($"Bina Yaşı: <strong>{ilan.BinaYasi}</strong>"); }
                                @if (!string.IsNullOrEmpty(ilan.NetMetrekare)) { details.Add($"Net M²: <strong>{ilan.NetMetrekare}</strong>"); }
                                @if (details.Any())
                                {
                                    <div class="result-description">
                                        @foreach (var detail in details)
                                        {
                                            <span class="detail-item">@Html.Raw(detail)</span>
                                        }
                                    </div>
                                }
                                <p class="text-muted" style="font-size: 13px;">
                                    <i class="fas fa-user-tie me-1"></i>
                                    @ilan.FirstName @ilan.LastName
                                </p>
                            </div>

                            <div class="ilan-card-footer">
                                @if (!string.IsNullOrEmpty(ilan.IlanNo))
                                {
                                    <p class="text-muted d-inline-block me-2"><b>İlan No:</b> @ilan.IlanNo</p>
                                }
                                <p class="text-muted d-inline-block">
                                    <i class="fas fa-map-marker-alt me-1"></i>
                                    @ilan.sehir / @ilan.semt
                                </p>
                                <button type="button" class="copy-link-btn" onclick="copyIlanLink(@ilan.Id, event)" title="Linki Kopyala">
                                    <i class="fas fa-link"></i> Linki Kopyala
                                </button>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-search fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">Bu firmaya ait aktif ilan bulunamadı.</h5>
                </div>
            }

            <!-- Server-side Pagination Controls -->
            @if (Model.TotalPages > 0)
            {
                <div class="pagination-controls mt-5" id="serverPaginationControls" style="display:block!important">
                    <div class="row align-items-center">
                        <!-- Sayfa Başına Adet -->
                        <div class="col-md-4 text-center text-md-start mb-3 mb-md-0">
                            <label for="pageSizeSelect" class="form-label me-2">Sayfa başına:</label>
                            <select id="pageSizeSelect" asp-for="@Model.PageSize" class="form-select d-inline-block" style="width: auto;"
                                    onchange="changePageSize(this.value)">
                                <option value="5">5</option>
                                <option value="10">10</option>
                                <option value="20" selected>20</option>
                                <option value="50">50</option>
                            </select>
                        </div>

                        <!-- Sayfalama Linkleri -->
                        <div class="col-md-8">
                            <nav aria-label="İlan sayfalama">
                                <ul class="pagination justify-content-center justify-content-md-end mb-0">
                                    <!-- First Page -->
                                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                        <a class="page-link" href="@Url.Action("Details", new { id = Model.UserId, page = 1, size = Model.PageSize })" aria-label="İlk sayfa">
                                            <i class="fas fa-angle-double-left"></i>
                                        </a>
                                    </li>

                                    <!-- Previous Page -->
                                    <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                                        <a class="page-link" href="@Url.Action("Details", new { id = Model.UserId, page = Model.CurrentPage - 1, size = Model.PageSize })" aria-label="Önceki sayfa">
                                            <i class="fas fa-angle-left"></i>
                                        </a>
                                    </li>

                                    @{
                                        int startPage = Math.Max(1, Model.CurrentPage - 2);
                                        int endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);

                                        if (endPage - startPage < 4)
                                        {
                                            if (startPage == 1) { endPage = Math.Min(Model.TotalPages, startPage + 4); }
                                            else if (endPage == Model.TotalPages) { startPage = Math.Max(1, endPage - 4); }
                                        }
                                    }

                                    <!-- Page Numbers -->
                                    @for (int i = startPage; i <= endPage; i++)
                                    {
                                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                            <a class="page-link" href="@Url.Action("Details", new { id = Model.UserId, page = i, size = Model.PageSize })">@i</a>
                                        </li>
                                    }

                                    <!-- Next Page -->
                                    <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                                        <a class="page-link" href="@Url.Action("Details", new { id = Model.UserId, page = Model.CurrentPage + 1, size = Model.PageSize })" aria-label="Sonraki sayfa">
                                            <i class="fas fa-angle-right"></i>
                                        </a>
                                    </li>

                                    <!-- Last Page -->
                                    <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                                        <a class="page-link" href="@Url.Action("Details", new { id = Model.UserId, page = Model.TotalPages, size = Model.PageSize })" aria-label="Son sayfa">
                                            <i class="fas fa-angle-double-right"></i>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- 2. Danışmanlar -->
        <div id="consultants" class="content-container" style="display:none;">
            <!-- JS ile yüklenecek -->
            <div id="consultants-content">
            </div>
        </div>

        <!-- 3. Hakkımızda -->
        <div id="aboutUs" class="aboutUs-container" style="display:none;">
            <!-- Component'ten yüklenecek -->
            @await Component.InvokeAsync("AboutUs", Model?.About)
        </div>


        <!-- ======================= -->
        <!-- SCRIPT'LER            -->
        <!-- ======================= -->
        <script>
            // Link kopyalama fonksiyonu
            function copyIlanLink(ilanId, event) {
                event.preventDefault();
                event.stopPropagation();
                const link = window.location.origin + '/Ilan/ilansayfasi/' + ilanId;
                if (navigator.clipboard && window.isSecureContext) {
                    navigator.clipboard.writeText(link).then(() => {
                        showCopyToast('Link kopyalandı!');
                    });
                } else {
                    let ta = document.createElement('textarea');
                    ta.value = link;
                    document.body.appendChild(ta);
                    ta.select();
                    document.execCommand('copy');
                    document.body.removeChild(ta);
                    showCopyToast('Link kopyalandı!');
                }
            }

            function showCopyToast(message) {
                let toast = document.createElement('div');
                toast.className = 'copy-toast';
                toast.textContent = message;
                document.body.appendChild(toast);
                setTimeout(() => { toast.classList.add('show'); }, 10);
                setTimeout(() => {
                    toast.classList.remove('show');
                    setTimeout(() => toast.remove(), 300);
                }, 2000);
            }

            // Aktif tab'ı ve içeriği yöneten fonksiyon
            function showContent(sectionId) {
                // Tüm içerikleri gizle
                document.querySelectorAll('.content-container, .aboutUs-container').forEach(function (content) {
                    content.style.display = 'none';
                });

                // Tüm tab butonlarından 'active' sınıfını kaldır
                document.querySelectorAll('.option-box').forEach(function (option) {
                    option.classList.remove('active');
                });

                // İlgili içeriği göster
                var selectedContent = document.getElementById(sectionId);
                if (selectedContent) {
                    selectedContent.style.display = 'block';
                }

                // Aktif tab butonunu işaretle
                var selectedOption = document.querySelector('.option-box[onclick="showContent(\'' + sectionId + '\')"]');
                if (selectedOption) {
                    selectedOption.classList.add('active');
                }

                // Eğer "Danışmanlar" tıklandıysa ve içerik henüz yüklenmediyse yükle
                if (sectionId === 'consultants') {
                    var consultantsContent = document.getElementById('consultants-content');
                    // 'data-loaded' attribute'ü ile daha önce yüklenip yüklenmediğini kontrol et
                    if (consultantsContent.dataset.loaded !== 'true') {
                        loadConsultants();
                    }

                    // Diğerlerini tekrar gizle (emin olmak için)
                    document.getElementById('aboutUs').style.display = 'none';
                    document.getElementById('allListings').style.display = 'none';
                    selectedContent.style.display = 'block'; // Danışmanlar container'ını göster
                }
            }

            // Danışmanları AJAX ile yükle
            function loadConsultants() {
                var userId = '@Model.UserId';
                var consultantsContent = document.getElementById('consultants-content');

                consultantsContent.innerHTML = '<div class="text-center p-5"><i class="fas fa-spinner fa-spin fa-2x text-primary"></i><p class="mt-2">Danışmanlar yükleniyor...</p></div>';

                fetch('/Ilan/GetConsultants?userId=' + userId)
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('Network response was not ok');
                        }
                        return response.text();
                    })
                    .then(html => {
                        consultantsContent.innerHTML = html;
                        consultantsContent.dataset.loaded = 'true'; // Yüklendi olarak işaretle
                    })
                    .catch(error => {
                        console.error('Error loading consultants:', error);
                        consultantsContent.innerHTML = '<div class="text-center text-danger p-5"><i class="fas fa-exclamation-triangle fa-2x"></i><p class="mt-2">Danışmanlar yüklenirken bir hata oluştu.</p></div>';
                    });
            }

            // Sayfa ilk yüklendiğinde "Tüm İlanlar" içeriğini göster
            window.onload = function () {
                showContent('allListings');
            };

            // Sayfa boyutu değiştirme fonksiyonu
            function changePageSize(newSize) {
                const currentUrl = new URL(window.location.href);
                currentUrl.searchParams.set('size', newSize);
                currentUrl.searchParams.set('page', '1'); // Sayfa boyutunu değiştirince 1. sayfaya dön
                window.location.href = currentUrl.toString();
            }

            // Şehre göre ilanları filtrele
            function filterListingsByCity(city, element) {
                // Tüm butonlardan 'active' sınıfını kaldır
                document.querySelectorAll('#cityFilter .city-button').forEach(function (btn) {
                    btn.classList.remove('active');
                });

                // Tıklanan butona 'active' sınıfını ekle
                element.classList.add('active');

                // İlanları filtrele
                var listings = document.querySelectorAll('.ilan-card');
                var visibleCount = 0;
                if (city === 'all') {
                    listings.forEach(function (listing) {
                        listing.style.display = 'flex'; // grid/flex kullandığımız için 'block' yerine 'flex'
                        visibleCount++;
                    });
                } else {
                    listings.forEach(function (listing) {
                        if (listing.getAttribute('data-city') === city) {
                            listing.style.display = 'flex';
                            visibleCount++;
                        } else {
                            listing.style.display = 'none';
                        }
                    });
                }

                // TODO: Eğer hiç ilan bulunamazsa bir mesaj gösterebiliriz.
                // Örneğin:
                // var container = document.getElementById('ilanContainer');
                // if(visibleCount === 0) { ... }


                // Filtreleme sonrası ilanların olduğu bölüme yumuşak kaydır
                setTimeout(function () {
                    smoothScrollTo(document.querySelector('#allListings'), 500);
                }, 300);
            }

            // Yumuşak kaydırma fonksiyonu
            function smoothScrollTo(target, duration) {
                if (!target) return;
                var start = window.pageYOffset;
                var end = target.getBoundingClientRect().top + start - 100; // Üstten 100px boşluk bırak
                var distance = end - start;
                var startTime = performance.now();

                function scrollStep(currentTime) {
                    var elapsed = currentTime - startTime;
                    var progress = Math.min(elapsed / duration, 1);
                    var ease = 0.5 * (1 - Math.cos(Math.PI * progress)); // easeInOutSine

                    window.scrollTo(0, start + distance * ease);

                    if (elapsed < duration) {
                        requestAnimationFrame(scrollStep);
                    }
                }
                requestAnimationFrame(scrollStep);
            }


            // === YENİ: "Daha Fazla Şehir" Fonksiyonu ===
            document.addEventListener('DOMContentLoaded', function() {
                const cityContainer = document.getElementById('cityFilter');
                if (!cityContainer) return; // Eğer container yoksa çalışma

                const toggleBtn = document.getElementById('toggleCitiesBtn');
                const allCities = cityContainer.querySelectorAll('.city-button'); // "Tüm Şehirler" dahil

                // "Tüm Şehirler" butonunu (ilkini) saymıyoruz.
                const cityButtonsOnly = Array.from(allCities).slice(1);

                const initialShowCount = 5; // Sadece şehir butonlarından 5 tane göster

                if (cityButtonsOnly.length > initialShowCount) {
                    // Fazla olanları gizle
                    for (let i = initialShowCount; i < cityButtonsOnly.length; i++) {
                        cityButtonsOnly[i].style.display = 'none';
                    }

                    toggleBtn.style.display = 'inline-block';
                    toggleBtn.dataset.state = 'more'; // 'more' = daha fazlasını göster, 'less' = daha az göster

                    toggleBtn.addEventListener('click', function() {
                        if (toggleBtn.dataset.state === 'more') {
                            // Hepsini göster
                            for (let i = initialShowCount; i < cityButtonsOnly.length; i++) {
                                // .city-button stilinde 'display: flex' kullandığımız için 'flex' yapıyoruz.
                                cityButtonsOnly[i].style.display = 'flex';
                            }
                            toggleBtn.innerHTML = 'Daha Az Göster <i class="fas fa-chevron-up ms-1"></i>';
                            toggleBtn.dataset.state = 'less';
                        } else {
                            // Tekrar gizle
                            for (let i = initialShowCount; i < cityButtonsOnly.length; i++) {
                                cityButtonsOnly[i].style.display = 'none';
                            }
                            toggleBtn.innerHTML = 'Daha Fazlası <i class="fas fa-chevron-down ms-1"></i>';
                            toggleBtn.dataset.state = 'more';
                        }
                    });
                }
            });

        </script>

    </div>
</section>