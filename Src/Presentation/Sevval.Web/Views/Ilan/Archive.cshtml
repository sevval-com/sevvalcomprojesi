@using System.Globalization
@model TumIlanlarDTO
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

@{
    Layout = "_Layout";
    ViewData["Title"] = "Arşiv";
    ViewData["HideFooter"] = true;
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        body {
            background-color: #f0f2f5;
        }
        .image-container-16-9 {
            position: relative;
            display: block;
            width: 100%;
            padding-top: 56.25%;
            background-color: #e9ecef;
            border-radius: var(--bs-border-radius);
            overflow: hidden;
        }
        .image-container-16-9 img,
        .image-container-16-9 .placeholder-div {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        @@media (max-width: 767.98px) {
            .ilan-kart .row {
                flex-direction: column;
            }
            .ilan-kart .col-md-3, .ilan-kart .col-md-9 {
                width: 100%;
                flex: 1 0 100%;
            }
            .ilan-kart .col-md-3.p-2 {
                padding: 0 !important;
            }
            .ilan-kart .image-container-16-9 {
                border-radius: var(--bs-card-border-radius) var(--bs-card-border-radius) 0 0;
            }
            .ilan-kart .card-body {
                padding: 1rem;
            }
            .ilan-kart .badge-stats {
                gap: 0.5rem !important;
            }
            .ilan-kart .actions-row {
                padding-top: 1rem;
                margin-top: 1rem;
                border-top: 1px solid var(--bs-border-color-translucent);
            }
        }
    </style>
}

@Html.AntiForgeryToken()

<div class="container-fluid my-4">
    <div class="row g-lg-4 g-3">

        <div class="d-lg-none mb-3 px-3">
            <button class="btn btn-primary w-100 p-3" type="button" data-bs-toggle="collapse" data-bs-target="#controlPanel" aria-expanded="false" aria-controls="controlPanel">
                <i class="fas fa-bars me-2"></i> Menü & Kontroller
            </button>
        </div>

        <aside class="col-lg-2">
            <div class="collapse d-lg-block" id="controlPanel">
                <div class="sticky-top" style="top: 20px;">

                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0"><i class="fas fa-compass me-2"></i> Menü</h5>
                        </div>
                        <div class="list-group list-group-flush">
                            <a href="@Url.Action("Panel", "Ilan")" class="list-group-item list-group-item-action">Raporlar</a>
                            <a href="@Url.Action("Ilanlar", "Ilan")" class="list-group-item list-group-item-action">İlanlar</a>
                            <a href="@Url.Action("Videolarim", "VideolarSayfasi")" class="list-group-item list-group-item-action">Videolarım</a>
                            <a href="@Url.Action("Danismanlar", "Ilan")" class="list-group-item list-group-item-action">Danışmanlar</a>
                            <a href="@Url.Action("Sozlesmeler", "Ilan")" class="list-group-item list-group-item-action">Sözleşmeler</a>
                            <a href="@Url.Action("Settings", "Account")" class="list-group-item list-group-item-action">Ayarlar</a>
                            <a href="@Url.Action("Index", "Satinal")" class="list-group-item list-group-item-action">Satın Al</a>
                            @if (User.Identity.IsAuthenticated && (new List<string> { "sftumen41@gmail.com", "exdel.txt@gmail.com" }).Contains(User.Identity.Name, StringComparer.OrdinalIgnoreCase))
                            {
                                <a href="@Url.Action("Index", "SevvalOfis")" class="list-group-item list-group-item-action">Şevval Ofis</a>
                            }
                        </div>
                    </div>

                    <div class="card text-center shadow-sm mb-4">
                        <div class="card-body">
                            <h6 class="card-title text-primary">Arşivdeki İlan Sayısı</h6>
                            <p class="card-text fs-2 fw-bold text-primary mb-0">@Model.TotalIlanCount</p>
                        </div>
                    </div>

                    <div class="card shadow-sm mb-4">
                        <div class="card-body">
                            <div class="input-group mb-3">
                                <span class="input-group-text bg-primary text-white"><i class="fas fa-search"></i></span>
                                <input type="text" id="searchInput" class="form-control" placeholder="Arşivde ara..." onkeyup="filterAds()">
                            </div>

                            @using (Html.BeginForm("Archive", "Ilan", FormMethod.Get))
                            {
                                <select name="userEmail" class="form-select mb-2" aria-label="Danışman Seç" id="userEmail">
                                    <option value="Tum">Tüm Danışmanlar</option>
                                    @if (Model.Users != null)
                                    {
                                        @foreach (var u in Model.Users)
                                        {
                                            <option value="@u.Email" selected="@(Model.SelectedUserEmail == u.Email)">@u.FirstName @u.LastName</option>
                                        }
                                    }
                                </select>
                                <button type="submit" class="btn btn-secondary w-100">Danışman Filtrele</button>
                            }
                        </div>
                    </div>

                </div>
            </div>
        </aside>

        <section class="col-lg-10">

            <div class="d-none d-md-flex flex-wrap justify-content-center gap-2 mb-4">
                <a href="@Url.Action("Ilanlar", "Ilan", new { filter = "active" })" class="btn btn-outline-primary"><i class="fas fa-circle-check fa-sm me-2"></i>Yayında</a>
                <a href="@Url.Action("Ilanlar", "Ilan", new { filter = "inactive" })" class="btn btn-outline-primary"><i class="fas fa-eye-slash fa-sm me-2"></i>Yayında Değil</a>
                <a href="@Url.Action("Ilanlar", "Ilan", new { filter = "archived" })" class="btn btn-outline-primary"><i class="fas fa-calendar-times fa-sm me-2"></i>Süresi Geçen</a>
                <a href="@Url.Action("Ilanlar", "Ilan", new { filter = "deleted" })" class="btn btn-outline-primary"><i class="fas fa-trash fa-sm me-2"></i>Silinen</a>
                <a href="@Url.Action("Ilanlar", "Ilan", new { filter = "rejected" })" class="btn btn-outline-primary"><i class="fas fa-times-circle fa-sm me-2"></i>Reddedilen</a>
                <a href="@Url.Action("Archive", "Ilan")" class="btn btn-primary"><i class="fas fa-box fa-sm me-2"></i>Arşiv</a>
            </div>

            <div class="d-md-none dropdown mb-4">
                <button class="btn btn-outline-primary dropdown-toggle w-100" type="button" id="mobileFilterDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    Filtre: Arşiv
                </button>
                <ul class="dropdown-menu w-100" aria-labelledby="mobileFilterDropdown">
                    <li><a class="dropdown-item" href="@Url.Action("Ilanlar", "Ilan", new { filter = "active" })">Yayında Olanlar</a></li>
                    <li><a class="dropdown-item" href="@Url.Action("Ilanlar", "Ilan", new { filter = "inactive" })">Yayında Olmayanlar</a></li>
                    <li><a class="dropdown-item" href="@Url.Action("Ilanlar", "Ilan", new { filter = "archived" })">Süresi Geçenler</a></li>
                    <li><a class="dropdown-item" href="@Url.Action("Ilanlar", "Ilan", new { filter = "deleted" })">Silinenler</a></li>
                    <li><a class="dropdown-item" href="@Url.Action("Ilanlar", "Ilan", new { filter = "rejected" })">Reddedilenler</a></li>
                    <li><a class="dropdown-item active" href="@Url.Action("Archive", "Ilan")">Arşiv</a></li>
                </ul>
            </div>

            <div class="alert alert-info text-center">
                <i class="fas fa-info-circle me-2"></i> Arşive eklenen ilanlar 2 yıl boyunca silinmemektedir.
            </div>

            <div class="ilan-listesi">
                @if (Model._Ilanlar != null)
                {
                    @foreach (var ilan in Model._Ilanlar)
                    {
                        var fotograf = Model._Fotograflar?.FirstOrDefault(x => x.IlanId == ilan.Id);
                        <div class="card shadow-sm mb-3 ilan-kart" data-id="@ilan.Id" data-title="@ilan?.Title?.ToLower()" data-status="@ilan?.Status">
                            <div class="row g-0">
                                <div class="col-md-3 p-2">
                                    <a href="@Url.Action("ilansayfasi", "Ilan", new { id = ilan.Id })" class="image-container-16-9">
                                        @if (fotograf != null)
                                        {
                                            <img src="https://www.sevval.com/@fotograf.Url" alt="@ilan.Title">
                                        }
                                        else
                                        {
                                            <div class="placeholder-div d-flex align-items-center justify-content-center">
                                                <i class="bi bi-camera" style="font-size: 4rem; color: #ccc;"></i>
                                            </div>
                                        }
                                    </a>
                                </div>
                                <div class="col-md-9">
                                    <div class="card-body d-flex flex-column">
                                        <div class="flex-grow-1">
                                            <h5 class="card-title text-primary fw-bold mb-1">@ilan.Title</h5>
                                            <p class="card-text text-muted small mb-2">@ilan.sehir / @ilan.semt / @ilan.mahalleKoy</p>
                                            <div id="price-container-@ilan.Id" class="mb-2">
                                                <span class="text-danger fs-5 fw-bold" id="price-text-@ilan.Id">@ilan.Price.ToString("N0") TL</span>
                                            </div>
                                            <p class="small text-muted mb-2">İlan No: @ilan.Id | Arşivlenme: @ilan.LastActionDate?.ToString("dd.MM.yyyy HH:mm")</p>
                                        </div>
                                        <div class="mt-auto actions-row">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div class="d-flex gap-2 flex-wrap badge-stats">
                                                    <span class="badge text-bg-light border" title="Görüntülenme"><i class="bi bi-eye me-1"></i>@ilan.GoruntulenmeSayisi</span>
                                                    <span class="badge text-bg-light border" title="Favori"><i class="bi bi-heart me-1"></i>@ilan.FavoriSayisi</span>
                                                    <span class="badge text-bg-light border" title="Mesaj"><i class="bi bi-star me-1"></i>@ilan.MesajSayisi</span>
                                                    <span class="badge text-bg-light border" title="Arama"><i class="bi bi-telephone me-1"></i>@ilan.TelefonAramaSayisi</span>
                                                </div>
                                                <div class="dropdown">
                                                    <button class="btn btn-outline-primary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                        <i class="bi bi-gear d-none d-sm-inline-block"></i> İşlemler
                                                    </button>
                                                    <ul class="dropdown-menu dropdown-menu-end">
                                                        <li><a class="dropdown-item text-success promote-to-active" href="#" data-id="@ilan.Id"><i class="bi bi-eye me-2"></i>Yayına Al</a></li>
                                                        <li><hr class="dropdown-divider"></li>
                                                        <li><a class="dropdown-item text-danger permanent-delete-ilan" href="#" data-id="@ilan.Id"><i class="bi bi-trash-fill me-2"></i>Kalıcı Olarak Sil</a></li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
            <nav aria-label="Page navigation" class="d-flex justify-content-center mt-4">
                <ul class="pagination" id="pagination"></ul>
            </nav>
        </section>
    </div>
</div>

<div class="modal fade" id="confirmationModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmationModalTitle">Onay</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p id="confirmationModalMessage"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hayır</button>
                <button type="button" class="btn btn-primary" id="modalConfirmButton">Evet</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const confirmationModal = new bootstrap.Modal(document.getElementById('confirmationModal'));
            const modalMessage = document.getElementById('confirmationModalMessage');
            const confirmButton = document.getElementById('modalConfirmButton');

            function showConfirmationModal(message, onConfirm) {
                modalMessage.textContent = message;
                confirmationModal.show();
                confirmButton.onclick = function() {
                    confirmationModal.hide();
                    onConfirm(true);
                }
            }

            function performAction(url, ilanId, successMessage, errorMessage) {
                const csrfToken = document.querySelector('input[name="__RequestVerificationToken"]').value;
                fetch(url, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json', 'RequestVerificationToken': csrfToken },
                    body: JSON.stringify({ ilanId })
                }).then(response => {
                    if (response.ok) {
                        alert(successMessage);
                        location.reload();
                    } else {
                        response.text().then(text => alert(errorMessage + ": " + text));
                    }
                }).catch(err => alert(errorMessage + ": " + err));
            }

            document.querySelector('.ilan-listesi')?.addEventListener('click', function(e) {
                const target = e.target.closest('a');
                if (!target) return;
                const ilanId = target.dataset.id;

                if (target.classList.contains('permanent-delete-ilan')) {
                    e.preventDefault();
                    showConfirmationModal('Bu ilanı KALICI OLARAK silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.', confirmed => {
                        if (confirmed) performAction('/Ilan/PermanentDelete', ilanId, 'İlan kalıcı olarak silindi.', 'Silme hatası');
                    });
                } else if (target.classList.contains('promote-to-active')) {
                    e.preventDefault();
                    showConfirmationModal('Bu ilanı tekrar yayına almak istediğinizden emin misiniz?', confirmed => {
                        if (confirmed) performAction('/Ilan/PromoteToActive', ilanId, 'İlan yayına alındı.', 'Yayına alma hatası');
                    });
                }
            });

            // Client-side Arama ve Sayfalama
            const ilanListesiContainer = document.querySelector('.ilan-listesi');
            const allItems = Array.from(ilanListesiContainer?.querySelectorAll('.ilan-kart') || []);
            const paginationContainer = document.getElementById('pagination');
            const itemsPerPage = 10;
            let currentPage = 1;
            let filteredItems = allItems;

            function displayPage(page) {
                currentPage = page;
                if (!ilanListesiContainer) return;
                allItems.forEach(item => item.style.display = 'none');
                const start = (page - 1) * itemsPerPage;
                const end = start + itemsPerPage;
                const paginatedItems = filteredItems.slice(start, end);
                paginatedItems.forEach(item => item.style.display = '');
                window.scrollTo({ top: 0, behavior: 'smooth' });
            }

            function setupPagination() {
                if (!paginationContainer) return;
                paginationContainer.innerHTML = '';
                const pageCount = Math.ceil(filteredItems.length / itemsPerPage);
                if (pageCount <= 1) return;

                const createButton = (text, page, isDisabled = false, isActive = false) => {
                    const li = document.createElement('li');
                    li.className = `page-item ${isDisabled ? 'disabled' : ''} ${isActive ? 'active' : ''}`;
                    const a = document.createElement('a');
                    a.className = 'page-link';
                    a.href = '#';
                    a.innerText = text;
                    a.addEventListener('click', (e) => {
                        e.preventDefault();
                        if (!isDisabled && !isActive) {
                            displayPage(page);
                            setupPagination();
                        }
                    });
                    li.appendChild(a);
                    return li;
                };

                paginationContainer.appendChild(createButton('« İlk', 1, currentPage === 1));
                const maxVisibleButtons = 5;
                let startPage, endPage;
                if (pageCount <= maxVisibleButtons) {
                    startPage = 1;
                    endPage = pageCount;
                } else {
                    const maxPagesBeforeCurrent = Math.floor(maxVisibleButtons / 2);
                    const maxPagesAfterCurrent = Math.ceil(maxVisibleButtons / 2) - 1;
                    if (currentPage <= maxPagesBeforeCurrent) {
                        startPage = 1;
                        endPage = maxVisibleButtons;
                    } else if (currentPage + maxPagesAfterCurrent >= pageCount) {
                        startPage = pageCount - maxVisibleButtons + 1;
                        endPage = pageCount;
                    } else {
                        startPage = currentPage - maxPagesBeforeCurrent;
                        endPage = currentPage + maxPagesAfterCurrent;
                    }
                }
                for (let i = startPage; i <= endPage; i++) {
                    paginationContainer.appendChild(createButton(i, i, false, i === currentPage));
                }
                paginationContainer.appendChild(createButton('Son »', pageCount, currentPage === pageCount));
            }

            window.filterAds = function() {
                const searchValue = document.getElementById('searchInput').value.toLowerCase();
                filteredItems = allItems.filter(item => {
                    const title = item.getAttribute('data-title') || '';
                    return title.includes(searchValue);
                });
                displayPage(1);
                setupPagination();
            }

            filterAds();
        });
    </script>
}
