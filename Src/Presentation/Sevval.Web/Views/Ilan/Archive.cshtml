                                        @if (Model.Users != null)
                                        {
                                            @foreach (var u in Model.Users)
                                            {
                                                <option value="@u.Email" selected="@(Model.SelectedUserEmail == u.Email)">@u.FirstName @u.LastName</option>
                                            }
                                        }
                                    </select>
                                    <button type="submit" class="btn btn-secondary w-100">Danışman Filtrele</button>
                                }
                            </div>

                        </div>

                    </div>
