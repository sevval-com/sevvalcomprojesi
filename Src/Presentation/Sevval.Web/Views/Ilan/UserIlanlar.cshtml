@model Sevval.Web.Dto.User.UserAnnouncementsDto



    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

    <!-- External CSS -->
    <link href="/css/userilanlar.css" rel="stylesheet">
<style>
    .new-badge {
        position: absolute;
        top: 10px;
        left: 10px;
        background-color: #007bff;
        color: white;
        padding: 5px 10px;
        font-size: 14px;
        font-weight: bold;
        border-radius: 5px;
    }
    .ilan-no-badge {
        color: #007bff;
        font-size: 13px;
    }
    .ilan-no-badge i {
        margin-right: 3px;
    }
</style>




    <!-- Üst Bar (Profil Bilgileri) -->
    @{
        string userPhotoPath = Model.User.ProfilePicturePath;
        if (!string.IsNullOrEmpty(userPhotoPath))
        {
            userPhotoPath = userPhotoPath.Replace("\\", "/");
            if (!userPhotoPath.StartsWith("http"))
            {
                if (userPhotoPath.Contains("wwwroot/"))
                {
                    userPhotoPath = userPhotoPath.Substring(userPhotoPath.IndexOf("wwwroot/") + 8);
                }
                else if (userPhotoPath.Contains("wwwroot"))
                {
                    userPhotoPath = userPhotoPath.Substring(userPhotoPath.IndexOf("wwwroot") + 7);
                }
                if (!userPhotoPath.StartsWith("/"))
                {
                    userPhotoPath = "/" + userPhotoPath;
                }
                userPhotoPath = "https://www.sevval.com" + userPhotoPath;
            }
        }
        else
        {
            userPhotoPath = "/images/common/defaultuser.webp";
        }
    }
    <div class="container-fluid header-bar">
        <div class="container">
            <div class="profile-container">
                <div class="d-flex align-items-center">
                    <img src="@userPhotoPath" onerror="this.onerror=null; this.src='/images/common/defaultuser.webp';"
                         class="profile-img" alt="Profil Resmi">
                    <div class="profile-info">
                        <h3>@Model.User.FirstName @Model.User.LastName</h3>
                        <p>İlan Sayısı: @Model.Announcements?.Count()</p>
                    </div>
                </div>

                <div class="text-right">
                    <a href="@Url.Action("Index", "Home")" class="btn back-btn">Ana Sayfaya Dön</a>
                    <!-- Mağazaya Git Butonu -->
                    <a href="@Url.Action("RedirectToStore", "Ilan", new { email = Model.User.Email })" class="btn back-btn">Mağazaya Git</a>
                </div>
            </div>
        </div>
    </div>


    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Sayfa Başlığı -->
    <h2 class="text-center mb-5 text-primary font-weight-bold">@Model.User.FirstName @Model.User.LastName İlanları</h2>

    <!-- İlanlar -->
    @if (Model.Announcements != null && Model.Announcements.Any())
    {
        <div class="container">
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
                @foreach (var ilan in Model.Announcements)
                {
                    var isNew = (DateTime.Now - ilan.GirisTarihi).TotalDays <= 3; // Yeni ilan kontrolü

                    <div class="col">
                        <div class="card border-primary shadow-lg rounded-3 mb-3">
                            <div class="position-relative">
                                @if (ilan.Images != null && ilan.Images.Any())
                                {
                                    var ilanFotograflari = ilan.Images;

                                    @if (ilanFotograflari.Any())
                                    {
                                        <a href="@Url.Action("ilansayfasi", "Ilan", new { id = ilan.Id })">
                                            <img src="@ilanFotograflari.First()" class="card-img-top rounded-3" alt="İlan Resmi">
                                        </a>
                                    }
                                    else
                                    {
                                        <a href="@Url.Action("ilansayfasi", "Ilan", new { id = ilan.Id })">
                                            <div class="no-image">
                                                <i class="fas fa-camera fa-5x text-muted"></i>
                                            </div>
                                        </a>
                                    }
                                }
                                else
                                {
                                    <a href="@Url.Action("ilansayfasi", "Ilan", new { id = ilan.Id })">
                                        <div class="no-image">
                                            <i class="fas fa-camera fa-5x text-muted"></i>
                                        </div>
                                    </a>
                                }
                                <div class="position-absolute top-0 end-0 m-2 bg-primary text-white rounded-3 px-3 py-2">
                                    @ilan.Price.ToString("N0") TL
                                </div>
                                @if (isNew)
                                {
                                    <span class="new-badge">Yeni</span> <!-- Yeni Etiketi -->
                                }

                            </div>

                            <div class="card-body">
                                <h5 class="card-title text-primary text-truncate">@ilan.Title</h5>
                                <p class="ilan-no-badge mb-2"><i class="fas fa-hashtag"></i> <strong>İlan No:</strong> @ilan.Id</p>
                                @{
                                    var details = new List<string>();

                                    if (!string.IsNullOrEmpty(ilan.Area) && ilan.Area != "0")
                                        details.Add($"M²: <strong>{ilan.Area}</strong>");

                                    if (!string.IsNullOrEmpty(ilan.AdaNo))
                                        details.Add($"Ada: <strong>{ilan.AdaNo}</strong>");

                                    if (!string.IsNullOrEmpty(ilan.ParselNo))
                                        details.Add($"Parsel: <strong>{ilan.ParselNo}</strong>");

                                    if (!string.IsNullOrEmpty(ilan.OdaSayisi))
                                        details.Add($"Oda Sayısı: <strong>{ilan.OdaSayisi}</strong>");

                                    if (!string.IsNullOrEmpty(ilan.BinaYasi))
                                        details.Add($"Bina Yaşı: <strong>{ilan.BinaYasi}</strong>");

                                    if (!string.IsNullOrEmpty(ilan.NetMetrekare))
                                        details.Add($"Net M²: <strong>{ilan.NetMetrekare}</strong>");
                                }

                                @if (details.Any())
                                {
                                    <p class="result-description">
                                        @foreach (var detail in details)
                                        {
                                            <span class="detail-item">@Html.Raw(detail)</span>
                                            @if (detail != details.Last())
                                            {
                                                <span class="separator"> / </span>
                                            }
                                        }
                                    </p>
                                }
                                <p class="giristarihi"><b>Giriş Tarihi:</b> @ilan.GirisTarihi.ToString("dd.MM.yyyy") - @ilan.GirisTarihi.ToString("HH:mm")</p>
                                <p class="giristarihi"><b>Son Tarih:</b> @ilan.GirisTarihi.AddMonths(3).ToString("dd.MM.yyyy")</p>
                                <button type="button" class="copy-link-btn" onclick="copyIlanLink(@ilan.Id, event)" title="Linki Kopyala">
                                    <i class="fas fa-link"></i> Linki Kopyala
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <p class="text-muted text-center">Bu Danışmana ait ilan bulunmamaktadır.</p>
    }

<style>
    .copy-link-btn {
        background: #009cfb;
        border: none;
        color: white;
        padding: 8px 15px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 13px;
        margin-top: 10px;
        transition: background 0.2s;
        width: 100%;
    }

    .copy-link-btn:hover {
        background: #0083d6;
    }

    .copy-toast {
        position: fixed;
        top: 20px;
        right: 20px;
        background: #28a745;
        color: white;
        padding: 12px 24px;
        border-radius: 8px;
        font-size: 14px;
        z-index: 9999;
        opacity: 0;
        transform: translateY(-20px);
        transition: opacity 0.3s, transform 0.3s;
    }

    .copy-toast.show {
        opacity: 1;
        transform: translateY(0);
    }
</style>

<script>
    function copyIlanLink(ilanId, event) {
        event.preventDefault();
        event.stopPropagation();
        const link = window.location.origin + '/Ilan/ilansayfasi/' + ilanId;
        if (navigator.clipboard && window.isSecureContext) {
            navigator.clipboard.writeText(link).then(() => {
                showCopyToast('Link kopyalandı!');
            });
        } else {
            let ta = document.createElement('textarea');
            ta.value = link;
            document.body.appendChild(ta);
            ta.select();
            document.execCommand('copy');
            document.body.removeChild(ta);
            showCopyToast('Link kopyalandı!');
        }
    }

    function showCopyToast(message) {
        let toast = document.createElement('div');
        toast.className = 'copy-toast';
        toast.textContent = message;
        document.body.appendChild(toast);
        setTimeout(() => { toast.classList.add('show'); }, 10);
        setTimeout(() => {
            toast.classList.remove('show');
            setTimeout(() => toast.remove(), 300);
        }, 2000);
    }
</script>



