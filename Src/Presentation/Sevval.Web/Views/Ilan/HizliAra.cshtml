<!-- Scripts -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    // --- İL/İLÇE YÜKLEME VE ARAMA ---
    document.addEventListener("DOMContentLoaded", function () {
        showPage(1);

        // JSON Yolu: Blob URL hatasını önlemek için absolute path kullanıyoruz
        const jsonPath = "/data/TR-İl-İlçe-Mahalle_(City-County-Neighborhood).json";
        // encodeURI ile Türkçe karakterleri kodluyoruz
        // + Parantezleri manuel düzeltiyoruz
        const safeUrl = new URL(encodeURI(jsonPath).replace(/\(/g, '%28').replace(/\)/g, '%29'), window.location.origin).href;

        fetch(safeUrl)
            .then(response => {
                if (!response.ok) throw new Error('JSON yüklenemedi');
                return response.json();
            })
            .then(data => {
                loadProvincesToList(data, 'province-list-d', 'selectedProvinceD');
                loadProvincesToList(data, 'province-list-m', 'selectedProvinceM');
                setupSearchListener('province-search-d', 'province-list-d');
                setupSearchListener('province-search-m', 'province-list-m');
            })
            .catch(error => console.error("Hata:", error));
    });

    function setupSearchListener(inputId, listId) {
        const input = document.getElementById(inputId);
        if(!input) return;
        input.addEventListener('input', function(e) {
            const term = e.target.value.toLowerCase();
            const items = document.querySelectorAll(`#${listId} li`);
            items.forEach(item => {
                const text = item.textContent.toLowerCase();
                item.style.display = text.includes(term) ? '' : 'none';
            });
        });
    }

    function loadProvincesToList(data, listId, hiddenInputId) {
        const ul = document.getElementById(listId);
        if (!ul) return;
        ul.innerHTML = "";

        data.forEach(city => {
            const li = document.createElement("li");
            li.className = "p-2 border-bottom cursor-pointer";
            li.style.cursor = "pointer";
            li.textContent = city.Il;

            li.onclick = () => {
                document.getElementById(hiddenInputId).value = city.Il;
                // Seçim efekti
                Array.from(ul.children).forEach(c => {
                    c.style.backgroundColor = "transparent";
                    c.style.color = "#333";
                });
                li.style.backgroundColor = "#009cfb";
                li.style.color = "white";
            };
            ul.appendChild(li);
        });
    }

    // --- LİNK KOPYALAMA ---
    function copyAdLink(event, id) {
        event.preventDefault();
        event.stopPropagation();
        const link = window.location.origin + '/Ilan/ilansayfasi/' + id;
        if (navigator.clipboard && window.isSecureContext) {
            navigator.clipboard.writeText(link).then(() => showToast('Link kopyalandı!'));
        } else {
            // Fallback
            let ta = document.createElement('textarea');
            ta.value = link;
            document.body.appendChild(ta);
            ta.select();
            document.execCommand('copy');
            document.body.removeChild(ta);
            showToast('Link kopyalandı!');
        }
    }

    function showToast(message) {
        const Toast = Swal.mixin({
            toast: true, position: 'top-end', showConfirmButton: false, timer: 3000,
            didOpen: (toast) => {
                toast.addEventListener('mouseenter', Swal.stopTimer);
                toast.addEventListener('mouseleave', Swal.resumeTimer);
            }
        })
        Toast.fire({ icon: 'success', title: message })
    }

    // --- SAYFALAMA ---
    const itemsPerPage = 12;
    const items = document.querySelectorAll('.result-item');
    const totalItems = items.length;
    const totalPages = Math.ceil(totalItems / itemsPerPage);
    let currentPage = 1;

    function showPage(page) {
        if (totalItems === 0) return;
        const start = (page - 1) * itemsPerPage;
        const end = start + itemsPerPage;

        items.forEach((item, index) => {
            if (index >= start && index < end) {
                item.style.display = 'block';
                item.classList.add('animate__animated', 'animate__fadeIn');
            } else {
                item.style.display = 'none';
                item.classList.remove('animate__animated', 'animate__fadeIn');
            }
        });

        currentPage = page;
        updatePaginationUI();
        window.scrollTo({ top: 0, behavior: 'smooth' });
    }

    function updatePaginationUI() {
        const pagination = document.getElementById('paginationControls');
        pagination.innerHTML = '';
        if (totalPages <= 1) return;

        let prevDisabled = currentPage === 1 ? 'disabled' : '';
        pagination.innerHTML += `<li class="page-item ${prevDisabled}"><a class="page-link" href="#" onclick="showPage(${currentPage - 1})"><i class="fas fa-chevron-left"></i></a></li>`;

        for (let i = 1; i <= totalPages; i++) {
            if (i === 1 || i === totalPages || (i >= currentPage - 1 && i <= currentPage + 1)) {
                let activeClass = i === currentPage ? 'active' : '';
                pagination.innerHTML += `<li class="page-item ${activeClass}"><a class="page-link" href="#" onclick="showPage(${i})">${i}</a></li>`;
            } else if (i === currentPage - 2 || i === currentPage + 2) {
                pagination.innerHTML += `<li class="page-item disabled"><span class="page-link border-0">...</span></li>`;
            }
        }

        let nextDisabled = currentPage === totalPages ? 'disabled' : '';
        pagination.innerHTML += `<li class="page-item ${nextDisabled}"><a class="page-link" href="#" onclick="showPage(${currentPage + 1})"><i class="fas fa-chevron-right"></i></a></li>`;
    }

    // Sayfa yüklenince filtre değerlerini setle
    document.addEventListener('DOMContentLoaded', function() {
        var kategoriValue = '@(ViewBag.Kategori ?? "")';
        if (kategoriValue) {
            var desktopSelect = document.getElementById('desktopKategoriSelect');
            var mobileSelect = document.getElementById('mobileKategoriSelect');
            if (desktopSelect) desktopSelect.value = kategoriValue;
            if (mobileSelect) mobileSelect.value = kategoriValue;
        }
    });

    // --- SIRALAMA FONKSİYONU ---
    function sortResults(sortType) {
        var container = document.getElementById('resultsContainer');
        if (!container) return;

        var items = Array.from(container.querySelectorAll('.result-item'));

        items.sort(function(a, b) {
            if (sortType === 'price_asc') {
                return parseFloat(a.dataset.price) - parseFloat(b.dataset.price);
            } else if (sortType === 'price_desc') {
                return parseFloat(b.dataset.price) - parseFloat(a.dataset.price);
            } else {
                // recommended - varsayılan sıralama (tarih)
                return parseInt(a.dataset.order) - parseInt(b.dataset.order);
            }
        });

        // DOM'u yeniden düzenle
        items.forEach(function(item) {
            container.appendChild(item);
        });

        // Sayfalama varsa güncelle
        if (typeof showPage === 'function') {
            showPage(1);
        }
    }
</script>