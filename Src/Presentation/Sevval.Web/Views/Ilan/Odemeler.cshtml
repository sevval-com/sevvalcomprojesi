@{
    ViewData["Title"] = "Ödemeler";
}

<h2>Ödemeler</h2>

<!-- Ödeme geçmişi veya ödeme yapma bölümü burada olacak -->
<p>Burada ödeme geçmişinizi görebilirsiniz ve yeni ödeme işlemleri yapabilirsiniz.</p>

<form method="post" action="@Url.Action("OdemeYap", "Odemeler")">
    <div class="form-group">
        <label for="tutar">Ödenecek Tutar:</label>
        <input type="number" id="tutar" name="tutar" class="form-control" placeholder="Tutar girin" required>
    </div>
    <button type="submit" class="btn btn-primary">Ödeme Yap</button>
</form>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success mt-3">
        @TempData["Message"]
    </div>
}
