@model sevvalemlak.Dto.TumIlanlarDTO
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@{
    var user = await UserManager.GetUserAsync(User);
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Raporlar - Şevval Emlak</title>

    <!-- CSS Libraries -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <!-- Navbar için gerekli olan özel CSS -->
    <link rel="stylesheet" href="~/css/Anasayfa.css" />
    <link rel="icon" type="image/png" href="~/images/favlogo.webp">

</head>
<body>
    <!-- Navbar -->
    <nav class="navbaar">
        <div class="navbaar-container">
            <div class="logo">
                <a href="/">
                    <img src="~/images/LOGO mavi.webp" alt="Firma Logosu">
                </a>
                <span>Sevval.com</span>
            </div>
            <div class="hamburger" id="hamburger-menu">
                <div class="line"></div>
                <div class="line"></div>
                <div class="line"></div>
            </div>
            <ul class="naav-linkss" id="nav-links">
                <li><a href="@Url.Action("Index", "Home")">Ana Sayfa</a></li>
                <li><a href="@Url.Action("KardesFirmalar", "Home")">Firmalar</a></li>
                <li class="dropdoawn">
                    <a href="@Url.Action("About", "Home")">Hakkımızda</a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "VideolarSayfasi")">Videolar</a>
                </li>
               
                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <li>
                        <a href="@Url.Action("Panel", "Ilan")">Mağazam</a>
                    </li>
                    
                }
            </ul>
            <div class="auth-buttoons">
                @if (User.Identity.IsAuthenticated)
                {
                    var currentUser = await UserManager.GetUserAsync(User);
                    if (currentUser != null)
                    {
                        <div class="dropdown">
                            <a href="#" class="user-name">@currentUser.FirstName @currentUser.LastName</a>
                            <ul class="dropdown-content">
                                <li><a href="@Url.Action("RedirectToStore", "Ilan", new { email = User.Identity.Name })">Mağazam</a></li>
                                <li><a href="@Url.Action("Panel", "Ilan")">Raporlar</a></li>
                                
                                <li><a href="@Url.Action("Ilanlar", "Ilan")">İlanlar</a></li>
                                <li><a href="@Url.Action("Danismanlar", "Ilan")">Danışmanlar</a></li>
                                <li><a href="@Url.Action("Sozlesmeler", "Ilan")">Sözleşmeler</a></li>
                                
                                <li><a href="@Url.Action("Index", "Satinal")">Satın Al</a></li>
                                <li><a href="@Url.Action("Settings", "Account")">Ayarlar</a></li>
                                @if (User.Identity.IsAuthenticated &&
                                                        (User.Identity.Name == "sftumen41@gmail.com" || User.Identity.Name == "exdel.txt@gmail.com"))
                                {
                                    <li><a href="@Url.Action("Index", "SevvalOfis")">Şevval Ofis</a></li>
                                }
                                <li><a href="@Url.Action("KategoriSecim", "Ilan")">İlan Ver</a></li>
                                <li>
                                    <form asp-action="Logout" asp-controller="Account" method="post">
                                        <button type="submit" class="logout-btn">Çıkış Yap</button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    }
                }
                else
                {
                    <a href="#" class="login" id="giris-buton">Giriş Yap</a>
                }
                <div class="post-ad-container">
                    <span class="free-tag">Ücretsiz</span>
                    <a href="@(!User.Identity.IsAuthenticated ? @Url.Action("Login", "Account", new { Type = "GENEL" }) : Url.Action("KategoriSecim", "Ilan"))" class="post-ad" id="post-ad-button">+ İlan Ver</a>
                </div>
            </div>
        </div>
    </nav>

    <div id="popup-giris" class="pencere" style="display:none;">
        <div class="pencere-icerik">
            <button class="kapat-buton" id="pencere-kapat">&times;</button>
            <div class="sol-bolum">
                <h2>Bireysel</h2>
                <a href="@Url.Action("Login", "Account")" class="baglanti">Giriş Yap</a>
                <a href="@Url.Action("Register", "Account")" class="baglanti">Üye Ol</a>
            </div>
            <div class="sag-bolum">
                <h2>Kurumsal</h2>
                <a href="@Url.Action("Login", "Account")" class="baglanti">Giriş Yap</a>
                <a href="@Url.Action("EstateRegister", "Account")" class="baglanti">Üye Ol</a>
            </div>
        </div>
    </div>

    <div class="modal fade" id="talepModal" tabindex="-1" aria-labelledby="talepModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content border-0 shadow">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title fw-bold" id="talepModalLabel">
                        <i class="fas fa-bullhorn me-2"></i>Yeni Satış Fırsatı Bulundu!
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body py-4">
                    <div class="row align-items-center">
                        <div class="col-3 text-center">
                            <i class="fas fa-gift fa-4x text-primary mb-3"></i>
                        </div>
                        <div class="col-9">
                            <h4 class="text-dark mb-3"><strong>@Model.TalepCount Adet</strong> Aktif Satış Talebi Sizi Bekliyor!</h4>
                            <p class="text-muted">Bölgenizdeki potansiyel müşteriler ürün/hizmetinizi arıyor. Hemen harekete geçerek:</p>
                            <ul class="list-unstyled">
                                <li class="mb-2"><i class="fas fa-check-circle text-success me-2"></i>Rakiplerinizin önüne geçin</li>
                                <li class="mb-2"><i class="fas fa-check-circle text-success me-2"></i>Pazar payınızı artırın</li>
                                <li><i class="fas fa-check-circle text-success me-2"></i>Ek satış geliri elde edin</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="modal-footer bg-light">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Şimdi Değil</button>
                    <a href="@Url.Action("Index", "Talepler")" class="btn btn-primary btn-lg px-4">
                        <i class="fas fa-chart-line me-2"></i>Talep Listesini Görüntüle
                    </a>
                </div>
            </div>
        </div>
    </div>

    <style>
        body {
            background-color: #f0f2f5;
        }

        .post-ad-container {
            position: relative;
            display: inline-block
        }

        .free-tag {
            position: absolute;
            top: -10px;
            left: -10px;
            background-color: #007bff;
            color: #fff;
            font-size: 10px;
            font-weight: 700;
            padding: 3px 8px;
            border-radius: 4px;
            transform: rotate(-10deg);
            z-index: 1;
            box-shadow: 0 2px 4px rgba(0,0,0,.2)
        }

        .post-ad {
            display: inline-block;
            background-color: #fff;
            color: #007bff;
            padding: 10px 15px;
            text-decoration: none;
            border-radius: 5px;
            font-weight: 700;
            border: 1px solid #007bff;
            transition: .3s ease
        }

            .post-ad:hover {
                background-color: #007bff;
                color: #fff
            }

        .coming-soon-tag {
            position: absolute;
            top: 20px;
            left: 55px;
            background-color: #007bff;
            color: #fff;
            font-size: 10px;
            font-weight: 700;
            padding: 3px 8px;
            border-radius: 4px;
            transform: none;
            z-index: 1;
            box-shadow: 0 2px 4px rgba(0,0,0,.2)
        }

        .pencere {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,.8);
            justify-content: center;
            align-items: center;
            z-index: 1100
        }

        .pencere-icerik {
            background: linear-gradient(90deg,#1e88e5,#2196f3);
            width: 460px;
            height: 490px;
            display: flex;
            border-radius: 15px;
            box-shadow: 0 8px 30px rgba(0,0,0,.3);
            overflow: hidden;
            position: relative;
            padding: 20px;
            box-sizing: border-box;
            margin: auto
        }

        .sol-bolum, .sag-bolum {
            flex: 1;
            padding: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center
        }

        .sag-bolum {
            border-left: 2px solid #fff
        }

        h2 {
            margin-bottom: 20px;
            font-size: 28px;
            color: #fff;
            font-weight: 700
        }

        .baglanti {
            margin: 15px 0;
            padding: 15px 25px;
            background: #fff;
            color: #1e88e5;
            text-decoration: none;
            border-radius: 10px;
            border: none;
            cursor: pointer;
            transition: background .3s,transform .2s;
            box-shadow: 0 4px 12px rgba(0,0,0,.2);
            font-size: 18px;
            width: 80%
        }

            .baglanti:hover {
                background: #f1f1f1;
                transform: translateY(-2px)
            }

            .baglanti:focus {
                outline: none
            }

        .kapat-buton {
            position: absolute;
            top: 10px;
            right: 10px;
            width: 40px;
            height: 40px;
            font-size: 30px;
            color: #fff;
            background: 0 0;
            border: 2px solid #fff;
            text-align: center;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center
        }

            .kapat-buton:hover {
                color: #d32f2f;
                border-color: #d32f2f
            }
    </style>

    <main class="container-fluid my-4">
        <div class="row g-lg-4 g-3">

            <div class="d-lg-none mb-3 px-3">
                <button class="btn btn-primary w-100 p-3" type="button" data-bs-toggle="collapse" data-bs-target="#controlPanel" aria-expanded="false" aria-controls="controlPanel">
                    <i class="fas fa-bars me-2"></i> Menü
                </button>
            </div>

            <aside class="col-lg-2">
                <div class="collapse d-lg-block" id="controlPanel">
                    <div class="sticky-top" style="top: 20px;">

                        <div class="card shadow-sm">
                            <div class="card-header bg-primary text-white">
                                <h5 class="mb-0"><i class="fas fa-compass me-2"></i> Menü</h5>
                            </div>
                            <div class="list-group list-group-flush">
                                <a href="@Url.Action("Panel", "Ilan")" class="list-group-item list-group-item-action active" aria-current="true">Raporlar</a>
                                <a href="@Url.Action("Ilanlar", "Ilan")" class="list-group-item list-group-item-action">İlanlar</a>
                                <a href="@Url.Action("Danismanlar", "Ilan")" class="list-group-item list-group-item-action">Danışmanlar</a>
                                <a href="@Url.Action("Sozlesmeler", "Ilan")" class="list-group-item list-group-item-action">Sözleşmeler</a>
                                
                                <a href="@Url.Action("Settings", "Account")" class="list-group-item list-group-item-action">Ayarlar</a>
                                <a href="@Url.Action("Index", "Satinal")" class="list-group-item list-group-item-action">Satın Al</a>
                                
                               
                                @if (User.Identity.IsAuthenticated && (new List<string> { "sftumen41@gmail.com", "exdel.txt@gmail.com" }).Contains(User.Identity.Name, StringComparer.OrdinalIgnoreCase))
                                {
                                    <a href="@Url.Action("Index", "SevvalOfis")" class="list-group-item list-group-item-action">Şevval Ofis</a>
                                }
                            </div>
                        </div>

                    </div>
                </div>
            </aside>

            <section class="col-lg-10">
                <div class="row g-4">

                    <div class="col-12">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title text-primary">Haftalık Görüntülenme Sayıları</h5>
                                <div id="weeklyViewsChart" style="height: 400px;"></div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="card shadow-sm h-100">
                            <div class="card-body text-center">
                                <h5 class="card-title text-primary">En Çok Görüntülenen İlanlar</h5>
                                <p class="text-muted small">Haftalık Toplam Ziyaretçi Sayısı: <strong>@Model.ToplamGoruntulenme</strong></p>
                                <div id="topViewedChart" style="height: 300px;"></div>
                                <ul class="list-group list-group-flush mt-3">
                                    @foreach (var ilan in Model.EnCokGoruntulenenIlanlar.OrderByDescending(i => i.GoruntulenmeSayisi).Take(3))
                                    {
                                        var shortTitle = ilan.Title.Length > 25 ? ilan.Title.Substring(0, 25) + "..." : ilan.Title;
                                        <li class="list-group-item">@shortTitle - @ilan.GoruntulenmeSayisi Görüntülenme</li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="card shadow-sm h-100">
                            <div class="card-body">
                                <h5 class="card-title text-primary">Yayında Olan İlan Sayısı</h5>
                                <p class="text-muted small">Toplam İlan Adedi: <strong>@Model.IlanSayisi</strong></p>
                                <div id="ilanDurumlariChart" style="height: 300px;"></div>
                                <div class="d-flex justify-content-center gap-3 mt-3">
                                    @if (Model.KonutDurumlari.ContainsKey("Satılık") && Model.KonutDurumlari["Satılık"] > 0)
                                    {
                                        <span class="badge bg-info-subtle border border-info-subtle text-info-emphasis rounded-pill px-3 py-2">Satılık: @Model.KonutDurumlari["Satılık"]</span>
                                    }
                                    @if (Model.KonutDurumlari.ContainsKey("Kiralık") && Model.KonutDurumlari["Kiralık"] > 0)
                                    {
                                        <span class="badge bg-success-subtle border border-success-subtle text-success-emphasis rounded-pill px-3 py-2">Kiralık: @Model.KonutDurumlari["Kiralık"]</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title text-primary">Kategorilere Göre İlan Dağılımı</h5>
                                <div id="ilanKategoriChart" style="height: 400px;"></div>
                            </div>
                        </div>
                    </div>

                    @* <div class="col-12">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title text-primary">Haftalık Telefon Arama Raporu</h5>
                                <p class="text-muted small">Toplam Telefon Araması: <strong>@Model.ToplamArama</strong></p>
                                <div id="telefonAramaChart" style="height: 400px;"></div>
                            </div>
                        </div>
                    </div> *@

                </div>
            </section>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/echarts/dist/echarts.min.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Navbar scripts
            var hamburgerMenu = document.getElementById("hamburger-menu");
            var navLinks = document.getElementById("nav-links");
            if(hamburgerMenu) {
                hamburgerMenu.addEventListener("click", function (event) {
                    navLinks.classList.toggle("active");
                    event.stopPropagation();
                });
            }
            document.addEventListener("click", function (event) {
                if (navLinks && !navLinks.contains(event.target) && !hamburgerMenu.contains(event.target)) {
                    navLinks.classList.remove("active");
                }
            });

            const girisButon = document.getElementById('giris-buton');
            const popupGiris = document.getElementById('popup-giris');
            const pencereKapat = document.getElementById('pencere-kapat');

            if(girisButon) {
                girisButon.addEventListener('click', function (event) {
                    event.preventDefault();
                    popupGiris.style.display = 'flex';
                });
            }

            if(popupGiris){
                popupGiris.addEventListener('click', function (event) {
                    if (event.target === this) this.style.display = 'none';
                });
            }

            if(pencereKapat) {
                pencereKapat.addEventListener('click', function () {
                    popupGiris.style.display = 'none';
                });
            }

            // Talep Modalı
            const talepModal = new bootstrap.Modal(document.getElementById('talepModal'));
            function kontrolVeGoster() {
                var modalShown = localStorage.getItem('modalShown');
                var talepCount = @Model.TalepCount;
                if (talepCount > 0) {
                    if (!modalShown) {
                        talepModal.show();
                        localStorage.setItem('modalShown', '1');
                    } else if (modalShown === '1') {
                        setTimeout(function() {
                            talepModal.show();
                            localStorage.setItem('modalShown', '2');
                        }, 3 * 60 * 60 * 1000);
                    }
                }
            }
            kontrolVeGoster();

            document.getElementById('talepModal').addEventListener('hidden.bs.modal', function () {
                if (localStorage.getItem('modalShown') == null) {
                    localStorage.setItem('modalShown', '1');
                } else if (localStorage.getItem('modalShown') == '1') {
                     localStorage.setItem('modalShown', '2');
                }
            });


            // ECHARTS INITIALIZATION
            try {
                // Haftalık Görüntülenme Chart
                var weeklyViewsChart = echarts.init(document.getElementById('weeklyViewsChart'));
                var weekDays = ['Pazartesi', 'Salı', 'Çarşamba', 'Perşembe', 'Cuma', 'Cumartesi', 'Pazar'];
                var weeklyViews = @Html.Raw(Json.Serialize(Model.WeeklyViews.Skip(1).Concat(Model.WeeklyViews.Take(1))));
                var weeklyViewsOptions = {
                    tooltip: { trigger: 'axis' },
                    xAxis: { type: 'category', data: weekDays, boundaryGap: false },
                    yAxis: { type: 'value' },
                    series: [{
                        name: 'Görüntülenme',
                        type: 'line',
                        data: weeklyViews,
                        smooth: true,
                        areaStyle: {}
                    }],
                    grid: { top: '10%', bottom: '10%', left: '10%', right: '10%' },
                };
                weeklyViewsChart.setOption(weeklyViewsOptions);

                // En Çok Görüntülenenler Chart
                var topViewedChart = echarts.init(document.getElementById('topViewedChart'));
                var topViewedOptions = {
                     title: {
                        text: '@Model.ToplamGoruntulenme',
                        subtext: 'Toplam',
                        x: 'center',
                        y: 'center',
                     },
                    tooltip: { trigger: 'item', formatter: "{b}: {c} ({d}%)" },
                    series: [{
                        name: 'İlanlar',
                        type: 'pie',
                        radius: ['40%', '70%'],
                        avoidLabelOverlap: false,
                        label: { show: false },
                        labelLine: { show: false },
                        data: @Html.Raw(Json.Serialize(Model.EnCokGoruntulenenIlanlar.OrderByDescending(i => i.GoruntulenmeSayisi).Take(3).Select(i => new { name = i.Title, value = i.GoruntulenmeSayisi })))
                    }]
                };
                topViewedChart.setOption(topViewedOptions);

                // İlan Durumları Chart
                var ilanDurumlariChart = echarts.init(document.getElementById('ilanDurumlariChart'));
                var ilanDurumlariOption = {
                    tooltip: { trigger: 'item', formatter: "{b}: {c} ({d}%)" },
                    series: [{
                        name: 'İlan Durumu',
                        type: 'pie',
                        radius: '50%',
                        data: [
                            { value: @((Model.KonutDurumlari.ContainsKey("Satılık") ? Model.KonutDurumlari["Satılık"] : 0) + (Model.KonutDurumlari.ContainsKey("Devren Satılık") ? Model.KonutDurumlari["Devren Satılık"] : 0)), name: 'Satılık' },
                            { value: @((Model.KonutDurumlari.ContainsKey("Kiralık") ? Model.KonutDurumlari["Kiralık"] : 0) + (Model.KonutDurumlari.ContainsKey("Devren Kiralık") ? Model.KonutDurumlari["Devren Kiralık"] : 0)), name: 'Kiralık' },
                        ],
                    }]
                };
                ilanDurumlariChart.setOption(ilanDurumlariOption);

                // Kategori Chart
                var ilanKategoriChart = echarts.init(document.getElementById('ilanKategoriChart'));
                var ilanKategoriOption = {
                    tooltip: { trigger: 'axis', axisPointer: { type: 'shadow' } },
                    xAxis: { type: 'category', data: @Html.Raw(Json.Serialize(Model.KategoriAdlari)), axisLabel: { rotate: 45, interval: 0 } },
                    yAxis: { type: 'value' },
                    series: [{
                        name: 'İlan Sayısı',
                        type: 'bar',
                        data: @Html.Raw(Json.Serialize(Model.KategoriVerileri)),
                    }],
                     grid: { top: '10%', bottom: '25%', left: '10%', right: '10%' },
                };
                ilanKategoriChart.setOption(ilanKategoriOption);

                // Telefon Arama Chart
                var telefonAramaChart = echarts.init(document.getElementById('telefonAramaChart'));
                var telefonAramaOption = {
                    tooltip: { trigger: 'axis' },
                    xAxis: { type: 'category', data: ['Pazartesi', 'Salı', 'Çarşamba', 'Perşembe', 'Cuma', 'Cumartesi', 'Pazar'], boundaryGap: false },
                    yAxis: { type: 'value' },
                    series: [{
                        name: 'Aramalar',
                        type: 'line',
                        data: @Html.Raw(Json.Serialize(Model.WeeklySearches)),
                        smooth: true
                    }],
                    grid: { top: '10%', bottom: '10%', left: '10%', right: '10%' },
                };
                telefonAramaChart.setOption(telefonAramaOption);

                // Resize charts on window resize
                window.addEventListener('resize', function() {
                    weeklyViewsChart.resize();
                    topViewedChart.resize();
                    ilanDurumlariChart.resize();
                    ilanKategoriChart.resize();
                    telefonAramaChart.resize();
                });

            } catch(e) {
                console.error("Chart initialization failed:", e);
            }
        });
    </script>

</body>
</html>
