<body>

    <!-- Navbar -->
    <partial name="_Navbar" />

    <style>
        body {
            background-color: #f0f2f5;
        }

        .post-ad-container {
            position: relative;
            display: inline-block
        }

        .free-tag {
            position: absolute;
            top: -10px;
            left: -10px;
            background-color: #007bff;
            color: #fff;
            font-size: 10px;
            font-weight: 700;
            padding: 3px 8px;
            border-radius: 4px;
            transform: rotate(-10deg);
            z-index: 1;
            box-shadow: 0 2px 4px rgba(0,0,0,.2)
        }

        .post-ad {
            display: inline-block;
            background-color: #fff;
            color: #007bff;
            padding: 10px 15px;
            text-decoration: none;
            border-radius: 5px;
            font-weight: 700;
            border: 1px solid #007bff;
            transition: .3s ease
        }

            .post-ad:hover {
                background-color: #007bff;
                color: #fff
            }

        .coming-soon-tag {
            position: absolute;
            top: 20px;
            left: 55px;
            background-color: #007bff;
            color: #fff;
            font-size: 10px;
            font-weight: 700;
            padding: 3px 8px;
            border-radius: 4px;
            transform: none;
            z-index: 1;
            box-shadow: 0 2px 4px rgba(0,0,0,.2)
        }

        .pencere {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,.8);
            justify-content: center;
            align-items: center;
            z-index: 1100
        }

        .pencere-icerik {
            background: linear-gradient(90deg,#1e88e5,#2196f3);
            width: 460px;
            height: 490px;
            display: flex;
            border-radius: 15px;
            box-shadow: 0 8px 30px rgba(0,0,0,.3);
            overflow: hidden;
            position: relative;
            padding: 20px;
            box-sizing: border-box;
            margin: auto
        }

        .sol-bolum, .sag-bolum {
            flex: 1;
            padding: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center
        }

        .sag-bolum {
            border-left: 2px solid #fff
        }

        h2 {
            margin-bottom: 20px;
            font-size: 28px;
            color: #fff;
            font-weight: 700
        }

        .baglanti {
            margin: 15px 0;
            padding: 15px 25px;
            background: #fff;
            color: #1e88e5;
            text-decoration: none;
            border-radius: 10px;
            border: none;
            cursor: pointer;
            transition: background .3s,transform .2s;
            box-shadow: 0 4px 12px rgba(0,0,0,.2);
            font-size: 18px;
            width: 80%
        }

            .baglanti:hover {
                background: #f1f1f1;
                transform: translateY(-2px)
            }

            .baglanti:focus {
                outline: none
            }

        .kapat-buton {
            position: absolute;
            top: 10px;
            right: 10px;
            width: 40px;
            height: 40px;
            font-size: 30px;
            color: #fff;
            background: 0 0;
            border: 2px solid #fff;
            text-align: center;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center
        }

            .kapat-buton:hover {
                color: #d32f2f;
                border-color: #d32f2f
            }

        /* 16:9 Image Container */
        .image-container-16-9 {
            position: relative;
            display: block;
            width: 100%;
            padding-top: 56.25%; /* 16:9 Aspect Ratio */
            background-color: #e9ecef;
            border-radius: var(--bs-border-radius);
            overflow: hidden;
        }

            .image-container-16-9 img,
            .image-container-16-9 .placeholder-div {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        /* Ada/Parsel Badges */
        .badge-info-light {
            background-color: #e3f2fd;
            color: #0d47a1;
            border: 1px solid #bbdefb;
            font-weight: 500;
        }

        /* Mobile Specific Styles */
        @@media (max-width: 767.98px) {
            .ilan-kart .row {
                display: flex;
                flex-direction: column;
            }

            .ilan-kart .col-md-3, .ilan-kart .col-md-9 {
                width: 100%;
                flex: 1 0 100%;
            }

                .ilan-kart .col-md-3.p-2 {
                    padding: 0 !important;
                }

            .ilan-kart .image-container-16-9 {
                border-radius: var(--bs-card-border-radius) var(--bs-card-border-radius) 0 0;
            }

            .ilan-kart .card-body {
                padding: 1rem;
            }

            .ilan-kart .badge-stats {
                gap: 0.5rem !important;
            }

            .ilan-kart .actions-row {
                padding-top: 1rem;
                margin-top: 1rem;
                border-top: 1px solid var(--bs-border-color-translucent);
            }
        }
    </style>
    <!-- Navbar Bitiş -->

    <main class="container-fluid my-4">
        <div class="row g-lg-4 g-3">

            <!-- MOBİL KONTROL PANELİ BUTONU -->
            <div class="d-lg-none mb-3 px-3">
                <button class="btn btn-primary w-100 p-3" type="button" data-bs-toggle="collapse" data-bs-target="#controlPanel" aria-expanded="false" aria-controls="controlPanel">
                    <i class="fas fa-bars me-2"></i> Menü & Kontroller
                </button>
            </div>

            <!-- SOL PANEL (Masaüstü) / AÇILIR PANEL (Mobil) -->
            <aside class="col-lg-2">
                <div class="collapse d-lg-block" id="controlPanel">
                    <div class="sticky-top" style="top: 20px;">

                        <!-- Panel Menüsü -->
                        <div class="card shadow-sm mb-4">
                            <div class="card-header bg-primary text-white">
                                <h5 class="mb-0"><i class="fas fa-compass me-2"></i> Menü</h5>
                            </div>
                            <div class="list-group list-group-flush">
                                <a href="@Url.Action("Panel", "Ilan")" class="list-group-item list-group-item-action">Raporlar</a>
                                <a href="@Url.Action("Ilanlar", "Ilan")" class="list-group-item list-group-item-action active" aria-current="true">İlanlar</a>
                                <a href="@Url.Action("Videolarim", "VideolarSayfasi")" class="list-group-item list-group-item-action">Videolarım</a>
                                <a href="@Url.Action("Danismanlar", "Ilan")" class="list-group-item list-group-item-action">Danışmanlar</a>
                                <a href="@Url.Action("Sozlesmeler", "Ilan")" class="list-group-item list-group-item-action">Sözleşmeler</a>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <a href="@Url.Action("Videolarim", "VideolarSayfasi")" class="list-group-item list-group-item-action">Videolarım</a>
                                }
                                <a href="@Url.Action("Settings", "Account")" class="list-group-item list-group-item-action">Ayarlar</a>
                                <a href="@Url.Action("Index", "Satinal")" class="list-group-item list-group-item-action">Satın Al</a>


                                @if (User.Identity.IsAuthenticated && (new List<string> { "sftumen41@gmail.com", "exdel.txt@gmail.com" }).Contains(User.Identity.Name, StringComparer.OrdinalIgnoreCase))
                                {
                                    <a href="@Url.Action("Index", "SevvalOfis")" class="list-group-item list-group-item-action">Şevval Ofis</a>
                                }
                            </div>
                        </div>

                        <!-- Toplam İlan Sayısı -->
                        <div class="card text-center shadow-sm mb-4">
                            <div class="card-body">
                                <h6 class="card-title text-primary">Toplam İlan Sayısı</h6>
                                <p class="card-text fs-2 fw-bold text-primary mb-0">@Model.TotalIlanCount</p>
                            </div>
                        </div>

                        <!-- Arama ve Filtreleme -->
                        <div class="card shadow-sm mb-4">

                            <div class="card-body">
                                <div class="input-group mb-3">
                                    <span class="input-group-text bg-primary text-white"><i class="fas fa-search"></i></span>
                                    <input type="text" id="searchInput" class="form-control" placeholder="İlanlarda ara..." onkeyup="filterAds()">
                                </div>

                                @using (Html.BeginForm("Ilanlar", "Ilan", FormMethod.Get))
                                {
                                    <select name="userEmail" class="form-select mb-2" aria-label="Danışman Seç" id="userEmail">
                                        <option value="Tum">Tüm Danışmanlar</option>
                                        @foreach (var u in Model.Users)
                                        {
                                            <option value="@u.Email" selected="@(Model.SelectedUserEmail == u.Email)">@u.FirstName @u.LastName</option>
                                        }
                                    </select>
                                    <input type="hidden" name="filter" value="@Model.Filter" />
                                    <button type="submit" class="btn btn-secondary w-100">Danışman Filtrele</button>
                                }
                            </div>

                        </div>

                    </div>
                </div>
            </aside>

            <!-- SAĞ TARAF - İLAN LİSTESİ -->
            <section class="col-lg-10">

                @{
                    var currentFilter = Model.Filter ?? "active";
                    bool isArchive = (ViewContext.RouteData.Values["action"]?.ToString() ?? "").Equals("Archive", StringComparison.OrdinalIgnoreCase);
                }

                <!-- Filtreleme Butonları -->
                <div class="d-none d-md-flex flex-wrap justify-content-center gap-2 mb-4">
                    <a href="?filter=active&userEmail=@Model.SelectedUserEmail" class="btn @(currentFilter == "active" ? "btn-primary" : "btn-outline-primary")"><i class="fas fa-circle-check fa-sm me-2"></i>Yayında</a>
                    <a href="?filter=inactive&userEmail=@Model.SelectedUserEmail" class="btn @(currentFilter == "inactive" ? "btn-primary" : "btn-outline-primary")"><i class="fas fa-eye-slash fa-sm me-2"></i>Yayında Değil</a>
                    <a href="?filter=archived&userEmail=@Model.SelectedUserEmail" class="btn @(currentFilter == "archived" ? "btn-primary" : "btn-outline-primary")"><i class="fas fa-calendar-times fa-sm me-2"></i>Süresi Geçen</a>
                    <a href="?filter=deleted&userEmail=@Model.SelectedUserEmail" class="btn @(currentFilter == "deleted" ? "btn-primary" : "btn-outline-primary")"><i class="fas fa-trash fa-sm me-2"></i>Silinen</a>
                    <a href="?filter=rejected&userEmail=@Model.SelectedUserEmail" class="btn @(currentFilter == "rejected" ? "btn-primary" : "btn-outline-primary")"><i class="fas fa-times-circle fa-sm me-2"></i>Reddedilen</a>
                    <a href="@Url.Action("Archive", "Ilan")" class="btn @(isArchive ? "btn-primary" : "btn-outline-primary")"><i class="fas fa-box fa-sm me-2"></i>Arşiv</a>
                </div>

                <!-- Mobil Filtreleme Dropdown -->
                <div class="d-md-none dropdown mb-4">
                    <button class="btn btn-outline-primary dropdown-toggle w-100" type="button" id="mobileFilterDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        Filtrele: @(currentFilter)
                    </button>
                    <ul class="dropdown-menu w-100" aria-labelledby="mobileFilterDropdown">
                        <li><a class="dropdown-item" href="?filter=active&userEmail=@Model.SelectedUserEmail">Yayında Olanlar</a></li>
                        <li><a class="dropdown-item" href="?filter=inactive&userEmail=@Model.SelectedUserEmail">Yayında Olmayanlar</a></li>
                        <li><a class="dropdown-item" href="?filter=archived&userEmail=@Model.SelectedUserEmail">Süresi Geçenler</a></li>
                        <li><a class="dropdown-item" href="?filter=deleted&userEmail=@Model.SelectedUserEmail">Silinenler</a></li>
                        <li><a class="dropdown-item" href="?filter=rejected&userEmail=@Model.SelectedUserEmail">Reddedilenler</a></li>
                        <li><a class="dropdown-item" href="@Url.Action("Archive", "Ilan")">Arşiv</a></li>
                    </ul>
                </div>

                <!-- Sıralama Dropdown -->
                <div class="d-flex justify-content-end mb-3">
                    <div class="dropdown">
                        <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="sortDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-sort me-1"></i> Sırala
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="sortDropdown">
                            <li><a class="dropdown-item sort-option" href="#" data-sort="date-desc"><i class="fas fa-calendar-alt me-2"></i>En Yeni</a></li>
                            <li><a class="dropdown-item sort-option" href="#" data-sort="date-asc"><i class="fas fa-calendar me-2"></i>En Eski</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item sort-option" href="#" data-sort="price-asc"><i class="fas fa-arrow-up me-2"></i>Fiyat (Artan)</a></li>
                            <li><a class="dropdown-item sort-option" href="#" data-sort="price-desc"><i class="fas fa-arrow-down me-2"></i>Fiyat (Azalan)</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item sort-option" href="#" data-sort="title-asc"><i class="fas fa-sort-alpha-down me-2"></i>A'dan Z'ye</a></li>
                            <li><a class="dropdown-item sort-option" href="#" data-sort="title-desc"><i class="fas fa-sort-alpha-up me-2"></i>Z'den A'ya</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item sort-option" href="#" data-sort="views-desc"><i class="fas fa-eye me-2"></i>En Çok Görüntülenen</a></li>
                        </ul>
                    </div>
                </div>


                <!-- İlan Listesi -->
                <div class="ilan-listesi">
                    @foreach (var ilan in Model._Ilanlar)
                    {
                        var fotograf = Model._Fotograflar?.FirstOrDefault(x => x.IlanId == ilan.Id);
                        <div class="card shadow-sm mb-3 ilan-kart" data-id="@ilan.Id" data-title="@ilan?.Title" data-status="@ilan?.Status" data-price="@ilan.Price" data-date="@ilan.GirisTarihi.ToString("yyyy-MM-dd")" data-views="@ilan.GoruntulenmeSayisi">
                            <div class="row g-0">
                                <div class="col-md-3 p-2">
                                    <a href="@Url.Action("ilansayfasi", "Ilan", new { id = ilan.Id })" class="image-container-16-9">
                                        @if (fotograf != null)
                                        {
                                            <img src="https://www.sevval.com/@fotograf.Url" alt="@ilan.Title">
                                        }
                                        else
                                        {
                                            <div class="placeholder-div d-flex align-items-center justify-content-center">
                                                <i class="bi bi-camera" style="font-size: 4rem; color: #ccc;"></i>
                                            </div>
                                        }
                                    </a>
                                </div>
                                <div class="col-md-9">
                                    <div class="card-body d-flex flex-column">
                                        <div class="flex-grow-1">
                                            <h5 class="card-title text-primary fw-bold mb-1">@ilan.Title</h5>

                                            <!-- Konum Bilgisi -->
                                            <p class="card-text text-muted small mb-2 text-truncate">
                                                <i class="bi bi-geo-alt-fill me-1"></i>@ilan.sehir / @ilan.semt / @ilan.mahalleKoy
                                            </p>

                                            <!-- YENİ EKLENEN KISIM: ADA VE PARSEL BİLGİLERİ -->
                                            @if (!string.IsNullOrEmpty(ilan.AdaNo) || !string.IsNullOrEmpty(ilan.ParselNo))
                                            {
                                                <div class="mb-2 d-flex flex-wrap gap-2">
                                                    @if (!string.IsNullOrEmpty(ilan.AdaNo))
                                                    {
                                                        <span class="badge badge-info-light">
                                                            <i class="bi bi-grid-3x3 me-1"></i>Ada: @ilan.AdaNo
                                                        </span>
                                                    }
                                                    @if (!string.IsNullOrEmpty(ilan.ParselNo))
                                                    {
                                                        <span class="badge badge-info-light">
                                                            <i class="bi bi-geo me-1"></i>Parsel: @ilan.ParselNo
                                                        </span>
                                                    }
                                                </div>
                                            }
                                            <!-- ADA PARSEL SONU -->
                                            <!-- Fiyat Bölümü -->
                                            <div id="price-container-@ilan.Id" class="mb-2 d-flex align-items-center">
                                                <span class="text-danger fs-5 fw-bold me-2" id="price-text-@ilan.Id">@ilan.Price.ToString("N0") TL</span>
                                                <input type="number" id="price-input-@ilan.Id" class="form-control d-none w-50 me-2" value="@ilan.Price" />

                                                <div class="action-icons">
                                                    <i class="fa fa-edit edit-price fs-5" data-id="@ilan.Id" style="color: #007bff; cursor: pointer;" title="Fiyatı Düzenle"></i>
                                                    <i class="fa fa-check d-none save-price fs-5 me-2" data-id="@ilan.Id" style="color: #28a745; cursor: pointer;" title="Kaydet"></i>
                                                    <i class="fa fa-times d-none cancel-price fs-5" data-id="@ilan.Id" style="color: #dc3545; cursor: pointer;" title="İptal"></i>
                                                </div>
                                            </div>

                                            <p class="small text-muted mb-2">
                                                <strong>İlan No:</strong> @ilan.Id <span class="mx-1">|</span>
                                                <strong>Giriş:</strong> @ilan.GirisTarihi.ToString("dd.MM.yyyy HH:mm")
                                            </p>

                                            @if (!string.IsNullOrEmpty(ilan.PatronunNotu))
                                            {
                                                <p class="small p-2 rounded bg-info bg-opacity-10 text-info-emphasis mb-2">
                                                    <i class="bi bi-pencil-fill me-2"></i>
                                                    <b>Patronun Notu:</b> @ilan.PatronunNotu
                                                </p>
                                            }
                                        </div>

                                        <div class="mt-auto actions-row">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div class="d-flex gap-2 flex-wrap badge-stats">
                                                    <span class="badge text-bg-light border" title="Görüntülenme"><i class="bi bi-eye me-1"></i>@ilan.GoruntulenmeSayisi</span>
                                                    <span class="badge text-bg-light border" title="Favori"><i class="bi bi-heart me-1"></i>@ilan.FavoriSayisi</span>
                                                    <span class="badge text-bg-light border" title="Mesaj"><i class="bi bi-star me-1"></i>@ilan.MesajSayisi</span>
                                                    <span class="badge text-bg-light border" title="Arama"><i class="bi bi-telephone me-1"></i>@ilan.TelefonAramaSayisi</span>
                                                </div>

                                                <!-- İşlemler Butonu -->
                                                <div class="dropdown">
                                                    <button class="btn btn-outline-primary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                        <i class="bi bi-gear d-none d-sm-inline-block"></i> İşlemler
                                                    </button>
                                                    <ul class="dropdown-menu dropdown-menu-end">
                                                        <li><a class="dropdown-item" href="@Url.Action("Edit", "Ilan", new { id = ilan.Id })"><i class="bi bi-pencil-square me-2"></i>Düzenle</a></li>
                                                        <li><a class="dropdown-item assign-user" href="#" data-ilan-id="@ilan.Id"><i class="bi bi-person-plus me-2"></i>Danışmana Ata</a></li>
                                                        <li><hr class="dropdown-divider"></li>
                                                        @if (ilan.Status == "inactive")
                                                        {
                                                            <li><a class="dropdown-item text-danger delete-ilan" href="#" data-id="@ilan.Id"><i class="bi bi-trash me-2"></i>Sil</a></li>
                                                        }
                                                        @if (ilan.Status == "active")
                                                        {
                                                            <li><a class="dropdown-item text-warning remove-from-published" href="#" data-id="@ilan.Id"><i class="bi bi-eye-slash me-2"></i>Yayından Kaldır</a></li>
                                                        }
                                                        @if (ilan.Status == "inactive" || ilan.Status == "deleted" || ilan.Status == "archive")
                                                        {
                                                            <li><a class="dropdown-item text-success promote-to-active" href="#" data-id="@ilan.Id"><i class="bi bi-eye me-2"></i>Yayına Al</a></li>
                                                        }
                                                        @if (ilan.Status == "deleted")
                                                        {
                                                            <li><a class="dropdown-item text-secondary archive-ilan" href="#" data-id="@ilan.Id"><i class="bi bi-archive me-2"></i>Arşivle</a></li>
                                                        }
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <!-- Client-side Sayfalama için Konteyner -->
                <nav aria-label="Page navigation" class="d-flex justify-content-center mt-4">
                    <ul class="pagination" id="pagination">
                        <!-- Sayfa numaraları JavaScript ile buraya eklenecek -->
                    </ul>
                </nav>
            </section>
        </div>
    </main>

    <!-- Modallar -->
    <!-- Danışman Atama Modalı -->
    <div class="modal fade" id="assignModal" tabindex="-1" aria-labelledby="assignModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="assignModalLabel">Danışman Seç</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
                </div>
                <div class="modal-body">
                    <ul class="list-group">
                        @foreach (var consultant in Model.Users)
                        {
                            <li class="list-group-item list-group-item-action consultant-item" style="cursor:pointer;"
                                data-email="@consultant.Email">
                                @consultant.FirstName @consultant.LastName (@consultant.Email)
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Onay Modalı -->
    <div class="modal fade" id="confirmationModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmationModalTitle">Onay</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p id="confirmationModalMessage"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hayır</button>
                    <button type="button" class="btn btn-primary" id="modalConfirmButton">Evet</button>
                </div>
            </div>
        </div>
    </div>


    <!-- JavaScript Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Navbar scriptleri
            var hamburgerMenu = document.getElementById("hamburger-menu");
            var navLinks = document.getElementById("nav-links");
            if(hamburgerMenu) {
                hamburgerMenu.addEventListener("click", function (event) {
                    navLinks.classList.toggle("active");
                    event.stopPropagation();
                });
            }
            document.addEventListener("click", function (event) {
                if (navLinks && hamburgerMenu && !navLinks.contains(event.target) && !hamburgerMenu.contains(event.target)) {
                    navLinks.classList.remove("active");
                }
            });

            const girisButon = document.getElementById('giris-buton');
            const popupGiris = document.getElementById('popup-giris');
            const pencereKapat = document.getElementById('pencere-kapat');

            if(girisButon) {
                girisButon.addEventListener('click', function (event) {
                    event.preventDefault();
                    popupGiris.style.display = 'flex';
                });
            }

            if(popupGiris){
                popupGiris.addEventListener('click', function (event) {
                    if (event.target === this) this.style.display = 'none';
                });
            }

            if(pencereKapat) {
                pencereKapat.addEventListener('click', function () {
                    popupGiris.style.display = 'none';
                });
            }

            // ---- MODAL VE AJAX İŞLEMLERİ ----

            const confirmationModal = new bootstrap.Modal(document.getElementById('confirmationModal'));
            const modalMessage = document.getElementById('confirmationModalMessage');
            const confirmButton = document.getElementById('modalConfirmButton');

            function showConfirmationModal(message, onConfirm) {
                modalMessage.textContent = message;
                confirmationModal.show();

                confirmButton.onclick = function() {
                    confirmationModal.hide();
                    onConfirm(true);
                }
            }

            function performAction(url, ilanId, successMessage, errorMessage) {
                 const csrfToken = document.querySelector('input[name="__RequestVerificationToken"]').value;
                 fetch(url, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json', 'RequestVerificationToken': csrfToken },
                    body: JSON.stringify({ ilanId })
                }).then(response => {
                    if (response.ok) {
                        alert(successMessage);
                        location.reload();
                    } else {
                        response.text().then(text => alert(errorMessage + ": " + text));
                    }
                }).catch(err => alert(errorMessage + ": " + err));
            }

            document.querySelector('.ilan-listesi').addEventListener('click', function(e) {
                const target = e.target.closest('a');
                if (!target) return;

                const ilanId = target.dataset.id;

                if (target.classList.contains('delete-ilan')) {
                    e.preventDefault();
                    showConfirmationModal('Bu ilanı silmek istediğinizden emin misiniz?', confirmed => {
                        if (confirmed) performAction('/Ilan/Delete', ilanId, 'İlan başarıyla silindi.', 'Silme hatası');
                    });
                } else if (target.classList.contains('archive-ilan')) {
                     e.preventDefault();
                    showConfirmationModal('Bu ilanı arşivlemek istediğinizden emin misiniz?', confirmed => {
                        if (confirmed) performAction('/Ilan/Archive', ilanId, 'İlan başarıyla arşivlendi.', 'Arşivleme hatası');
                    });
                } else if (target.classList.contains('remove-from-published')) {
                     e.preventDefault();
                    showConfirmationModal('Bu ilanı yayından kaldırmak istediğinizden emin misiniz?', confirmed => {
                        if (confirmed) performAction('/Ilan/RemoveFromPublished', ilanId, 'İlan yayından kaldırıldı.', 'Kaldırma hatası');
                    });
                } else if (target.classList.contains('promote-to-active')) {
                     e.preventDefault();
                    showConfirmationModal('Bu ilanı yayına almak istediğinizden emin misiniz?', confirmed => {
                        if (confirmed) performAction('/Ilan/PromoteToActive', ilanId, 'İlan yayına alındı.', 'Yayına alma hatası');
                    });
                }
            });

            // Fiyat Güncelleme
            function savePriceForId(id) {
                const priceInput = document.getElementById(`price-input-${id}`);
                const newPrice = parseFloat(priceInput.value);
                const csrfToken = document.querySelector('input[name="__RequestVerificationToken"]').value;
                const saveBtn = document.querySelector(`.save-price[data-id="${id}"]`);
                const priceText = document.getElementById(`price-text-${id}`);

                if (newPrice < 1000 || newPrice > 500000000) {
                    alert("Fiyat 1.000 TL ile 500.000.000 TL arasında olmalıdır.");
                    return;
                }

                // Butonu devre dışı bırak ve loading göster
                if (saveBtn) {
                    saveBtn.classList.add('fa-spinner', 'fa-spin');
                    saveBtn.classList.remove('fa-check');
                }

                fetch('/Ilan/UpdatePrice', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json', 'RequestVerificationToken': csrfToken },
                    body: JSON.stringify({ ilanId: id, newPrice })
                }).then(res => res.json()).then(data => {
                    // Loading'i kaldır
                    if (saveBtn) {
                        saveBtn.classList.remove('fa-spinner', 'fa-spin');
                        saveBtn.classList.add('fa-check');
                    }
                    
                    if (data.newPrice) {
                        priceText.textContent = `${data.newPrice.toLocaleString('tr-TR')} TL`;
                        document.querySelector(`.cancel-price[data-id="${id}"]`).click(); // Reset UI
                        
                        // Başarı mesajı göster
                        const container = document.getElementById(`price-container-${id}`);
                        const successMsg = document.createElement('span');
                        successMsg.className = 'text-success ms-2 small';
                        successMsg.innerHTML = '<i class="fa fa-check-circle"></i> Fiyat güncellendi';
                        container.appendChild(successMsg);
                        setTimeout(() => successMsg.remove(), 3000);
                    }
                }).catch(err => {
                    // Loading'i kaldır
                    if (saveBtn) {
                        saveBtn.classList.remove('fa-spinner', 'fa-spin');
                        saveBtn.classList.add('fa-check');
                    }
                    alert('Fiyat güncellenirken bir hata oluştu.');
                });
            }

            document.querySelectorAll('.edit-price').forEach(btn => {
                btn.addEventListener('click', function() {
                    const id = this.dataset.id;
                    document.getElementById(`price-text-${id}`).classList.add('d-none');
                    document.getElementById(`price-input-${id}`).classList.remove('d-none');
                    document.getElementById(`price-input-${id}`).focus();
                    this.classList.add('d-none');
                    document.querySelector(`.save-price[data-id="${id}"]`).classList.remove('d-none');
                    document.querySelector(`.cancel-price[data-id="${id}"]`).classList.remove('d-none');
                });
            });

            document.querySelectorAll('.cancel-price').forEach(btn => {
                btn.addEventListener('click', function() {
                    const id = this.dataset.id;
                    document.getElementById(`price-text-${id}`).classList.remove('d-none');
                    document.getElementById(`price-input-${id}`).classList.add('d-none');
                    document.querySelector(`.edit-price[data-id="${id}"]`).classList.remove('d-none');
                    this.classList.add('d-none');
                    document.querySelector(`.save-price[data-id="${id}"]`).classList.add('d-none');
                });
            });

            document.querySelectorAll('.save-price').forEach(btn => {
                btn.addEventListener('click', function() {
                    const id = this.dataset.id;
                    savePriceForId(id);
                });
            });

            // Enter tuşu ile fiyat güncelleme
            document.querySelectorAll('[id^="price-input-"]').forEach(input => {
                input.addEventListener('keydown', function(e) {
                    if (e.key === 'Enter') {
                        e.preventDefault();
                        const id = this.id.replace('price-input-', '');
                        savePriceForId(id);
                    }
                });
            });

             // Danışman Atama
            const assignModal = new bootstrap.Modal(document.getElementById('assignModal'));
            let selectedIlanId = 0;

            document.querySelectorAll('.assign-user').forEach(btn => {
                btn.addEventListener('click', function (e) {
                    e.preventDefault();
                    selectedIlanId = this.dataset.ilanId;
                    assignModal.show();
                });
            });

            document.querySelectorAll('.consultant-item').forEach(item => {
                item.addEventListener('click', function () {
                    const consultantEmail = this.dataset.email;
                    if (confirm("İlanı bu danışmana atamak istediğinize emin misiniz?")) {
                        $.ajax({
                            url: '@Url.Action("AssignToConsultant", "Ilan")',
                            type: 'POST',
                            data: { ilanId: selectedIlanId, consultantEmail: consultantEmail },
                            success: function (response) {
                                alert(response.message);
                                if (response.success) location.reload();
                            },
                            error: function () {
                                alert("Atama işlemi sırasında bir hata oluştu.");
                            }
                        });
                        assignModal.hide();
                    }
                });
            });

            // Client-side Arama ve Sayfalama
            const ilanListesiContainer = document.querySelector('.ilan-listesi');
            const allItems = Array.from(ilanListesiContainer.querySelectorAll('.ilan-kart'));
            const paginationContainer = document.getElementById('pagination');
            const itemsPerPage = 10;
            let currentPage = 1;
            let filteredItems = allItems;

            function displayPage(page) {
                currentPage = page;
                if (!ilanListesiContainer) return;

                // Önce tüm ilanları gizle
                allItems.forEach(item => item.style.display = 'none');

                const start = (page - 1) * itemsPerPage;
                const end = start + itemsPerPage;
                const paginatedItems = filteredItems.slice(start, end);

                paginatedItems.forEach(item => {
                    item.style.display = ''; // Sayfadaki ilanları göster
                });

                window.scrollTo({ top: 0, behavior: 'smooth' });
            }

            function setupPagination() {
                if (!paginationContainer) return;
                paginationContainer.innerHTML = '';

                const pageCount = Math.ceil(filteredItems.length / itemsPerPage);
                if (pageCount <= 1) return;

                // Helper to create buttons
                const createButton = (text, page, isDisabled = false, isActive = false) => {
                    const li = document.createElement('li');
                    li.className = `page-item ${isDisabled ? 'disabled' : ''} ${isActive ? 'active' : ''}`;

                    const a = document.createElement('a');
                    a.className = 'page-link';
                    a.href = '#';
                    a.innerText = text;
                    a.addEventListener('click', (e) => {
                        e.preventDefault();
                        if (!isDisabled && !isActive) {
                            displayPage(page);
                            setupPagination();
                        }
                    });
                    li.appendChild(a);
                    return li;
                };

                // First Button
                paginationContainer.appendChild(createButton('« İlk', 1, currentPage === 1));

                // Numbered Buttons (Sliding Window)
                const maxVisibleButtons = 5;
                let startPage, endPage;
                if (pageCount <= maxVisibleButtons) {
                    startPage = 1;
                    endPage = pageCount;
                } else {
                    const maxPagesBeforeCurrent = Math.floor(maxVisibleButtons / 2);
                    const maxPagesAfterCurrent = Math.ceil(maxVisibleButtons / 2) - 1;
                    if (currentPage <= maxPagesBeforeCurrent) {
                        startPage = 1;
                        endPage = maxVisibleButtons;
                    } else if (currentPage + maxPagesAfterCurrent >= pageCount) {
                        startPage = pageCount - maxVisibleButtons + 1;
                        endPage = pageCount;
                    } else {
                        startPage = currentPage - maxPagesBeforeCurrent;
                        endPage = currentPage + maxPagesAfterCurrent;
                    }
                }

                for (let i = startPage; i <= endPage; i++) {
                    paginationContainer.appendChild(createButton(i, i, false, i === currentPage));
                }

                // Last Button
                paginationContainer.appendChild(createButton('Son »', pageCount, currentPage === pageCount));
            }

            window.filterAds = function() {
                const searchValue = document.getElementById('searchInput').value.toLowerCase();

                filteredItems = allItems.filter(item => {
                    const title = (item.getAttribute('data-title') || '').toLowerCase();
                    return title.includes(searchValue);
                });

                // Mevcut sıralama varsa uygula
                if (currentSortType) {
                    applySorting(filteredItems, currentSortType);
                    // DOM'daki sırayı güncelle
                    filteredItems.forEach(item => {
                        ilanListesiContainer.appendChild(item);
                    });
                }

                displayPage(1);
                setupPagination();
            }

            // Sıralama durumunu tut
            let currentSortType = null;

            // Sıralama uygula (array'i yerinde sıralar)
            function applySorting(items, sortType) {
                items.sort((a, b) => {
                    switch (sortType) {
                        case 'date-desc':
                            return new Date(b.getAttribute('data-date')) - new Date(a.getAttribute('data-date'));
                        case 'date-asc':
                            return new Date(a.getAttribute('data-date')) - new Date(b.getAttribute('data-date'));
                        case 'price-asc':
                            return parseFloat(a.getAttribute('data-price') || 0) - parseFloat(b.getAttribute('data-price') || 0);
                        case 'price-desc':
                            return parseFloat(b.getAttribute('data-price') || 0) - parseFloat(a.getAttribute('data-price') || 0);
                        case 'title-asc':
                            return (a.getAttribute('data-title') || '').trim().localeCompare((b.getAttribute('data-title') || '').trim(), 'tr-TR');
                        case 'title-desc':
                            return (b.getAttribute('data-title') || '').trim().localeCompare((a.getAttribute('data-title') || '').trim(), 'tr-TR');
                        case 'views-desc':
                            return parseInt(b.getAttribute('data-views') || 0) - parseInt(a.getAttribute('data-views') || 0);
                        default:
                            return 0;
                    }
                });
            }

            // Sıralama fonksiyonu
            function sortAds(sortType) {
                currentSortType = sortType;
                console.log('Sıralama başladı:', sortType);
                console.log('Sıralanacak ilan sayısı:', filteredItems.length);
                
                applySorting(filteredItems, sortType);

                // Debug: İlk 5 ilanın başlığını göster
                console.log('Sıralama sonrası ilk 5 ilan:');
                filteredItems.slice(0, 5).forEach((item, i) => {
                    console.log(i + 1, item.getAttribute('data-title'));
                });

                // DOM'daki sırayı güncelle
                filteredItems.forEach(item => {
                    ilanListesiContainer.appendChild(item);
                });

                displayPage(1);
                setupPagination();
            }

            // Sıralama butonlarına event listener ekle
            document.querySelectorAll('.sort-option').forEach(option => {
                option.addEventListener('click', function(e) {
                    e.preventDefault();
                    const sortType = this.getAttribute('data-sort');
                    sortAds(sortType);
                    
                    // Aktif sıralama seçeneğini güncelle
                    document.querySelectorAll('.sort-option').forEach(opt => opt.classList.remove('active'));
                    this.classList.add('active');
                    
                    // Dropdown buton metnini güncelle
                    const sortText = this.textContent.trim();
                    document.getElementById('sortDropdown').innerHTML = '<i class="fas fa-sort me-1"></i> ' + sortText;
                });
            });

            // Initial setup
            filterAds();
        });
    </script>
