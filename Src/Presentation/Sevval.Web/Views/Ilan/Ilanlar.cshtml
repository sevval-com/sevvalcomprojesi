@model sevvalemlak.Dto.TumIlanlarDTO
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@using Microsoft.AspNetCore.Http


@{
    var user = await UserManager.GetUserAsync(User); // Giriş yapan kullanıcı
    var userEmail = user?.Email; // Kullanıcının e-posta adresi
    var userAds = Model._Ilanlar
        .Where(i => i.Email == userEmail) // Kullanıcının ilanları
        .ToList();

    Layout = null; // Layout kullanılmıyor
}

