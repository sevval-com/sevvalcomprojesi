            // Fiyat formatlama fonksiyonu
            function formatPrice(input) {
                let value = input.value.replace(/\D/g, ''); // Sadece rakamları al
                if (value.length > 0) {
                    value = parseInt(value).toLocaleString(); // Rakamları formatla
                }
                input.value = value; // Giriş kutusuna formatlanmış değeri yaz
            }

            // Aidat doğrulama fonksiyonu
            function validateAidat(input) {
                const aidatHata = document.getElementById('aidatHata');
                const value = input.value;

                // Sadece 5 haneli sayılar kabul edilir
                if (value.length > 5) {
                    aidatHata.style.display = 'block'; // Hata mesajını göster
                    input.value = value.slice(0, 5); // Kullanıcının girdiği değeri 5 haneli ile sınırla
