                <div class="collapse d-lg-block" id="controlPanel">
                    <div class="sticky-top" style="top: 20px;">

                        <!-- Panel Menüsü -->
                        <div class="card shadow-sm mb-4">
                            <div class="card-header bg-primary text-white">
                                <h5 class="mb-0"><i class="fas fa-compass me-2"></i> Menü</h5>
                            </div>
                            <div class="list-group list-group-flush">
                                <a href="@Url.Action("Panel", "Ilan")" class="list-group-item list-group-item-action">Raporlar</a>
                                <a href="@Url.Action("Ilanlar", "Ilan")" class="list-group-item list-group-item-action">İlanlar</a>
                                <a href="@Url.Action("Danismanlar", "Ilan")" class="list-group-item list-group-item-action">Danışmanlar</a>
                                <a href="@Url.Action("Sozlesmeler", "Ilan")" class="list-group-item list-group-item-action">Sözleşmeler</a>
                                <a href="@Url.Action("Akademi", "Ilan")" class="list-group-item list-group-item-action active" aria-current="true">Şevval Akademi</a>
                                <a href="@Url.Action("Settings", "Account")" class="list-group-item list-group-item-action">Ayarlar</a>
                                <a href="@Url.Action("Index", "Satinal")" class="list-group-item list-group-item-action">Satın Al</a>
                                
                              
                                @if (User.Identity.IsAuthenticated && (new List<string> { "sftumen41@gmail.com", "exdel.txt@gmail.com" }).Contains(User.Identity.Name, StringComparer.OrdinalIgnoreCase))
                                {
                                    <a href="@Url.Action("Index", "SevvalOfis")" class="list-group-item list-group-item-action">Şevval Ofis</a>
                                }
                            </div>
                        </div>

                    </div>
                </div>
            </aside>

            <!-- SAĞ TARAF - ANA İÇERİK -->
            <section class="col-lg-10">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center py-3">
                        <h5 class="mb-0"><i class="bi bi-mortarboard-fill me-2"></i>Şevval Akademi</h5>
                    </div>
                    <div class="card-body text-center p-4">
                        <h2 class="text-primary">Derslerimizin Başlamasına Kalan Süre</h2>
                        <p class="text-muted mb-4">(1 Haziran 2026)</p>
                        <div id="countdown" class="countdown-timer">
                            <div class="countdown-item">
                                <span id="months"></span>
                                <p>Ay</p>
                            </div>
                            <div class="countdown-item">
                                <span id="days"></span>
                                <p>Gün</p>
                            </div>
                            <div class="countdown-item">
                                <span id="hours"></span>
                                <p>Saat</p>
                            </div>
                            <div class="countdown-item">
                                <span id="minutes"></span>
                                <p>Dakika</p>
                            </div>
                            <div class="countdown-item">
                                <span id="seconds"></span>
                                <p>Saniye</p>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </main>

    <!-- JavaScript Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Navbar scriptleri
            var hamburgerMenu = document.getElementById("hamburger-menu");
            var navLinks = document.getElementById("nav-links");
            if (hamburgerMenu) {
                hamburgerMenu.addEventListener("click", function (event) {
                    navLinks.classList.toggle("active");
                    event.stopPropagation();
                });
            }
            document.addEventListener("click", function (event) {
                if (navLinks && !navLinks.contains(event.target) && !hamburgerMenu.contains(event.target)) {
                    navLinks.classList.remove("active");
                }
            });

            // Giriş pop-up scripti
            const girisButon = document.getElementById('giris-buton');
            const popupGiris = document.getElementById('popup-giris');
            const pencereKapat = document.getElementById('pencere-kapat');

            if (girisButon) {
                girisButon.addEventListener('click', function (event) {
                    event.preventDefault();
                    popupGiris.style.display = 'flex';
                });
            }
            if (popupGiris) {
                popupGiris.addEventListener('click', function (event) {
                    if (event.target === this) this.style.display = 'none';
                });
            }
            if (pencereKapat) {
                pencereKapat.addEventListener('click', function () {
                    popupGiris.style.display = 'none';
                });
            }

             // Geri sayım sayacı
            const targetDate = new Date("June 1, 2026 00:00:00").getTime();

            const countdownFunction = setInterval(function() {
                const now = new Date().getTime();
                const distance = targetDate - now;

                if (distance < 0) {
                    clearInterval(countdownFunction);
                    document.getElementById("countdown").innerHTML = "<h3 class='text-success'>Akademi Başladı!</h3>";
                    return;
                }

                // Zaman birimlerine ayırma
                const months = Math.floor(distance / (1000 * 60 * 60 * 24 * 30.44)); // Ortalama ay günü
                const days = Math.floor((distance % (1000 * 60 * 60 * 24 * 30.44)) / (1000 * 60 * 60 * 24));
                const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((distance % (1000 * 60)) / 1000);

                // Zamanı HTML'e yazdırma
                document.getElementById("months").innerText = months;
                document.getElementById("days").innerText = days;
                document.getElementById("hours").innerText = hours;
                document.getElementById("minutes").innerText = minutes;
                document.getElementById("seconds").innerText = seconds;

            }, 1000);
        });
    </script>

</body>
</html>
