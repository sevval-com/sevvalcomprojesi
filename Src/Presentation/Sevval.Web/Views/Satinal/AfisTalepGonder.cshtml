@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Afiş Talep Gönder</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/Anasayfa.css" />
    <style>
        body {
            background-color: #f0f2f5;
        }

        .preview-poster {
            background-color: #007bff;
            color: white;
            font-family: 'Arial Black', sans-serif;
            text-align: center;
            padding: 2rem;
            border-radius: 15px;
            aspect-ratio: 50 / 70;
            width: 100%;
            max-width: 350px;
            margin: auto;
            display: flex;
            flex-direction: column;
            justify-content: space-around;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        }

        .preview-text {
            font-size: 1.5rem;
            word-wrap: break-word;
        }

        .preview-text-line {
            width: 80%;
            height: 3px;
            background-color: white;
            margin: 0.5rem auto;
        }

        .form-section {
            background: #fff;
            padding: 2rem;
            border-radius: 15px;
            box-shadow: 0 5px 25px rgba(0,0,0,0.07);
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbaar">
        <div class="navbaar-container">
            <div class="logo">
                <a href="/">
                    <img src="~/images/LOGO mavi.webp" alt="Firma Logosu">
                </a>
                <span>Şevval Emlak</span>
            </div>
            <div class="auth-buttoons">
                <a href="@Url.Action("Panel", "Ilan")" class="post-ad">Panele Dön</a>
            </div>
        </div>
    </nav>

    <div class="container my-5">
        <div class="row g-5">
            <div class="col-lg-5">
                <div class="sticky-top" style="top:20px;">
                    <h2 class="text-center mb-4 fw-bold text-primary">Afiş Önizleme</h2>
                    <div class="preview-poster" id="posterPreview">
                        <div class="preview-text" id="previewIlanTuru">SATILIK</div>
                        <div class="preview-text-line"></div>
                        <div class="preview-text" id="previewTelefon">0XXX XXX XX XX</div>
                        <div class="preview-text" id="previewIsimSoyad">İSİM SOYİSİM</div>
                        <div class="preview-text-line"></div>
                        <div class="preview-text" id="previewFirma">X EMLAK</div>
                        <div class="preview-text-line"></div>
                        <div class="preview-text" id="previewWeb" style="font-size: 1rem;">www.sevval.com.tr</div>
                    </div>
                </div>
            </div>
            <div class="col-lg-7">
                <div class="form-section">
                    <h2 class="mb-4 fw-bold">Afiş Bilgilerinizi Girin</h2>
                    <form method="post" action="@Url.Action("SubmitAfisTalep", "Satinal")" id="afisForm">
                        @Html.AntiForgeryToken()
                        <input type="hidden" id="hiddenIlanTuru" name="ilanTuru" />
                        <input type="hidden" id="hiddenTelefon" name="telefon" />
                        <input type="hidden" id="hiddenIsimSoyad" name="isimSoyad" />
                        <input type="hidden" id="hiddenFirma" name="firma" />

                        <div class="form-floating mb-3">
                            <select class="form-select" id="ilanTuru" name="ilanTuru" required>
                                <option value="SATILIK">SATILIK</option>
                                <option value="KİRALIK">KİRALIK</option>
                            </select>
                            <label for="ilanTuru">İlan Türü</label>
                        </div>

                        <div class="form-floating mb-3">
                            <input type="tel" class="form-control" id="telefon" name="telefon" placeholder="Telefon Numaranız" required maxlength="11" />
                            <label for="telefon">Telefon Numarası</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="isimSoyad" name="isimSoyad" placeholder="Adınız Soyadınız" required />
                            <label for="isimSoyad">İsim Soyisim</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="firma" name="firma" placeholder="Firma Adınız" required />
                            <label for="firma">Firma Adı</label>
                        </div>

                        <h4 class="mt-4 mb-3">Gönderim Adresi</h4>
                        <div id="acikAdresDisplay" class="alert alert-info d-flex justify-content-between align-items-center">
                            <span id="acikAdresText">@Model?.AcikAdres</span>
                            <button type="button" class="btn btn-sm btn-outline-primary" id="editAcikAdresBtn"><i class="bi bi-pencil-fill"></i> Düzenle</button>
                        </div>
                        <div id="acikAdresEdit" class="d-none">
                            <div class="form-floating">
                                <textarea class="form-control" placeholder="Açık adresinizi girin" id="acikAdresInput" style="height: 100px"></textarea>
                                <label for="acikAdresInput">Açık Adres</label>
                            </div>
                            <button type="button" class="btn btn-success mt-2" id="saveAcikAdresBtn"><i class="bi bi-check-lg"></i> Kaydet</button>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" id="talepGonderBtn" class="btn btn-primary btn-lg">
                                <i class="bi bi-send-fill me-2"></i>Talebi Gönder
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            function updatePreview() {
                $("#previewIlanTuru").text($("#ilanTuru").val() || "SATILIK");
                $("#previewTelefon").text($("#telefon").val() || "0XXX XXX XX XX");
                $("#previewIsimSoyad").text($("#isimSoyad").val() || "İSİM SOYİSİM");
                $("#previewFirma").text($("#firma").val() || "X EMLAK");

                $("#hiddenIlanTuru").val($("#ilanTuru").val());
                $("#hiddenTelefon").val($("#telefon").val());
                $("#hiddenIsimSoyad").val($("#isimSoyad").val());
                $("#hiddenFirma").val($("#firma").val());
            }

            $("#ilanTuru, #telefon, #isimSoyad, #firma").on("input", updatePreview);

            $("#editAcikAdresBtn").on("click", function () {
                $("#acikAdresDisplay").addClass('d-none');
                $("#acikAdresEdit").removeClass('d-none');
                $("#acikAdresInput").val($("#acikAdresText").text()).focus();
            });

            $("#saveAcikAdresBtn").on("click", function () {
                const newAdres = $("#acikAdresInput").val().trim();
                const token = $('input[name="__RequestVerificationToken"]').val();
                if (newAdres === "") {
                    alert("Adres boş olamaz!");
                    return;
                }

                $.ajax({
                    url: '@Url.Action("UpdateAcikAdres", "Satinal")',
                    type: "POST",
                    headers: { "RequestVerificationToken": token },
                    data: { newAdres: newAdres },
                    success: function (response) {
                        if (response.success) {
                            $("#acikAdresText").text(newAdres);
                            $("#acikAdresDisplay").removeClass('d-none');
                            $("#acikAdresEdit").addClass('d-none');
                            alert("Adres başarıyla güncellendi.");
                        } else {
                            alert("Adres güncellenirken bir hata oluştu.");
                        }
                    }
                });
            });

            updatePreview();
        });
    </script>
</body>
</html>

