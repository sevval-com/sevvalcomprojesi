@using Microsoft.AspNetCore.Identity
@using Sevval.Domain.Entities
@inject UserManager<Sevval.Domain.Entities.ApplicationUser> UserManager

@{
    ViewData["Title"] = "Promosyonlar";
    Layout = "_Layout";
    ViewData["HideFooter"] = true;
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        body { background-color: #f0f2f5; }
        .promo-card {
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 5px 25px rgba(0,0,0,0.07);
            transition: all 0.3s ease;
            text-decoration: none;
            color: inherit;
        }
        .promo-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }
        .promo-card .card-body { background: #fff; }
        .promo-card .card-title { font-weight: 700; }
        .promo-card .price { font-size: 1.5rem; font-weight: 700; color: #0d6efd; }
    </style>
}

@Html.AntiForgeryToken()

<div class="container-fluid my-4">
    <div class="row g-lg-4 g-3">
        <aside class="col-lg-2">
            <div class="d-lg-none mb-3 px-3">
                <button class="btn btn-primary w-100 p-3" type="button" data-bs-toggle="collapse" data-bs-target="#controlPanel" aria-expanded="false" aria-controls="controlPanel">
                    <i class="fas fa-bars me-2"></i> Menü
                </button>
            </div>
            <div class="collapse d-lg-block" id="controlPanel">
                <div class="sticky-top" style="top: 20px;">
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0"><i class="fas fa-gem me-2"></i>Satın Al</h5>
                        </div>
                        <div class="list-group list-group-flush">
                            <a class="list-group-item list-group-item-action" href="@Url.Action("Index", "Satinal")"><i class="fas fa-box me-2"></i>Paketler</a>
                            <a class="list-group-item list-group-item-action" href="@Url.Action("Dopingler", "Satinal")"><i class="fas fa-rocket me-2"></i>Dopingler</a>
                            <a class="list-group-item list-group-item-action active" aria-current="page" href="@Url.Action("Promosyonlar", "Satinal")"><i class="fas fa-gift me-2"></i>Promosyonlar</a>
                            <a class="list-group-item list-group-item-action" href="@Url.Action("Panel", "Ilan")"><i class="fas fa-arrow-left me-2"></i>Panele Dön</a>
                        </div>
                    </div>
                </div>
            </div>
        </aside>
        <section class="col-lg-10">
            <h1 class="text-center mb-5 display-4 fw-bold text-primary">Promosyonlar</h1>
            <div class="row g-4">
                <div class="col-lg-4 col-md-6">
                    <a href="@Url.Action("AfisTalepGonder", "Satinal")" class="card h-100 promo-card">
                        <img src="~/ImageFiles/Promosyonlar/afiş.webp" class="card-img-top" alt="Afiş">
                        <div class="card-body text-center">
                            <h5 class="card-title">Afiş</h5>
                            <p class="price">20 TL</p>
                            <div class="btn btn-sm btn-outline-primary">Talep Et</div>
                        </div>
                    </a>
                </div>
                <div class="col-lg-4 col-md-6">
                    <a href="#" class="card h-100 promo-card">
                        <img src="~/ImageFiles/Promosyonlar/branda.webp" class="card-img-top" alt="Branda">
                        <div class="card-body text-center">
                            <h5 class="card-title">Branda</h5>
                            <p class="price">Fiyat Sorunuz</p>
                            <div class="btn btn-sm btn-outline-primary disabled">Yakında</div>
                        </div>
                    </a>
                </div>
            </div>
        </section>
    </div>
</div>
