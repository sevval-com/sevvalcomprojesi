@using Microsoft.AspNetCore.Identity
@using Sevval.Domain.Entities
@inject UserManager<Sevval.Domain.Entities.ApplicationUser> UserManager

@{
    ViewData["Title"] = "Dopingler";
    Layout = "_Layout";
    ViewData["HideFooter"] = true;
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        body { background-color: #f0f2f5; }
        .doping-card {
            background: #fff;
            border-radius: 15px;
            box-shadow: 0 5px 25px rgba(0,0,0,0.07);
            transition: all 0.3s ease;
            text-decoration: none;
            color: inherit;
            display: block;
            overflow: hidden;
            border: 1px solid #eee;
        }
        .doping-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }
        .doping-card .card-header {
            padding: 2rem 1.5rem;
            text-align: center;
            color: white;
        }
        .doping-card .icon { font-size: 3.5rem; margin-bottom: 1rem; }
        .doping-card .card-title { font-size: 1.5rem; font-weight: 700; }
        .doping-card .card-body { padding: 1.5rem; text-align: center; }
        .doping-card .card-text { color: #6c757d; min-height: 60px; }
        .doping-card .price { font-size: 2.5rem; font-weight: 700; margin: 1.5rem 0; }
        .doping-card .btn { font-weight: bold; padding: 0.75rem 1.5rem; border-radius: 50px; }
        .gunun-ilani .card-header { background: linear-gradient(135deg, #FFD700, #FFA500); }
        .acil-acil .card-header { background: linear-gradient(135deg, #DC3545, #F06292); }
        .fiyati-dusenler .card-header { background: linear-gradient(135deg, #28A745, #20C997); }
    </style>
}

@Html.AntiForgeryToken()

<div class="container-fluid my-4">
    <div class="row g-lg-4 g-3">
        <aside class="col-lg-2">
            <div class="d-lg-none mb-3 px-3">
                <button class="btn btn-primary w-100 p-3" type="button" data-bs-toggle="collapse" data-bs-target="#controlPanel" aria-expanded="false" aria-controls="controlPanel">
                    <i class="fas fa-bars me-2"></i> Menü
                </button>
            </div>
            <div class="d-none d-lg-block" id="controlPanelDesktop">
                <div class="sticky-top" style="top: 20px;">
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0"><i class="fas fa-gem me-2"></i>Satın Al</h5>
                        </div>
                        <div class="list-group list-group-flush">
                            <a class="list-group-item list-group-item-action" href="@Url.Action("Index", "Satinal")"><i class="fas fa-box me-2"></i>Paketler</a>
                            <a class="list-group-item list-group-item-action active" aria-current="page" href="@Url.Action("Dopingler", "Satinal")"><i class="fas fa-rocket me-2"></i>Dopingler</a>
                            <a class="list-group-item list-group-item-action" href="@Url.Action("Panel", "Ilan")"><i class="fas fa-arrow-left me-2"></i>Panele Dön</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="collapse d-lg-none" id="controlPanel">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="fas fa-gem me-2"></i>Satın Al</h5>
                    </div>
                    <div class="list-group list-group-flush">
                        <a class="list-group-item list-group-item-action" href="@Url.Action("Index", "Satinal")"><i class="fas fa-box me-2"></i>Paketler</a>
                        <a class="list-group-item list-group-item-action active" aria-current="page" href="@Url.Action("Dopingler", "Satinal")"><i class="fas fa-rocket me-2"></i>Dopingler</a>
                        <a class="list-group-item list-group-item-action" href="@Url.Action("Panel", "Ilan")"><i class="fas fa-arrow-left me-2"></i>Panele Dön</a>
                    </div>
                </div>
            </div>
        </aside>
        <section class="col-lg-10">
            <h1 class="text-center mb-5 display-4 fw-bold text-primary">İlan Dopingleri</h1>
            <div class="row g-4">
                <div class="col-lg-4 col-md-6">
                    <a href="@Url.Action("GununIlaniTalep", "Satinal")" class="doping-card gunun-ilani">
                        <div class="card-header">
                            <div class="icon"><i class="bi bi-star-fill"></i></div>
                            <h3 class="card-title">Günün İlanı</h3>
                        </div>
                        <div class="card-body">
                            <p class="card-text">İlanınız bir gün boyunca ana sayfanın en üstünde yer alsın, tüm dikkatleri üzerinize çekin.</p>
                            <div class="price text-warning">50 <small>TL</small></div>
                            <div class="btn btn-warning">Hemen Başvur</div>
                        </div>
                    </a>
                </div>
            </div>
        </section>
    </div>
</div>
