@model List<Sevval.Domain.Entities.Sepet>
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Sepetim";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"] - Şevval Emlak</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/Anasayfa.css" />
    <style>
        body {
            background-color: #f0f2f5;
        }

        .product-item .card-body {
            padding: 1.5rem;
        }

        .quantity-input {
            max-width: 80px;
        }

        .summary-card {
            position: sticky;
            top: 20px;
        }
    </style>
</head>
<body>
    @Html.AntiForgeryToken()
    <!-- Navbar -->
    <nav class="navbaar">
        <div class="navbaar-container">
            <div class="logo">
                <a href="/">
                    <img src="~/images/LOGO mavi.png" alt="Firma Logosu">
                </a>
                <span>Şevval Emlak</span>
            </div>
            <div class="hamburger" id="hamburger-menu">
                <div class="line"></div>
                <div class="line"></div>
                <div class="line"></div>
            </div>
            <ul class="naav-linkss" id="nav-links">
                <li><a href="@Url.Action("Index", "Home")">Ana Sayfa</a></li>
                <li><a href="@Url.Action("KardesFirmalar", "Home")">Firmalar</a></li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li><a href="@Url.Action("Panel", "Ilan")">Mağazam</a></li>
                }
            </ul>
            <div class="auth-buttoons">
                @if (User.Identity.IsAuthenticated)
                {
                    var currentUser = await UserManager.GetUserAsync(User);
                    if (currentUser != null)
                    {
                        <div class="dropdown">
                            <a href="#" class="user-name">@currentUser.FirstName @currentUser.LastName</a>
                            <ul class="dropdown-content">
                                <li><a href="@Url.Action("Panel", "Ilan")">Panele Git</a></li>
                                <li>
                                    <form asp-action="Logout" asp-controller="Account" method="post">
                                        <button type="submit" class="logout-btn">Çıkış Yap</button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    }
                }
            </div>
        </div>
    </nav>

    <div class="container my-5">
        <header class="text-center mb-5">
            <h1 class="display-4 fw-bold text-primary">Sepetim</h1>
        </header>

        @if (ViewBag.Message != null || !Model.Any())
        {
            <div class="text-center py-5">
                <i class="bi bi-cart-x" style="font-size: 5rem; color: #6c757d;"></i>
                <h3 class="mt-4">Sepetiniz Boş</h3>
                <p class="text-muted">Görünüşe göre sepetinize henüz bir şey eklemediniz.</p>
                <a href="@Url.Action("Dopingler", "Satinal")" class="btn btn-primary mt-3">
                    <i class="bi bi-lightning-charge-fill me-2"></i>Dopinglere Göz At
                </a>
            </div>
        }
        else
        {
            <div class="row g-4">
                <div class="col-lg-8">
                    @foreach (var item in Model)
                    {
                        <div class="card shadow-sm mb-3 product-item">
                            <div class="card-body">
                                <div class="row align-items-center">
                                    <div class="col-md-6">
                                        <h5 class="mb-1">@item.UrunAdi</h5>
                                        <p class="text-muted small mb-0">İlan ID: @item.IlanId</p>
                                    </div>
                                    <div class="col-md-2 text-md-center">
                                        <span class="fw-bold fs-5">@item.Fiyat.ToString("C")</span>
                                    </div>
                                    <div class="col-md-4 d-flex align-items-center justify-content-end mt-3 mt-md-0">
                                        <input type="number" value="@item.Adet" min="1" class="form-control quantity-input me-2" onchange="updateCart(@item.Id, this.value)">
                                        <button class="btn btn-outline-danger" onclick="removeFromCart(@item.Id)">
                                            <i class="bi bi-trash-fill"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="col-lg-4">
                    <div class="card shadow-sm summary-card">
                        <div class="card-body p-4">
                            <h4 class="card-title text-center mb-4">Sipariş Özeti</h4>
                            <ul class="list-group list-group-flush mb-3">
                                <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0">
                                    Ara Toplam
                                    <span>@Model.Sum(x => x.Adet * x.Fiyat).ToString("C")</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 fw-bold">
                                    Toplam
                                    <span class="fs-5">@Model.Sum(x => x.Adet * x.Fiyat).ToString("C")</span>
                                </li>
                            </ul>
                            <div class="d-grid gap-2">
                                <a href="https://www.paytr.com/link/a-cjTxl" class="btn btn-primary btn-lg">
                                    <i class="bi bi-credit-card-fill me-2"></i>Ödemeye Geç
                                </a>
                                <button class="btn btn-outline-danger" onclick="clearCart()">
                                    <i class="bi bi-cart-x me-2"></i>Sepeti Temizle
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

        function updateCart(sepetId, newQuantity) {
            fetch('/Satinal/UpdateCart', {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded', 'RequestVerificationToken': token },
                body: `id=${sepetId}&adet=${newQuantity}`
            }).then(res => res.json()).then(data => { if (data.success) location.reload(); else alert('Hata oluştu.'); });
        }

        function removeFromCart(sepetId) {
            if (confirm('Ürünü sepetten kaldırmak istediğinize emin misiniz?')) {
                 fetch('/Satinal/RemoveFromCart', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded', 'RequestVerificationToken': token },
                    body: `id=${sepetId}`
                }).then(res => res.json()).then(data => { if (data.success) location.reload(); else alert('Hata oluştu.'); });
            }
        }

        function clearCart() {
            if (confirm('Sepeti tamamen boşaltmak istediğinizden emin misiniz?')) {
                fetch('/Satinal/ClearCart', {
                    method: 'POST',
                    headers: { 'RequestVerificationToken': token }
                }).then(res => res.json()).then(data => { if (data.success) location.reload(); else alert('Hata oluştu.'); });
            }
        }
    </script>
</body>
</html>

