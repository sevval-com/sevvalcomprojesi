@model List<Sevval.Domain.Entities.MembershipChangeRequest>

<div class="container mt-4">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Üyelik Değişim Talepleri</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Kullanıcı</th>
                            <th>Mevcut Üyelik</th>
                            <th>İstenen Üyelik</th>
                            <th>Şirket Bilgileri</th>
                            <th>Talep Tarihi</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var request in Model)
                        {
                            <tr>
                                <td>@request.User?.Email</td>
                                <td>@request.CurrentType</td>
                                <td>@request.RequestedType</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(request.CompanyName))
                                    {
                                        <button type="button" class="btn btn-sm btn-info" data-bs-toggle="modal" data-bs-target="#companyModal@(request.Id)">
                                            <i class="fas fa-building me-2"></i>Detaylar
                                        </button>

                                        <div class="modal fade" id="companyModal@(request.Id)" tabindex="-1">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Şirket Bilgileri</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="mb-2">
                                                            <strong>Şirket Adı:</strong> @request.CompanyName
                                                        </div>
                                                        <div class="mb-2">
                                                            <strong>Adres:</strong> @request.CompanyAddress
                                                        </div>
                                                        <div class="mb-2">
                                                            <strong>Vergi No:</strong> @request.TaxNumber
                                                        </div>
                                                        <div class="mb-2">
                                                            <strong>Telefon:</strong> @request.PhoneNumber
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </td>
                                <td>@request.RequestDate.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</td>
                                <td>
                                    @{
                                        var (statusText, statusClass) = request.Status switch
                                        {
                                            "Pending" => ("Beklemede", "warning"),
                                            "Approved" => ("Onaylandı", "success"),
                                            "Rejected" => ("Reddedildi", "danger"),
                                            "Cancelled" => ("İptal Edildi", "secondary"),
                                            _ => ("Bilinmiyor", "info")
                                        };
                                    }
                                    <span class="badge bg-@statusClass">@statusText</span>
                                </td>
                                <td>
                                    @if (request.Status == "Pending")
                                    {
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-sm btn-success" onclick="processRequest(@request.Id, 'Approved')">
                                                <i class="fas fa-check me-2"></i>Onayla
                                            </button>
                                            <button type="button" class="btn btn-sm btn-danger" onclick="processRequest(@request.Id, 'Rejected')">
                                                <i class="fas fa-times me-2"></i>Reddet
                                            </button>
                                        </div>
                                    }
                                    else
                                    {
                                        <small class="text-muted">
                                            @request.ProcessDate?.ToLocalTime().ToString("dd.MM.yyyy HH:mm")
                                            @if (!string.IsNullOrEmpty(request.AdminNote))
                                            {
                                                <br/>
                                                <span>Not: @request.AdminNote</span>
                                            }
                                        </small>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- İşlem Modalı -->
<div class="modal fade" id="processModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Üyelik Değişim Talebi İşlemi</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="processForm">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="requestId" name="id" />
                    <input type="hidden" id="action" name="action" />
                    
                    <div class="mb-3">
                        <label class="form-label">Not (Opsiyonel)</label>
                        <textarea class="form-control" name="note" rows="3"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-primary" onclick="submitProcess()">
                    <i class="fas fa-paper-plane me-2"></i>Gönder
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function processRequest(id, action) {
            $('#requestId').val(id);
            $('#action').val(action);
            $('#processModal').modal('show');
        }

        function submitProcess() {
            const form = $('#processForm');
            const formData = new FormData(form[0]);
            
            $.ajax({
                url: '@Url.Action("ProcessMembershipRequest")',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function(response) {
                    if (response.success) {
                        location.reload();
                    } else {
                        alert(response.message || 'Bir hata oluştu.');
                    }
                },
                error: function() {
                    alert('Bir hata oluştu.');
                }
            });
        }
    </script>
}
